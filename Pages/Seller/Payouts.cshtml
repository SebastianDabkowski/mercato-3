@page
@model MercatoApp.Pages.Seller.PayoutsModel
@{
    ViewData["Title"] = "Payouts - Seller Panel";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">
                <i class="bi bi-cash-stack"></i> Payouts
            </h1>
            <p class="text-muted">
                View payout history for @Model.CurrentStore?.StoreName
            </p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filter Payouts
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <!-- Status Filter -->
                <div class="col-md-4">
                    <label for="SelectedStatus" class="form-label">Status</label>
                    <select name="SelectedStatus" id="SelectedStatus" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="@((int)MercatoApp.Models.PayoutStatus.Scheduled)" selected="@(Model.SelectedStatus == MercatoApp.Models.PayoutStatus.Scheduled)">Scheduled</option>
                        <option value="@((int)MercatoApp.Models.PayoutStatus.Processing)" selected="@(Model.SelectedStatus == MercatoApp.Models.PayoutStatus.Processing)">Processing</option>
                        <option value="@((int)MercatoApp.Models.PayoutStatus.Paid)" selected="@(Model.SelectedStatus == MercatoApp.Models.PayoutStatus.Paid)">Paid</option>
                        <option value="@((int)MercatoApp.Models.PayoutStatus.Failed)" selected="@(Model.SelectedStatus == MercatoApp.Models.PayoutStatus.Failed)">Failed</option>
                    </select>
                </div>

                <!-- Date Range -->
                <div class="col-md-4">
                    <label for="FromDate" class="form-label">From Date</label>
                    <input type="date" class="form-control" id="FromDate" name="FromDate" 
                        value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-4">
                    <label for="ToDate" class="form-label">To Date</label>
                    <input type="date" class="form-control" id="ToDate" name="ToDate" 
                        value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                </div>

                <!-- Filter Actions -->
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                    <a asp-page="/Seller/Payouts" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Payouts.Any())
    {
        @if (Model.SelectedStatus != null || Model.FromDate != null || Model.ToDate != null)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No payouts found matching your filters. 
                Try adjusting your search criteria.
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> You don't have any payouts yet. 
                Payouts are automatically created based on your payout schedule.
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Payout History</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Payout #</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Scheduled For</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payout in Model.Payouts)
                        {
                            <tr>
                                <td>
                                    <a asp-page="/Seller/PayoutDetails" asp-route-payoutId="@payout.Id" class="text-decoration-none">
                                        @payout.PayoutNumber
                                    </a>
                                </td>
                                <td>
                                    <small>@payout.CreatedAt.ToString("MMM dd, yyyy")</small><br/>
                                    <small class="text-muted">@payout.CreatedAt.ToString("h:mm tt")</small>
                                </td>
                                <td>
                                    <strong>@payout.Amount.ToString("C")</strong>
                                    @if (!string.IsNullOrEmpty(payout.Currency) && payout.Currency != "USD")
                                    {
                                        <small class="text-muted">@payout.Currency</small>
                                    }
                                </td>
                                <td>
                                    @if (payout.Status == MercatoApp.Models.PayoutStatus.Scheduled)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Scheduled
                                        </span>
                                    }
                                    else if (payout.Status == MercatoApp.Models.PayoutStatus.Processing)
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-hourglass-split"></i> Processing
                                        </span>
                                    }
                                    else if (payout.Status == MercatoApp.Models.PayoutStatus.Paid)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Paid
                                        </span>
                                    }
                                    else if (payout.Status == MercatoApp.Models.PayoutStatus.Failed)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-circle"></i> Failed
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small>@payout.ScheduledDate.ToString("MMM dd, yyyy")</small>
                                    @if (payout.CompletedAt.HasValue)
                                    {
                                        <br/>
                                        <small class="text-success">
                                            <i class="bi bi-check"></i> Completed: @payout.CompletedAt.Value.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                    else if (payout.FailedAt.HasValue)
                                    {
                                        <br/>
                                        <small class="text-danger">
                                            <i class="bi bi-x"></i> Failed: @payout.FailedAt.Value.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                </td>
                                <td>
                                    <a asp-page="/Seller/PayoutDetails" asp-route-payoutId="@payout.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            <i class="bi bi-info-circle"></i> 
            Payouts are processed automatically based on your configured payout schedule.
            <a asp-page="/Seller/PayoutSettings">Manage payout settings</a>
        </div>
    }
</div>
