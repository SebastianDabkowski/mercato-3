@page
@model MercatoApp.Pages.Seller.OrdersModel
@{
    ViewData["Title"] = "Orders - Seller Panel";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">
                <i class="bi bi-box-seam"></i> Orders
            </h1>
            <p class="text-muted">
                Manage orders for @Model.CurrentStore?.StoreName
            </p>
        </div>
    </div>

    @if (!Model.SubOrders.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You don't have any orders yet. 
            Start by listing some products in your store!
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Order List</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sub-Order #</th>
                            <th>Parent Order</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subOrder in Model.SubOrders)
                        {
                            <tr>
                                <td>
                                    <a asp-page="/Seller/OrderDetails" asp-route-subOrderId="@subOrder.Id" class="text-decoration-none">
                                        @subOrder.SubOrderNumber
                                    </a>
                                </td>
                                <td>
                                    <small class="text-muted">@subOrder.ParentOrder.OrderNumber</small>
                                </td>
                                <td>
                                    <small>@subOrder.CreatedAt.ToString("MMM dd, yyyy")</small><br/>
                                    <small class="text-muted">@subOrder.CreatedAt.ToString("h:mm tt")</small>
                                </td>
                                <td>
                                    @if (subOrder.ParentOrder.User != null)
                                    {
                                        <span>@subOrder.ParentOrder.User.FirstName @subOrder.ParentOrder.User.LastName</span><br/>
                                        <small class="text-muted">@subOrder.ParentOrder.User.Email</small>
                                    }
                                    else if (!string.IsNullOrEmpty(subOrder.ParentOrder.GuestEmail))
                                    {
                                        <span>Guest</span><br/>
                                        <small class="text-muted">@subOrder.ParentOrder.GuestEmail</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>@subOrder.Items.Count item(s)</td>
                                <td>
                                    <strong>@subOrder.TotalAmount.ToString("C")</strong>
                                </td>
                                <td>
                                    @if (subOrder.Status == MercatoApp.Models.OrderStatus.New)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-hourglass-split"></i> New
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Paid)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Paid
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Preparing)
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-box-seam"></i> Preparing
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Shipped)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="bi bi-truck"></i> Shipped
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Delivered)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Delivered
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Cancelled)
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Cancelled
                                        </span>
                                    }
                                    else if (subOrder.Status == MercatoApp.Models.OrderStatus.Refunded)
                                    {
                                        <span class="badge bg-dark">
                                            <i class="bi bi-arrow-counterclockwise"></i> Refunded
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="/Seller/OrderDetails" asp-route-subOrderId="@subOrder.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            <i class="bi bi-info-circle"></i> 
            Showing @Model.SubOrders.Count order(s). Each sub-order represents your portion of a customer's order.
        </div>
    }
</div>
