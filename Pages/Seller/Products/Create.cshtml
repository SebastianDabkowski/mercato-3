@page
@model MercatoApp.Pages.Seller.Products.CreateModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Product</li>
                </ol>
            </nav>
            <h1>Add Product</h1>
            <p class="text-muted">Create a new product for your catalog. New products are saved as drafts and are not visible in the public catalog until activated.</p>
        </div>

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <form method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" aria-required="true" placeholder="e.g., Wireless Bluetooth Headphones" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                        <div class="form-text">Enter a descriptive title for your product (max 200 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Describe your product features, specifications, and benefits..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                        <div class="form-text">Provide a detailed description of your product (max 2000 characters).</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.Price" class="form-control" type="number" step="0.01" min="0.01" max="999999.99" aria-required="true" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                            <div class="form-text">Set your product price (between $0.01 and $999,999.99).</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Stock" class="form-label"></label>
                            <input asp-for="Input.Stock" class="form-control" type="number" min="0" aria-required="true" placeholder="0" />
                            <span asp-validation-for="Input.Stock" class="text-danger"></span>
                            <div class="form-text">Enter the available quantity in stock.</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Category" class="form-label"></label>
                        @if (Model.Categories.Count > 0)
                        {
                            <select id="category-select" class="form-select" aria-required="true">
                                <option value="">Select a category</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat.Value" data-name="@cat.Text.Split(" > ").Last()">@cat.Text</option>
                                }
                            </select>
                            <input type="hidden" asp-for="Input.CategoryId" id="category-id-input" />
                            <input type="hidden" asp-for="Input.Category" id="category-name-input" />
                        }
                        else
                        {
                            <select asp-for="Input.Category" class="form-select" aria-required="true">
                                <option value="">Select a category</option>
                                <option value="Electronics">Electronics</option>
                                <option value="Fashion">Fashion</option>
                                <option value="Home & Garden">Home & Garden</option>
                                <option value="Sports & Outdoors">Sports & Outdoors</option>
                                <option value="Books & Media">Books & Media</option>
                                <option value="Health & Beauty">Health & Beauty</option>
                                <option value="Toys & Games">Toys & Games</option>
                                <option value="Automotive">Automotive</option>
                                <option value="Food & Beverages">Food & Beverages</option>
                                <option value="Art & Crafts">Art & Crafts</option>
                                <option value="Other">Other</option>
                            </select>
                        }
                        <span asp-validation-for="Input.Category" class="text-danger"></span>
                        <div class="form-text">Select the category that best describes your product.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ImageUrls" class="form-label"></label>
                        <textarea asp-for="Input.ImageUrls" class="form-control" rows="2" placeholder="https://example.com/image1.jpg,https://example.com/image2.jpg"></textarea>
                        <span asp-validation-for="Input.ImageUrls" class="text-danger"></span>
                        <div class="form-text">Enter comma-separated image URLs for your product.</div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Shipping Parameters</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Weight" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Weight" class="form-control" type="number" step="0.01" min="0" max="1000" placeholder="0.00" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="Input.Weight" class="text-danger"></span>
                            <div class="form-text">Product weight for shipping calculation (optional).</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Length" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Length" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Length" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Width" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Width" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Width" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Height" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Height" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Height" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-text mb-3">Product dimensions for shipping calculation (optional).</div>

                    <div class="mb-3">
                        <label asp-for="Input.ShippingMethods" class="form-label"></label>
                        <input asp-for="Input.ShippingMethods" class="form-control" placeholder="Standard,Express,Overnight" />
                        <span asp-validation-for="Input.ShippingMethods" class="text-danger"></span>
                        <div class="form-text">Enter comma-separated shipping methods available for this product (e.g., Standard,Express,Overnight).</div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info" role="alert">
                <strong>Note:</strong> Your product will be saved with a <span class="badge bg-secondary">Draft</span> status. You can activate it later to make it visible in the public catalog.
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Create Product</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.Categories.Count > 0)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var categorySelect = document.getElementById('category-select');
                var categoryIdInput = document.getElementById('category-id-input');
                var categoryNameInput = document.getElementById('category-name-input');
                
                if (categorySelect && categoryIdInput && categoryNameInput) {
                    categorySelect.addEventListener('change', function() {
                        var selectedOption = this.options[this.selectedIndex];
                        if (selectedOption.value) {
                            categoryIdInput.value = selectedOption.value;
                            categoryNameInput.value = selectedOption.getAttribute('data-name') || selectedOption.text.split(' > ').pop();
                        } else {
                            categoryIdInput.value = '';
                            categoryNameInput.value = '';
                        }
                    });
                }
            });
        </script>
    }
}
