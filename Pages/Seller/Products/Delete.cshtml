@page "{id:int}"
@model MercatoApp.Pages.Seller.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Product</li>
                </ol>
            </nav>
            <h1>Delete Product</h1>
            <p class="text-muted">Are you sure you want to delete this product?</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (Model.Product != null)
        {
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">You are about to delete the following product:</p>
                    
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9"><strong>@Model.Product.Title</strong></dd>
                        
                        @if (!string.IsNullOrEmpty(Model.Product.Description))
                        {
                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Product.Description</dd>
                        }
                        
                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Model.Product.Price.ToString("C")</dd>
                        
                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">@Model.Product.Stock units</dd>
                        
                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Product.Category</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @DeleteModel.GetStatusBadgeClass(Model.Product.Status)">
                                @Model.Product.Status
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.Product.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</dd>
                    </dl>
                </div>
            </div>

            <div class="alert alert-warning" role="alert">
                <strong>Warning:</strong> Deleting this product will:
                <ul class="mb-0 mt-2">
                    <li>Remove it from your public product listings</li>
                    <li>Make it inaccessible to buyers via direct links</li>
                    <li>Archive the product for your records (it will not be permanently deleted)</li>
                </ul>
            </div>

            <form method="post">
                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Product
                    </button>
                </div>
            </form>
        }
    </div>
</div>
