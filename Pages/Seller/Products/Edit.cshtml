@page "{id:int}"
@model MercatoApp.Pages.Seller.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
                </ol>
            </nav>
            <h1>Edit Product</h1>
            <p class="text-muted">Update your product information. Changes will be saved immediately.</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <!-- Product Images Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Product Images</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <p class="text-muted mb-3">Upload images for your product. Supported formats: JPG, PNG, WebP. Maximum size: 5 MB per image. Maximum 10 images per product.</p>
                    
                    @if (Model.ProductImages.Count > 0)
                    {
                        <div class="row g-3 mb-3">
                            @foreach (var image in Model.ProductImages)
                            {
                                <div class="col-6 col-md-4 col-lg-3">
                                    <div class="card h-100 @(image.IsMain ? "border-primary" : "")">
                                        <img src="@image.ThumbnailUrl" class="card-img-top" alt="Product image" style="height: 150px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            @if (image.IsMain)
                                            {
                                                <span class="badge bg-primary mb-2">Main Image</span>
                                            }
                                            <div class="btn-group w-100" role="group">
                                                @if (!image.IsMain)
                                                {
                                                    <form method="post" asp-page-handler="SetMainImage" asp-route-id="@Model.Product?.Id" asp-route-imageId="@image.Id" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-primary" title="Set as main">
                                                            <i class="bi bi-star"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <form method="post" asp-page-handler="DeleteImage" asp-route-id="@Model.Product?.Id" asp-route-imageId="@image.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle"></i> No images uploaded yet. Upload your first product image below.
                        </div>
                    }

                    @if (Model.ProductImages.Count < 10)
                    {
                        <form method="post" asp-page-handler="UploadImages" asp-route-id="@Model.Product?.Id" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label">Upload New Images</label>
                                <input type="file" class="form-control" name="UploadedImages" multiple accept=".jpg,.jpeg,.png,.webp,image/jpeg,image/png,image/webp" id="imageUploadInput">
                                <div class="form-text">Select one or more images to upload. You can upload up to @(10 - Model.ProductImages.Count) more image(s).</div>
                            </div>
                            <div id="imagePreviewContainer" class="row g-2 mb-3" style="display: none;"></div>
                            <button type="submit" class="btn btn-outline-primary" id="uploadButton" disabled>
                                <i class="bi bi-upload"></i> Upload Images
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Maximum number of images (10) reached. Delete existing images to upload new ones.
                        </div>
                    }
                </div>
            </div>
        </div>

        <form method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" aria-required="true" placeholder="e.g., Wireless Bluetooth Headphones" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                        <div class="form-text">Enter a descriptive title for your product (max 200 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Describe your product features, specifications, and benefits..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                        <div class="form-text">Provide a detailed description of your product (max 2000 characters).</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.Price" class="form-control" type="number" step="0.01" min="0.01" max="999999.99" aria-required="true" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                            <div class="form-text">Set your product price (between $0.01 and $999,999.99).</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Stock" class="form-label"></label>
                            <input asp-for="Input.Stock" class="form-control" type="number" min="0" aria-required="true" placeholder="0" />
                            <span asp-validation-for="Input.Stock" class="text-danger"></span>
                            <div class="form-text">Enter the available quantity in stock.</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Category" class="form-label"></label>
                            @if (Model.Categories.Count > 0)
                            {
                                <select id="category-select" class="form-select" aria-required="true">
                                    <option value="">Select a category</option>
                                    @foreach (var cat in Model.Categories)
                                    {
                                        var isSelected = Model.Input.CategoryId == cat.Id;
                                        <option value="@cat.Id" data-name="@cat.DisplayName" selected="@isSelected">@cat.FullPath</option>
                                    }
                                </select>
                                <input type="hidden" asp-for="Input.CategoryId" id="category-id-input" />
                                <input type="hidden" asp-for="Input.Category" id="category-name-input" />
                            }
                            else
                            {
                                <select asp-for="Input.Category" class="form-select" aria-required="true">
                                    <option value="">Select a category</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Fashion">Fashion</option>
                                    <option value="Home & Garden">Home & Garden</option>
                                    <option value="Sports & Outdoors">Sports & Outdoors</option>
                                    <option value="Books & Media">Books & Media</option>
                                    <option value="Health & Beauty">Health & Beauty</option>
                                    <option value="Toys & Games">Toys & Games</option>
                                    <option value="Automotive">Automotive</option>
                                    <option value="Food & Beverages">Food & Beverages</option>
                                    <option value="Art & Crafts">Art & Crafts</option>
                                    <option value="Other">Other</option>
                                </select>
                            }
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                            <div class="form-text">Select the category that best describes your product.</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Status" class="form-label"></label>
                            <select asp-for="Input.Status" asp-items="Model.StatusOptions" class="form-select" aria-required="true">
                            </select>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                            <div class="form-text">
                                <strong>Draft:</strong> Not visible in public catalog.<br />
                                <strong>Active:</strong> Visible and searchable in public catalog. Requires valid title, description, category, price, stock, and images.<br />
                                <strong>Suspended:</strong> No longer available for new orders but visible in order history.
                            </div>
                        </div>
                    </div>

                    <!-- Hidden field to maintain backward compatibility with ImageUrls -->
                    <input type="hidden" asp-for="Input.ImageUrls" />
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Shipping Parameters</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Weight" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Weight" class="form-control" type="number" step="0.01" min="0" max="1000" placeholder="0.00" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="Input.Weight" class="text-danger"></span>
                            <div class="form-text">Product weight for shipping calculation (optional).</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Length" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Length" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Length" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Width" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Width" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Width" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Height" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Height" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="0" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Input.Height" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-text mb-3">Product dimensions for shipping calculation (optional).</div>

                    <div class="mb-3">
                        <label asp-for="Input.ShippingMethods" class="form-label"></label>
                        <input asp-for="Input.ShippingMethods" class="form-control" placeholder="Standard,Express,Overnight" />
                        <span asp-validation-for="Input.ShippingMethods" class="text-danger"></span>
                        <div class="form-text">Enter comma-separated shipping methods available for this product (e.g., Standard,Express,Overnight).</div>
                    </div>
                </div>
            </div>

            <div class="alert alert-warning" role="alert">
                <strong>Note:</strong> Changes to price or stock may affect pending orders. Please review carefully before saving.
            </div>

            <div class="d-flex justify-content-between">
                <div>
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    <a asp-page="Delete" asp-route-id="@Model.Product?.Id" class="btn btn-outline-danger ms-2">Delete Product</a>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Category selection handling
            var categorySelect = document.getElementById('category-select');
            var categoryIdInput = document.getElementById('category-id-input');
            var categoryNameInput = document.getElementById('category-name-input');
            
            if (categorySelect && categoryIdInput && categoryNameInput) {
                categorySelect.addEventListener('change', function() {
                    var selectedOption = this.options[this.selectedIndex];
                    if (selectedOption.value) {
                        categoryIdInput.value = selectedOption.value;
                        categoryNameInput.value = selectedOption.getAttribute('data-name') || '';
                    } else {
                        categoryIdInput.value = '';
                        categoryNameInput.value = '';
                    }
                });
            }

            // Image upload preview handling
            var imageUploadInput = document.getElementById('imageUploadInput');
            var uploadButton = document.getElementById('uploadButton');
            var previewContainer = document.getElementById('imagePreviewContainer');
            var maxFileSize = 5 * 1024 * 1024; // 5 MB
            var allowedTypes = ['image/jpeg', 'image/png', 'image/webp'];

            if (imageUploadInput && uploadButton && previewContainer) {
                imageUploadInput.addEventListener('change', function() {
                    previewContainer.innerHTML = '';
                    var files = this.files;
                    var validFiles = 0;
                    var errors = [];

                    for (var i = 0; i < files.length; i++) {
                        var file = files[i];
                        
                        // Validate file type
                        if (!allowedTypes.includes(file.type)) {
                            errors.push(file.name + ': Unsupported file format. Use JPG, PNG, or WebP.');
                            continue;
                        }
                        
                        // Validate file size
                        if (file.size > maxFileSize) {
                            errors.push(file.name + ': File size exceeds 5 MB limit.');
                            continue;
                        }

                        validFiles++;
                        
                        // Create preview
                        var reader = new FileReader();
                        reader.onload = (function(file) {
                            return function(e) {
                                var col = document.createElement('div');
                                col.className = 'col-4 col-md-3';
                                
                                var img = document.createElement('img');
                                img.src = e.target.result;
                                img.className = 'img-thumbnail';
                                img.style.height = '100px';
                                img.style.width = '100%';
                                img.style.objectFit = 'cover';
                                img.alt = file.name;
                                
                                col.appendChild(img);
                                previewContainer.appendChild(col);
                            };
                        })(file);
                        reader.readAsDataURL(file);
                    }

                    if (validFiles > 0) {
                        previewContainer.style.display = 'flex';
                        uploadButton.disabled = false;
                    } else {
                        previewContainer.style.display = 'none';
                        uploadButton.disabled = true;
                    }

                    // Show validation errors
                    if (errors.length > 0) {
                        var errorDiv = document.createElement('div');
                        errorDiv.className = 'col-12 text-danger mt-2';
                        errorDiv.innerHTML = '<small>' + errors.join('<br>') + '</small>';
                        previewContainer.appendChild(errorDiv);
                        previewContainer.style.display = 'flex';
                    }
                });
            }
        });
    </script>
}
