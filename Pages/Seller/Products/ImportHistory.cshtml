@page
@model MercatoApp.Pages.Seller.Products.ImportHistoryModel
@{
    ViewData["Title"] = "Import History";
}

<div class="row justify-content-center">
    <div class="col-md-12 col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Import History</h1>
                <p class="text-muted mb-0">View the status of your product import jobs.</p>
            </div>
            <a asp-page="Import" class="btn btn-primary">
                <i class="bi bi-upload"></i> New Import
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.ImportJobs.Count == 0)
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <h4 class="text-muted mb-3">No Import History</h4>
                    <p class="text-muted mb-4">You haven't imported any products yet.</p>
                    <a asp-page="Import" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Import Products Now
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>File Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th class="text-end">Total</th>
                                <th class="text-end">Created</th>
                                <th class="text-end">Updated</th>
                                <th class="text-end">Failed</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.ImportJobs)
                            {
                                <tr>
                                    <td>@job.CreatedAt.ToString("MMM d, yyyy HH:mm")</td>
                                    <td>
                                        <i class="bi bi-file-earmark-text"></i> @job.FileName
                                    </td>
                                    <td>@job.FileType</td>
                                    <td>
                                        <span class="badge @ImportHistoryModel.GetStatusBadgeClass(job.Status)">
                                            @job.Status
                                        </span>
                                    </td>
                                    <td class="text-end">@job.TotalRows</td>
                                    <td class="text-end text-success">@job.CreatedCount</td>
                                    <td class="text-end text-info">@job.UpdatedCount</td>
                                    <td class="text-end text-danger">@job.FailedCount</td>
                                    <td class="text-end">
                                        <a asp-page="ImportDetails" asp-route-id="@job.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        @if (job.FailedCount > 0)
                                        {
                                            <a asp-page-handler="DownloadErrors" asp-route-id="@job.Id" class="btn btn-sm btn-outline-danger ms-1" title="Download Error Report">
                                                <i class="bi bi-download"></i> Errors
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3 text-muted">
                <small>Showing @Model.ImportJobs.Count import job(s)</small>
            </div>
        }

        <div class="mt-4">
            <a asp-page="Index" class="btn btn-outline-secondary">
                ‚Üê Back to Products
            </a>
        </div>
    </div>
</div>
