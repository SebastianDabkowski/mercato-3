@page
@model MercatoApp.Pages.Seller.OrderExportModel
@{
    ViewData["Title"] = "Export Orders";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <h1>Export Orders</h1>
            <p class="text-muted">Export your order data to CSV or Excel format.</p>
        </div>

        @if (Model.ErrorMessages.Count > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error</strong>
                <ul class="mb-0">
                    @foreach (var error in Model.ErrorMessages)
                    {
                        <li>@error</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Export Options</h5>
                <p class="text-muted">Choose the format for your order export.</p>

                <form method="post">
                    <input type="hidden" name="SelectedStatuses" value="@(Model.SelectedStatuses != null ? string.Join(",", Model.SelectedStatuses.Select(s => (int)s)) : "")" />
                    <input type="hidden" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                    <input type="hidden" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                    <input type="hidden" name="BuyerEmail" value="@Model.BuyerEmail" />

                    <div class="mb-3">
                        <label class="form-label">Export Format</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ExportFormat" id="formatCsv" value="csv" checked>
                            <label class="form-check-label" for="formatCsv">
                                <strong>CSV (Comma-Separated Values)</strong>
                                <p class="text-muted mb-0 small">Compatible with Excel, Google Sheets, and most spreadsheet applications</p>
                            </label>
                        </div>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="radio" name="ExportFormat" id="formatExcel" value="excel">
                            <label class="form-check-label" for="formatExcel">
                                <strong>Excel (.xlsx)</strong>
                                <p class="text-muted mb-0 small">Microsoft Excel native format with formatting</p>
                            </label>
                        </div>
                    </div>

                    @if (Model.HasActiveFilters)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Active Filters:</strong> The export will include only orders matching your current filters.
                            <ul class="mt-2 mb-0">
                                @if (Model.SelectedStatuses != null && Model.SelectedStatuses.Any())
                                {
                                    <li>Status: @string.Join(", ", Model.SelectedStatuses)</li>
                                }
                                @if (Model.FromDate.HasValue)
                                {
                                    <li>From Date: @Model.FromDate.Value.ToString("MMM dd, yyyy")</li>
                                }
                                @if (Model.ToDate.HasValue)
                                {
                                    <li>To Date: @Model.ToDate.Value.ToString("MMM dd, yyyy")</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.BuyerEmail))
                                {
                                    <li>Buyer Email: @Model.BuyerEmail</li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> All orders from your store will be exported.
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-download"></i> Download Export
                        </button>
                        <a asp-page="Orders" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Export Information</h5>
                <p class="text-muted">The export file includes comprehensive logistics data for external systems and partners.</p>
                <h6 class="mt-3">Included Columns:</h6>
                <ul class="mb-2">
                    <li><strong>Order Identifiers:</strong> Sub-Order Number, Parent Order Number, Created Date, Status</li>
                    <li><strong>Buyer Contact:</strong> Name, Email, Phone Number</li>
                    <li><strong>Delivery Address:</strong> Address Line 1, Address Line 2, City, State/Province, Postal Code, Country Code, Delivery Instructions</li>
                    <li><strong>Shipping Details:</strong> Shipping Method, Tracking Number, Carrier Name</li>
                    <li><strong>Financial Summary:</strong> Total Amount, Shipping Cost, Subtotal</li>
                    <li><strong>Order Items:</strong> Item Count, Detailed Items List (Product Name, Variant, Quantity, Unit Price)</li>
                </ul>
                <h6 class="mt-3">Additional Notes:</h6>
                <ul class="mb-0">
                    <li>Export respects your current filters - only matching orders are included.</li>
                    <li>Files are compatible with common spreadsheet tools and ERP/WMS systems.</li>
                    <li>All dates and times are in UTC format.</li>
                    <li>CSV format uses proper escaping for special characters.</li>
                    <li>Excel format includes formatting and auto-fit columns.</li>
                </ul>
            </div>
        </div>

        <div class="mt-4">
            <a asp-page="Orders" class="btn btn-outline-secondary">
                ‚Üê Back to Orders
            </a>
        </div>
    </div>
</div>
