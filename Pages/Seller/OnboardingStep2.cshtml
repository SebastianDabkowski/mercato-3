@page
@model MercatoApp.Pages.Seller.OnboardingStep2Model
@{
    ViewData["Title"] = "Seller Onboarding - Verification";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <h1>Seller Onboarding</h1>
            <p class="text-muted">Step 2 of 3: Verification Data</p>
            
            <!-- Progress Bar -->
            <div class="progress mb-4" style="height: 10px;">
                <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Business Information</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Provide verification information to activate your seller account. This information is required for compliance and will be verified.</p>
                    
                    <div class="mb-3">
                        <label asp-for="Input.BusinessType" class="form-label"></label>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.BusinessType" value="Individual" id="businessTypeIndividual" />
                                    <label class="form-check-label" for="businessTypeIndividual">
                                        <strong>Individual</strong>
                                        <br />
                                        <small class="text-muted">Selling as a private person</small>
                                    </label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.BusinessType" value="Business" id="businessTypeBusiness" />
                                    <label class="form-check-label" for="businessTypeBusiness">
                                        <strong>Business</strong>
                                        <br />
                                        <small class="text-muted">Selling as a registered company</small>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.BusinessType" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3" id="businessRegistrationSection">
                        <label asp-for="Input.BusinessRegistrationNumber" class="form-label"></label>
                        <input asp-for="Input.BusinessRegistrationNumber" class="form-control" placeholder="e.g., 12345678" />
                        <span asp-validation-for="Input.BusinessRegistrationNumber" class="text-danger"></span>
                        <div class="form-text">Your official business registration number (required for business accounts).</div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.TaxId" class="form-label"></label>
                        <input asp-for="Input.TaxId" class="form-control" placeholder="e.g., VAT123456" />
                        <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                        <div class="form-text">Your tax identification number (VAT number for EU sellers).</div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="OnboardingStep1" class="btn btn-outline-secondary">← Back to Store Profile</a>
                <button type="submit" class="btn btn-primary">Continue to Payout →</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show/hide business registration field based on business type
        document.addEventListener('DOMContentLoaded', function() {
            const businessRadios = document.querySelectorAll('input[name="Input.BusinessType"]');
            const registrationSection = document.getElementById('businessRegistrationSection');
            
            function updateRegistrationVisibility() {
                const selectedType = document.querySelector('input[name="Input.BusinessType"]:checked');
                if (selectedType && selectedType.value === 'Business') {
                    registrationSection.style.display = 'block';
                } else {
                    registrationSection.style.display = 'block'; // Keep visible but optional for Individual
                }
            }
            
            businessRadios.forEach(radio => {
                radio.addEventListener('change', updateRegistrationVisibility);
            });
            
            updateRegistrationVisibility();
        });
    </script>
}
