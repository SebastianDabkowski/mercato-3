@page
@model MercatoApp.Pages.Seller.InviteUserModel
@{
    ViewData["Title"] = "Invite Team Member";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <h1>Invite Team Member</h1>
            <p class="text-muted">Send an invitation to add a new team member to your store.</p>
        </div>

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <form method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Invitation Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" type="email" placeholder="colleague@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="form-text">Enter the email address of the person you want to invite.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Role" class="form-label"></label>
                        <select asp-for="Input.Role" class="form-select">
                            @foreach (var role in Enum.GetValues<MercatoApp.Models.StoreRole>())
                            {
                                if (role != MercatoApp.Models.StoreRole.StoreOwner)
                                {
                                    <option value="@role">@MercatoApp.Models.StoreRoleNames.GetDisplayName(role)</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>

                    <!-- Role Descriptions -->
                    <div class="alert alert-info">
                        <h6 class="alert-heading">Role Permissions</h6>
                        <ul class="mb-0 small">
                            <li><strong>Catalog Manager:</strong> Can manage products, categories, and inventory.</li>
                            <li><strong>Order Manager:</strong> Can view and process orders.</li>
                            <li><strong>Read Only / Accounting:</strong> Read-only access for reporting and accounting purposes.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Invitation Details</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-envelope text-primary me-2"></i>
                            The user will receive an invitation email.
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-clock text-primary me-2"></i>
                            The invitation expires in 7 days.
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-person-plus text-primary me-2"></i>
                            New users will need to create an account to accept.
                        </li>
                        <li>
                            <i class="bi bi-shield-check text-primary me-2"></i>
                            Existing users can accept with their current account.
                        </li>
                    </ul>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="Users" class="btn btn-outline-secondary">‚Üê Cancel</a>
                <button type="submit" class="btn btn-primary">Send Invitation</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
