@page
@model MercatoApp.Pages.Seller.OnboardingStep1Model
@{
    ViewData["Title"] = "Seller Onboarding - Store Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <h1>Seller Onboarding</h1>
            <p class="text-muted">Step 1 of 3: Store Profile Basics</p>
            
            <!-- Progress Bar -->
            <div class="progress mb-4" style="height: 10px;">
                <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Store Information</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Enter the basic information about your store. This will be visible to buyers.</p>
                    
                    <div class="mb-3">
                        <label asp-for="Input.StoreName" class="form-label"></label>
                        <input asp-for="Input.StoreName" class="form-control" aria-required="true" placeholder="e.g., My Awesome Store" />
                        <span asp-validation-for="Input.StoreName" class="text-danger"></span>
                        <div class="form-text">Choose a unique and memorable name for your store (max 100 characters).</div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Tell buyers about your store and what you sell..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                        <div class="form-text">Describe your store and products to attract buyers (max 1000 characters).</div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Category" class="form-label"></label>
                        <select asp-for="Input.Category" class="form-select">
                            <option value="">Select a category</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Fashion">Fashion</option>
                            <option value="Home & Garden">Home & Garden</option>
                            <option value="Sports & Outdoors">Sports & Outdoors</option>
                            <option value="Books & Media">Books & Media</option>
                            <option value="Health & Beauty">Health & Beauty</option>
                            <option value="Toys & Games">Toys & Games</option>
                            <option value="Automotive">Automotive</option>
                            <option value="Food & Beverages">Food & Beverages</option>
                            <option value="Art & Crafts">Art & Crafts</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Input.Category" class="text-danger"></span>
                        <div class="form-text">Select the main category for your products.</div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Continue to Verification â†’</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
