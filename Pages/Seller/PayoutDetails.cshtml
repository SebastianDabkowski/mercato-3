@page
@model MercatoApp.Pages.Seller.PayoutDetailsModel
@{
    ViewData["Title"] = "Payout Details - Seller Panel";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">
                <i class="bi bi-cash-stack"></i> Payout Details
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Seller/Payouts">Payouts</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @Model.Payout?.PayoutNumber
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model.Payout == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Payout not found.
        </div>
    }
    else
    {
        <!-- Payout Summary Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Payout Summary</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Payout Number:</dt>
                            <dd class="col-sm-8">@Model.Payout.PayoutNumber</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Payout.Status == MercatoApp.Models.PayoutStatus.Scheduled)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Scheduled
                                    </span>
                                }
                                else if (Model.Payout.Status == MercatoApp.Models.PayoutStatus.Processing)
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-hourglass-split"></i> Processing
                                    </span>
                                }
                                else if (Model.Payout.Status == MercatoApp.Models.PayoutStatus.Paid)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Paid
                                    </span>
                                }
                                else if (Model.Payout.Status == MercatoApp.Models.PayoutStatus.Failed)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-circle"></i> Failed
                                    </span>
                                }
                            </dd>

                            <dt class="col-sm-4">Amount:</dt>
                            <dd class="col-sm-8">
                                <strong class="text-success fs-5">@Model.Payout.Amount.ToString("C")</strong>
                                @if (!string.IsNullOrEmpty(Model.Payout.Currency) && Model.Payout.Currency != "USD")
                                {
                                    <small class="text-muted">@Model.Payout.Currency</small>
                                }
                            </dd>

                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.Payout.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Scheduled Date:</dt>
                            <dd class="col-sm-8">@Model.Payout.ScheduledDate.ToString("MMMM dd, yyyy")</dd>

                            @if (Model.Payout.InitiatedAt.HasValue)
                            {
                                <dt class="col-sm-4">Initiated:</dt>
                                <dd class="col-sm-8">@Model.Payout.InitiatedAt.Value.ToString("MMMM dd, yyyy h:mm tt")</dd>
                            }

                            @if (Model.Payout.CompletedAt.HasValue)
                            {
                                <dt class="col-sm-4">Completed:</dt>
                                <dd class="col-sm-8 text-success">
                                    <i class="bi bi-check-circle"></i> @Model.Payout.CompletedAt.Value.ToString("MMMM dd, yyyy h:mm tt")
                                </dd>
                            }

                            @if (Model.Payout.FailedAt.HasValue)
                            {
                                <dt class="col-sm-4">Failed:</dt>
                                <dd class="col-sm-8 text-danger">
                                    <i class="bi bi-x-circle"></i> @Model.Payout.FailedAt.Value.ToString("MMMM dd, yyyy h:mm tt")
                                </dd>
                            }

                            @if (Model.Payout.PayoutMethod != null)
                            {
                                <dt class="col-sm-4">Payout Method:</dt>
                                <dd class="col-sm-8">
                                    @Model.Payout.PayoutMethod.DisplayName
                                    @if (!string.IsNullOrEmpty(Model.Payout.PayoutMethod.BankAccountNumberLast4))
                                    {
                                        <span>(...@Model.Payout.PayoutMethod.BankAccountNumberLast4)</span>
                                    }
                                </dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Payout.ExternalTransactionId))
                            {
                                <dt class="col-sm-4">Transaction ID:</dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">@Model.Payout.ExternalTransactionId</small>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>

                @if (Model.Payout.Status == MercatoApp.Models.PayoutStatus.Failed && !string.IsNullOrEmpty(Model.Payout.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Failure Reason
                        </h6>
                        <p class="mb-0">@Model.Payout.ErrorMessage</p>
                        @if (!string.IsNullOrEmpty(Model.Payout.ErrorReference))
                        {
                            <p class="mb-0 mt-2">
                                <small>Error Reference: <code>@Model.Payout.ErrorReference</code></small>
                            </p>
                        }
                        @if (Model.Payout.NextRetryDate.HasValue)
                        {
                            <p class="mb-0 mt-2">
                                <small>Next Retry: @Model.Payout.NextRetryDate.Value.ToString("MMMM dd, yyyy h:mm tt")</small>
                            </p>
                        }
                        @if (Model.Payout.RetryCount > 0)
                        {
                            <p class="mb-0 mt-2">
                                <small>Retry Attempts: @Model.Payout.RetryCount / @Model.Payout.MaxRetryAttempts</small>
                            </p>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Order Breakdown -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Order Breakdown</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sub-Order #</th>
                            <th>Parent Order</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Items</th>
                            <th>Gross Amount</th>
                            <th>Commission</th>
                            <th>Net Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.EscrowTransactions.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle"></i> No transactions found for this payout.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var escrow in Model.EscrowTransactions)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="/Seller/OrderDetails" asp-route-subOrderId="@escrow.SellerSubOrderId" class="text-decoration-none">
                                            @escrow.SellerSubOrder.SubOrderNumber
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted">@escrow.SellerSubOrder.ParentOrder.OrderNumber</small>
                                    </td>
                                    <td>
                                        <small>@escrow.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (escrow.SellerSubOrder.ParentOrder.User != null)
                                        {
                                            <span>@escrow.SellerSubOrder.ParentOrder.User.FirstName @escrow.SellerSubOrder.ParentOrder.User.LastName</span><br/>
                                            <small class="text-muted">@escrow.SellerSubOrder.ParentOrder.User.Email</small>
                                        }
                                        else if (!string.IsNullOrEmpty(escrow.SellerSubOrder.ParentOrder.GuestEmail))
                                        {
                                            <span>Guest</span><br/>
                                            <small class="text-muted">@escrow.SellerSubOrder.ParentOrder.GuestEmail</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unknown</span>
                                        }
                                    </td>
                                    <td>@escrow.SellerSubOrder.Items.Count item(s)</td>
                                    <td>@escrow.GrossAmount.ToString("C")</td>
                                    <td class="text-danger">-@escrow.CommissionAmount.ToString("C")</td>
                                    <td>
                                        <strong>@((escrow.NetAmount - escrow.RefundedAmount).ToString("C"))</strong>
                                        @if (escrow.RefundedAmount > 0)
                                        {
                                            <br/>
                                            <small class="text-muted">
                                                (Refunded: @escrow.RefundedAmount.ToString("C"))
                                            </small>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    @if (Model.EscrowTransactions.Any())
                    {
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@Model.EscrowTransactions.Sum(e => e.GrossAmount).ToString("C")</strong></td>
                                <td class="text-danger"><strong>-@Model.EscrowTransactions.Sum(e => e.CommissionAmount).ToString("C")</strong></td>
                                <td><strong>@Model.EscrowTransactions.Sum(e => e.NetAmount - e.RefundedAmount).ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a asp-page="/Seller/Payouts" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Payouts
            </a>
        </div>

        <div class="mt-3 text-muted small">
            <i class="bi bi-info-circle"></i> 
            This breakdown shows all orders included in this payout. Financial data is immutable once the payout is created.
        </div>
    }
</div>
