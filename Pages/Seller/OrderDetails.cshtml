@page
@model MercatoApp.Pages.Seller.OrderDetailsModel
@{
    ViewData["Title"] = "Order Details - Seller Panel";
}

<div class="container-fluid my-4">
    @if (Model.SubOrder != null)
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Seller/Orders">Orders</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.SubOrder.SubOrderNumber</li>
                    </ol>
                </nav>
                <h1 class="mb-3">
                    <i class="bi bi-box-seam"></i> Order Details
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Sub-Order #@Model.SubOrder.SubOrderNumber</h5>
                            @if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.New)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split"></i> New
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Paid)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Paid
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Preparing)
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-box-seam"></i> Preparing
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Shipped)
                            {
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-truck"></i> Shipped
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Delivered)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Delivered
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Cancelled)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelled
                                </span>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Refunded)
                            {
                                <span class="badge bg-dark">
                                    <i class="bi bi-arrow-counterclockwise"></i> Refunded
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6>Order Information</h6>
                                <p class="text-muted mb-1">
                                    <strong>Created:</strong> @Model.SubOrder.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                </p>
                                <p class="text-muted mb-1">
                                    <strong>Parent Order:</strong> @Model.SubOrder.ParentOrder.OrderNumber
                                </p>
                                <p class="text-muted mb-0">
                                    <strong>Payment Status:</strong>
                                    @if (Model.SubOrder.ParentOrder.PaymentStatus == MercatoApp.Models.PaymentStatus.Completed)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (Model.SubOrder.ParentOrder.PaymentStatus == MercatoApp.Models.PaymentStatus.Authorized)
                                    {
                                        <span class="badge bg-info">Authorized</span>
                                    }
                                    else if (Model.SubOrder.ParentOrder.PaymentStatus == MercatoApp.Models.PaymentStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (Model.SubOrder.ParentOrder.PaymentStatus == MercatoApp.Models.PaymentStatus.Failed)
                                    {
                                        <span class="badge bg-danger">Failed</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6>Shipping Method</h6>
                                @if (Model.SubOrder.ShippingMethod != null)
                                {
                                    <p class="text-muted mb-1">
                                        <strong>@Model.SubOrder.ShippingMethod.Name</strong>
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.SubOrder.ShippingMethod.EstimatedDelivery))
                                    {
                                        <p class="text-muted mb-1">
                                            <small>Est. Delivery: @Model.SubOrder.ShippingMethod.EstimatedDelivery</small>
                                        </p>
                                    }
                                    <p class="text-muted mb-0">
                                        <small>Cost: @Model.SubOrder.ShippingCost.ToString("C")</small>
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted">No shipping method selected</p>
                                }
                            </div>
                        </div>

                        <hr />

                        <h6 class="mb-3">Order Items</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th class="text-end">Tax</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SubOrder.Items)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ProductTitle</strong>
                                                @if (!string.IsNullOrEmpty(item.VariantDescription))
                                                {
                                                    <br/><small class="text-muted">@item.VariantDescription</small>
                                                }
                                            </td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@item.TaxAmount.ToString("C")</td>
                                            <td class="text-end">@item.Subtotal.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4" class="text-end"><strong>Items Subtotal:</strong></td>
                                        <td class="text-end">@Model.SubOrder.Subtotal.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" class="text-end"><strong>Shipping:</strong></td>
                                        <td class="text-end">@Model.SubOrder.ShippingCost.ToString("C")</td>
                                    </tr>
                                    <tr class="table-primary">
                                        <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end"><strong>@Model.SubOrder.TotalAmount.ToString("C")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-person"></i> Customer
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SubOrder.ParentOrder.User != null)
                        {
                            <p class="mb-1">
                                <strong>@Model.SubOrder.ParentOrder.User.FirstName @Model.SubOrder.ParentOrder.User.LastName</strong>
                            </p>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-envelope"></i> @Model.SubOrder.ParentOrder.User.Email
                            </p>
                        }
                        else if (!string.IsNullOrEmpty(Model.SubOrder.ParentOrder.GuestEmail))
                        {
                            <p class="mb-1">
                                <strong>Guest Customer</strong>
                            </p>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-envelope"></i> @Model.SubOrder.ParentOrder.GuestEmail
                            </p>
                        }
                        else
                        {
                            <p class="text-muted">Unknown customer</p>
                        }
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-geo-alt"></i> Delivery Address
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SubOrder.ParentOrder.DeliveryAddress != null)
                        {
                            <address class="mb-0">
                                <strong>@Model.SubOrder.ParentOrder.DeliveryAddress.FullName</strong><br />
                                @Model.SubOrder.ParentOrder.DeliveryAddress.AddressLine1<br />
                                @if (!string.IsNullOrEmpty(Model.SubOrder.ParentOrder.DeliveryAddress.AddressLine2))
                                {
                                    @Model.SubOrder.ParentOrder.DeliveryAddress.AddressLine2<br />
                                }
                                @Model.SubOrder.ParentOrder.DeliveryAddress.City@(!string.IsNullOrEmpty(Model.SubOrder.ParentOrder.DeliveryAddress.StateProvince) ? $", {Model.SubOrder.ParentOrder.DeliveryAddress.StateProvince}" : "") @Model.SubOrder.ParentOrder.DeliveryAddress.PostalCode<br />
                                @Model.SubOrder.ParentOrder.DeliveryAddress.CountryCode<br />
                                <br />
                                <i class="bi bi-telephone"></i> @Model.SubOrder.ParentOrder.DeliveryAddress.PhoneNumber
                            </address>
                            
                            @if (!string.IsNullOrEmpty(Model.SubOrder.ParentOrder.DeliveryAddress.DeliveryInstructions))
                            {
                                <hr class="my-3" />
                                <h6 class="mb-2"><i class="bi bi-info-circle"></i> Delivery Instructions</h6>
                                <p class="text-muted mb-0">@Model.SubOrder.ParentOrder.DeliveryAddress.DeliveryInstructions</p>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No delivery address</p>
                        }
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history"></i> Activity Log
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SubOrder.StatusHistory != null && Model.SubOrder.StatusHistory.Any())
                        {
                            <div class="timeline">
                                @foreach (var history in Model.SubOrder.StatusHistory)
                                {
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                @if (history.PreviousStatus.HasValue)
                                                {
                                                    <strong>@history.PreviousStatus.Value</strong>
                                                    <i class="bi bi-arrow-right mx-2"></i>
                                                    <strong>@history.NewStatus</strong>
                                                }
                                                else
                                                {
                                                    <strong>Order created - @history.NewStatus</strong>
                                                }
                                                @if (!string.IsNullOrEmpty(history.Notes))
                                                {
                                                    <br /><small class="text-muted">@history.Notes</small>
                                                }
                                            </div>
                                            <small class="text-muted text-nowrap ms-2">
                                                @history.ChangedAt.ToString("MMM dd, yyyy")
                                                <br />
                                                @history.ChangedAt.ToString("h:mm tt")
                                            </small>
                                        </div>
                                        @if (history != Model.SubOrder.StatusHistory.Last())
                                        {
                                            <hr class="my-2" />
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No activity recorded yet.</p>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            @if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Paid)
                            {
                                <form method="post" asp-page-handler="UpdateStatus" asp-route-subOrderId="@Model.SubOrder.Id" asp-route-action="preparing">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-box-seam"></i> Start Preparing
                                    </button>
                                </form>
                                <form method="post" asp-page-handler="UpdateStatus" asp-route-subOrderId="@Model.SubOrder.Id" asp-route-action="cancel">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to cancel this order?');">
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                </form>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Preparing)
                            {
                                <!-- Ship Order Form with Tracking Info -->
                                <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#shipOrderModal">
                                    <i class="bi bi-truck"></i> Mark as Shipped
                                </button>
                                <form method="post" asp-page-handler="UpdateStatus" asp-route-subOrderId="@Model.SubOrder.Id" asp-route-action="cancel">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to cancel this order?');">
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                </form>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Shipped)
                            {
                                <form method="post" asp-page-handler="UpdateStatus" asp-route-subOrderId="@Model.SubOrder.Id" asp-route-action="delivered">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle"></i> Mark as Delivered
                                    </button>
                                </form>
                                <!-- Button to update tracking information -->
                                <button type="button" class="btn btn-outline-primary w-100 mt-2" data-bs-toggle="modal" data-bs-target="#updateTrackingModal">
                                    <i class="bi bi-pencil"></i> Update Tracking Info
                                </button>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Delivered)
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="bi bi-check-circle"></i> Order completed!
                                </div>
                                <!-- Button to update tracking information even for delivered orders -->
                                <button type="button" class="btn btn-outline-secondary w-100 mt-2" data-bs-toggle="modal" data-bs-target="#updateTrackingModal">
                                    <i class="bi bi-pencil"></i> Update Tracking Info
                                </button>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.New)
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle"></i> Waiting for payment confirmation.
                                </div>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Cancelled)
                            {
                                <div class="alert alert-secondary mb-0">
                                    <i class="bi bi-x-circle"></i> Order cancelled.
                                </div>
                            }
                            else if (Model.SubOrder.Status == MercatoApp.Models.OrderStatus.Refunded)
                            {
                                <div class="alert alert-dark mb-0">
                                    <i class="bi bi-arrow-counterclockwise"></i> Order refunded.
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.SubOrder.TrackingNumber))
                        {
                            <hr class="my-3" />
                            <h6 class="mb-2">Tracking Information</h6>
                            <p class="mb-1"><strong>Tracking Number:</strong> @Model.SubOrder.TrackingNumber</p>
                            @if (!string.IsNullOrEmpty(Model.SubOrder.CarrierName))
                            {
                                <p class="mb-1"><strong>Carrier:</strong> @Model.SubOrder.CarrierName</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.SubOrder.TrackingUrl))
                            {
                                <p class="mb-0">
                                    <a href="@Model.SubOrder.TrackingUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-box-arrow-up-right"></i> Track Shipment
                                    </a>
                                </p>
                            }
                        }
                    </div>
                </div>

                <!-- Ship Order Modal -->
                <div class="modal fade" id="shipOrderModal" tabindex="-1" aria-labelledby="shipOrderModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="post" asp-page-handler="UpdateStatus" asp-route-subOrderId="@Model.SubOrder.Id" asp-route-action="shipped">
                                @Html.AntiForgeryToken()
                                <div class="modal-header">
                                    <h5 class="modal-title" id="shipOrderModalLabel">Mark Order as Shipped</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-muted">Add tracking information for this shipment (optional).</p>
                                    <div class="mb-3">
                                        <label for="trackingNumber" class="form-label">Tracking Number</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="trackingNumber" 
                                               name="TrackingNumber" 
                                               placeholder="e.g., 1Z999AA10123456784"
                                               aria-describedby="trackingNumberHelp" />
                                        <div id="trackingNumberHelp" class="form-text">Enter the shipment tracking number (optional)</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="carrierName" class="form-label">Carrier Name</label>
                                        <input type="text" class="form-control" id="carrierName" name="CarrierName" placeholder="e.g., UPS, FedEx, USPS" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="trackingUrl" class="form-label">Tracking URL</label>
                                        <input type="url" class="form-control" id="trackingUrl" name="TrackingUrl" placeholder="https://..." />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-truck"></i> Mark as Shipped
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Update Tracking Information Modal -->
                <div class="modal fade" id="updateTrackingModal" tabindex="-1" aria-labelledby="updateTrackingModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="post" asp-page-handler="UpdateTracking" asp-route-subOrderId="@Model.SubOrder.Id">
                                @Html.AntiForgeryToken()
                                <div class="modal-header">
                                    <h5 class="modal-title" id="updateTrackingModalLabel">Update Tracking Information</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-muted">Update the tracking information for this shipment.</p>
                                    <div class="mb-3">
                                        <label for="updateTrackingNumber" class="form-label">Tracking Number</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="updateTrackingNumber" 
                                               name="TrackingNumber" 
                                               value="@Model.SubOrder.TrackingNumber"
                                               placeholder="e.g., 1Z999AA10123456784"
                                               aria-describedby="updateTrackingNumberHelp" />
                                        <div id="updateTrackingNumberHelp" class="form-text">Enter the shipment tracking number</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="updateCarrierName" class="form-label">Carrier Name</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="updateCarrierName" 
                                               name="CarrierName" 
                                               value="@Model.SubOrder.CarrierName"
                                               placeholder="e.g., UPS, FedEx, USPS" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="updateTrackingUrl" class="form-label">Tracking URL</label>
                                        <input type="url" 
                                               class="form-control" 
                                               id="updateTrackingUrl" 
                                               name="TrackingUrl" 
                                               value="@Model.SubOrder.TrackingUrl"
                                               placeholder="https://..." />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Update Tracking Info
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Prevent double-click on form submissions
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const submitButton = form.querySelector('button[type="submit"]');
                    if (submitButton) {
                        // Disable the button to prevent double-clicks
                        submitButton.disabled = true;
                        // Re-enable after 3 seconds as a fallback
                        setTimeout(() => {
                            submitButton.disabled = false;
                        }, 3000);
                    }
                });
            });
        });
    </script>
}
