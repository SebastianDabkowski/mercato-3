@page
@model MercatoApp.Pages.Seller.VerificationModel
@{
    ViewData["Title"] = "Seller Verification";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <h1>Identity Verification</h1>
            <p class="text-muted">Complete your verification to activate your seller account.</p>
        </div>

        @if (Model.CurrentKycStatus == MercatoApp.Models.KycStatus.Rejected)
        {
            <div class="alert alert-danger mb-4" role="alert">
                <h5 class="alert-heading">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                    </svg>
                    Verification Rejected
                </h5>
                <p class="mb-2">
                    Unfortunately, your verification was not approved. This may be due to:
                </p>
                <ul class="mb-0">
                    <li>Incomplete or inaccurate information</li>
                    <li>Invalid identification documents</li>
                    <li>Mismatch between provided details</li>
                </ul>
            </div>
            <p class="mb-4">Please review and update your information below to submit a new verification request.</p>
        }

        @if (Model.CurrentKycStatus == MercatoApp.Models.KycStatus.Pending)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <div class="text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-hourglass-split text-warning mb-3" viewBox="0 0 16 16">
                            <path d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z"/>
                        </svg>
                        <h4 class="text-warning">Verification Pending Review</h4>
                        <p class="text-muted mb-0">
                            Your verification is currently being reviewed. This typically takes 1-2 business days.
                            We'll notify you by email once the review is complete.
                        </p>
                        @if (Model.SubmittedAt.HasValue)
                        {
                            <p class="text-muted mt-3 mb-0">
                                <small>Submitted on: @Model.SubmittedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Submitted Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.SellerType == "Business" && Model.ExistingVerification != null)
                    {
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Company Name</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.CompanyName</dd>

                            <dt class="col-sm-4">Registration Number</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.RegistrationNumber</dd>

                            <dt class="col-sm-4">Tax ID</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.TaxId</dd>

                            <dt class="col-sm-4">Registered Address</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.RegisteredAddress</dd>

                            <dt class="col-sm-4">Contact Person</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.ContactPersonName</dd>

                            <dt class="col-sm-4">Contact Email</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.ContactPersonEmail</dd>

                            <dt class="col-sm-4">Contact Phone</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.ContactPersonPhone</dd>
                        </dl>
                    }
                    else if (Model.SellerType == "Individual" && Model.ExistingVerification != null)
                    {
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.FullName</dd>

                            <dt class="col-sm-4">Personal ID Number</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.PersonalIdNumber</dd>

                            <dt class="col-sm-4">Address</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.Address</dd>

                            <dt class="col-sm-4">Contact Email</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.ContactEmail</dd>

                            <dt class="col-sm-4">Contact Phone</dt>
                            <dd class="col-sm-8">@Model.ExistingVerification.ContactPhone</dd>
                        </dl>
                    }
                </div>
            </div>
        }
        else if (Model.CanSubmit)
        {
            @if (Model.SellerType == "Business")
            {
                <form method="post" asp-page-handler="Company">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-building me-2" viewBox="0 0 16 16">
                                    <path d="M4 2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v12a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5zm1 0v11h6v-11z"/>
                                    <path d="M5.5 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5m3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H9a.5.5 0 0 1-.5-.5m-3 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5m3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H9a.5.5 0 0 1-.5-.5m-3 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5m3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1H9a.5.5 0 0 1-.5-.5"/>
                                </svg>
                                Company Verification
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-4">Please provide your company details for verification. All fields are required.</p>

                            <div class="mb-3">
                                <label asp-for="CompanyInput.CompanyName" class="form-label"></label>
                                <input asp-for="CompanyInput.CompanyName" class="form-control" placeholder="e.g., Acme Corporation Ltd." />
                                <span asp-validation-for="CompanyInput.CompanyName" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyInput.RegistrationNumber" class="form-label"></label>
                                    <input asp-for="CompanyInput.RegistrationNumber" class="form-control" placeholder="e.g., 12345678" />
                                    <span asp-validation-for="CompanyInput.RegistrationNumber" class="text-danger"></span>
                                    <div class="form-text">Your official company registration number.</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyInput.TaxId" class="form-label"></label>
                                    <input asp-for="CompanyInput.TaxId" class="form-control" placeholder="e.g., VAT123456789" />
                                    <span asp-validation-for="CompanyInput.TaxId" class="text-danger"></span>
                                    <div class="form-text">VAT number or equivalent tax ID.</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CompanyInput.RegisteredAddress" class="form-label"></label>
                                <textarea asp-for="CompanyInput.RegisteredAddress" class="form-control" rows="2" placeholder="Enter the full registered address of your company..."></textarea>
                                <span asp-validation-for="CompanyInput.RegisteredAddress" class="text-danger"></span>
                            </div>

                            <hr class="my-4" />
                            <h6 class="mb-3">Contact Person Details</h6>

                            <div class="mb-3">
                                <label asp-for="CompanyInput.ContactPersonName" class="form-label"></label>
                                <input asp-for="CompanyInput.ContactPersonName" class="form-control" placeholder="e.g., John Smith" />
                                <span asp-validation-for="CompanyInput.ContactPersonName" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyInput.ContactPersonEmail" class="form-label"></label>
                                    <input asp-for="CompanyInput.ContactPersonEmail" class="form-control" type="email" placeholder="e.g., john@company.com" />
                                    <span asp-validation-for="CompanyInput.ContactPersonEmail" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyInput.ContactPersonPhone" class="form-label"></label>
                                    <input asp-for="CompanyInput.ContactPersonPhone" class="form-control" type="tel" placeholder="e.g., +1 555 123 4567" />
                                    <span asp-validation-for="CompanyInput.ContactPersonPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Verification</button>
                    </div>
                </form>
            }
            else if (Model.SellerType == "Individual")
            {
                <form method="post" asp-page-handler="Individual">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person me-2" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                </svg>
                                Individual Verification
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-4">Please provide your personal details for verification. All fields are required.</p>

                            <div class="mb-3">
                                <label asp-for="IndividualInput.FullName" class="form-label"></label>
                                <input asp-for="IndividualInput.FullName" class="form-control" placeholder="e.g., John Smith" />
                                <span asp-validation-for="IndividualInput.FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IndividualInput.PersonalIdNumber" class="form-label"></label>
                                <input asp-for="IndividualInput.PersonalIdNumber" class="form-control" placeholder="e.g., National ID, Passport number, SSN" />
                                <span asp-validation-for="IndividualInput.PersonalIdNumber" class="text-danger"></span>
                                <div class="form-text">Your government-issued identification number.</div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IndividualInput.Address" class="form-label"></label>
                                <textarea asp-for="IndividualInput.Address" class="form-control" rows="2" placeholder="Enter your full residential address..."></textarea>
                                <span asp-validation-for="IndividualInput.Address" class="text-danger"></span>
                            </div>

                            <hr class="my-4" />
                            <h6 class="mb-3">Contact Details</h6>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IndividualInput.ContactEmail" class="form-label"></label>
                                    <input asp-for="IndividualInput.ContactEmail" class="form-control" type="email" placeholder="e.g., john@example.com" />
                                    <span asp-validation-for="IndividualInput.ContactEmail" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IndividualInput.ContactPhone" class="form-label"></label>
                                    <input asp-for="IndividualInput.ContactPhone" class="form-control" type="tel" placeholder="e.g., +1 555 123 4567" />
                                    <span asp-validation-for="IndividualInput.ContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Verification</button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">Store Setup Required</h5>
                    <p class="mb-0">
                        Please complete your store onboarding first before proceeding with verification.
                    </p>
                    <hr />
                    <a asp-page="/Seller/OnboardingStep1" class="btn btn-outline-warning">Start Store Onboarding</a>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading">Verification Not Available</h5>
                <p class="mb-0">
                    Verification is not available at this time. Please ensure you have completed your store setup.
                </p>
            </div>
        }

        <hr class="my-4" />

        <div class="text-center">
            <p class="small text-muted">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-check me-1" viewBox="0 0 16 16">
                    <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                    <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                </svg>
                Your data is securely stored and processed in compliance with GDPR and our privacy policy.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
