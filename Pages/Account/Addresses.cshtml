@page
@model MercatoApp.Pages.Account.AddressesModel
@{
    ViewData["Title"] = "My Shipping Addresses";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <h1 class="mb-4">
                <i class="bi bi-geo-alt"></i> My Shipping Addresses
            </h1>

            @if (Model.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="mb-4">
                <a asp-page="/Account/AddAddress" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Address
                </a>
            </div>

            @if (!Model.Addresses.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    You haven't saved any shipping addresses yet. Add your first address to make checkout faster and easier.
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="col">
                            <div class="card h-100 @(address.IsDefault ? "border-primary" : "")">
                                <div class="card-body">
                                    @if (address.IsDefault)
                                    {
                                        <div class="badge bg-primary mb-2">
                                            <i class="bi bi-star-fill"></i> Default Address
                                        </div>
                                    }
                                    <h5 class="card-title">@address.FullName</h5>
                                    <p class="card-text">
                                        <i class="bi bi-geo-alt"></i>
                                        @address.AddressLine1<br />
                                        @if (!string.IsNullOrEmpty(address.AddressLine2))
                                        {
                                            @address.AddressLine2<br />
                                        }
                                        @address.City@if (!string.IsNullOrEmpty(address.StateProvince))
                                        {<text>, @address.StateProvince</text>
                                        } @address.PostalCode<br />
                                        @address.CountryCode
                                    </p>
                                    <p class="card-text">
                                        <i class="bi bi-telephone"></i> @address.PhoneNumber
                                    </p>
                                    @if (!string.IsNullOrEmpty(address.DeliveryInstructions))
                                    {
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-chat-left-text"></i> @address.DeliveryInstructions
                                            </small>
                                        </p>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Account/EditAddress" asp-route-id="@address.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (!address.IsDefault)
                                        {
                                            <form method="post" asp-page-handler="SetDefault" asp-route-id="@address.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-star"></i> Set Default
                                                </button>
                                            </form>
                                        }
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@address.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteModal-@address.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@address.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel-@address.Id">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this address?
                                        <div class="mt-2">
                                            <strong>@address.FullName</strong><br />
                                            @address.AddressLine1<br />
                                            @address.City, @address.PostalCode
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@address.Id" class="d-inline">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i> Delete Address
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
