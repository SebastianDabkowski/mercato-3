@page
@model MercatoApp.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-envelope-check text-success" viewBox="0 0 16 16">
                        <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2zm3.708 6.208L1 11.105V5.383zM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2z"/>
                        <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0m-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686"/>
                    </svg>
                </div>
                <h1 class="h3 mb-3">Registration Successful!</h1>
                <div class="alert alert-info" role="alert">
                    <h5 class="alert-heading">Please verify your email</h5>
                    <p class="mb-0">
                        We have sent a verification email to your email address. 
                        Please click the link in the email to verify your account before you can access all marketplace features.
                    </p>
                </div>
                <p class="text-muted">
                    Didn't receive the email? Check your spam folder or <a href="#">request a new verification email</a>.
                </p>
                <hr />
                <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>
