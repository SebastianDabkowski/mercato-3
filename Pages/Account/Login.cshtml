@page
@model MercatoApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="mb-4">Sign In</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SocialLoginError))
        {
            <div class="alert alert-danger" role="alert">
                @Model.SocialLoginError
            </div>
        }

        @if (Model.ExternalProviders.Any())
        {
            <div class="card mb-4">
                <div class="card-body">
                    <p class="text-center text-muted mb-3">Continue with</p>
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalProviders)
                        {
                            <a asp-page="/Account/ExternalLogin" asp-route-provider="@provider" 
                               class="btn btn-outline-secondary">
                                @if (provider == "Google")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                                    </svg>
                                    <span>Continue with Google</span>
                                }
                                else if (provider == "Facebook")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook me-2" viewBox="0 0 16 16">
                                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                                    </svg>
                                    <span>Continue with Facebook</span>
                                }
                                else
                                {
                                    <span>Continue with @provider</span>
                                }
                            </a>
                        }
                    </div>
                    <p class="text-center text-muted small mt-2 mb-0">Social login is for buyers only</p>
                </div>
            </div>

            <div class="text-center text-muted mb-3">
                <span>or sign in with email</span>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            Remember me
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            </div>
        </form>

        @if (Model.ShowResendVerification)
        {
            <div class="mt-4">
                <div class="alert alert-warning" role="alert">
                    <strong>Email not verified</strong>
                    <p class="mb-2">Your email address has not been verified. Please check your inbox for the verification link.</p>
                    <form method="post" asp-page-handler="ResendVerification">
                        <input type="hidden" asp-for="Input.Email" />
                        <button type="submit" class="btn btn-outline-warning btn-sm">Resend verification email</button>
                    </form>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            <p>Don't have an account? <a asp-page="/Account/Register">Create one</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
