@page
@model MercatoApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="mb-4">Create an Account</h1>

        @if (Model.ExternalProviders.Any())
        {
            <div class="card mb-4">
                <div class="card-body">
                    <p class="text-center text-muted mb-3">Quick registration for buyers</p>
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalProviders)
                        {
                            <a asp-page="/Account/ExternalLogin" asp-route-provider="@provider" 
                               class="btn btn-outline-secondary">
                                @if (provider == "Google")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                                    </svg>
                                    <span>Continue with Google</span>
                                }
                                else if (provider == "Facebook")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook me-2" viewBox="0 0 16 16">
                                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                                    </svg>
                                    <span>Continue with Facebook</span>
                                }
                                else
                                {
                                    <span>Continue with @provider</span>
                                }
                            </a>
                        }
                    </div>
                    <p class="text-center text-muted small mt-2 mb-0">Social login automatically creates a buyer account</p>
                </div>
            </div>

            <div class="text-center text-muted mb-3">
                <span>or register with email</span>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Account Type</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Choose whether you want to register as a buyer or seller.</p>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Input.UserType" value="Buyer" id="userTypeBuyer" />
                                <label class="form-check-label" for="userTypeBuyer">
                                    <strong>Buyer</strong>
                                    <br />
                                    <small class="text-muted">I want to purchase products</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Input.UserType" value="Seller" id="userTypeSeller" />
                                <label class="form-check-label" for="userTypeSeller">
                                    <strong>Seller</strong>
                                    <br />
                                    <small class="text-muted">I want to sell products</small>
                                </label>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.UserType" class="text-danger"></span>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Login Credentials</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="form-text">
                            Password must be at least 8 characters and contain uppercase, lowercase, digit, and special character.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FirstName" class="form-label"></label>
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.LastName" class="form-label"></label>
                            <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Address Information</h5>
                    <small class="text-muted">Required for invoicing and KYC verification</small>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Address" class="form-label"></label>
                        <input asp-for="Input.Address" class="form-control" autocomplete="street-address" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.City" class="form-label"></label>
                            <input asp-for="Input.City" class="form-control" autocomplete="address-level2" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PostalCode" class="form-label"></label>
                            <input asp-for="Input.PostalCode" class="form-control" autocomplete="postal-code" />
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Country" class="form-label"></label>
                        <input asp-for="Input.Country" class="form-control" autocomplete="country-name" />
                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.TaxId" class="form-label"></label>
                        <input asp-for="Input.TaxId" class="form-control" />
                        <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                        <div class="form-text">Tax identification number for invoicing (required for sellers).</div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Terms &amp; Consents</h5>
                </div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.AcceptTerms" aria-required="true" />
                        <label class="form-check-label" asp-for="Input.AcceptTerms">
                            I accept the <a href="/Privacy" target="_blank">terms and conditions</a> and <a href="/Privacy" target="_blank">privacy policy</a> <span class="text-danger">*</span>
                        </label>
                        <span asp-validation-for="Input.AcceptTerms" class="text-danger d-block"></span>
                    </div>

                    <hr />
                    <p class="text-muted small mb-3">Optional: You can change these preferences at any time in your privacy settings.</p>

                    <div class="form-check mb-2">
                        <input class="form-check-input" asp-for="Input.AcceptNewsletter" />
                        <label class="form-check-label" asp-for="Input.AcceptNewsletter">
                            I want to receive newsletters with platform updates and marketplace news
                        </label>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" asp-for="Input.AcceptMarketing" />
                        <label class="form-check-label" asp-for="Input.AcceptMarketing">
                            I want to receive marketing communications and promotional offers
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.AcceptProfiling" />
                        <label class="form-check-label" asp-for="Input.AcceptProfiling">
                            I consent to personalization and profiling for better product recommendations
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <p>Already have an account? <a asp-page="/Account/Login">Sign in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
