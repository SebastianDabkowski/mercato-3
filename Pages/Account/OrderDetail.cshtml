@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            
            // Fetch all forms that need validation
            var forms = document.querySelectorAll('[id^="returnForm-"]')
            
            // Loop over them and prevent submission if invalid
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Rating functionality
        function setRating(rating, targetId) {
            // Set the hidden input value
            document.getElementById(targetId).value = rating;
            
            // Update star button states
            var buttons = document.querySelectorAll('[data-target="' + targetId + '"]');
            buttons.forEach(function(btn) {
                var btnRating = parseInt(btn.getAttribute('data-rating'));
                if (btnRating <= rating) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // Update rating text
            var ratingText = '';
            switch(rating) {
                case 1: ratingText = 'Poor (1 star)'; break;
                case 2: ratingText = 'Fair (2 stars)'; break;
                case 3: ratingText = 'Good (3 stars)'; break;
                case 4: ratingText = 'Very Good (4 stars)'; break;
                case 5: ratingText = 'Excellent (5 stars)'; break;
            }
            
            var textElement = document.getElementById('rating-text-' + targetId.replace('rating-', ''));
            if (textElement) {
                textElement.textContent = ratingText;
            }
        }
    </script>
}

