@page
@model MercatoApp.Pages.Account.OrderDetailModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Account/Orders">My Orders</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Order #@Model.Order?.OrderNumber</li>
                </ol>
            </nav>

            @if (Model.Order != null)
            {
                <!-- Order Header -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h3 class="mb-0">
                                    <i class="bi bi-receipt"></i> Order #@Model.Order.OrderNumber
                                </h3>
                            </div>
                            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                <span class="fs-6">
                                    <partial name="_OrderStatusBadge" model="Model.Order.Status" />
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <h6 class="text-muted">Order Date</h6>
                                <p class="mb-3 mb-md-0">
                                    <i class="bi bi-calendar"></i> @Model.Order.OrderedAt.ToString("MMMM dd, yyyy")<br/>
                                    <small class="text-muted">@Model.Order.OrderedAt.ToString("h:mm tt")</small>
                                </p>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">Payment Method</h6>
                                <p class="mb-3 mb-md-0">
                                    @if (Model.Order.PaymentMethod != null)
                                    {
                                        <i class="bi bi-credit-card"></i> @Model.Order.PaymentMethod.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">Payment Status</h6>
                                <p class="mb-3 mb-md-0">
                                    <partial name="_PaymentStatusBadge" model="Model.Order.PaymentStatus" />
                                </p>
                            </div>
                            <div class="col-md-3">
                                <h6 class="text-muted">Total Amount</h6>
                                <p class="h4 text-primary mb-0">@Model.Order.TotalAmount.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-geo-alt"></i> Delivery Address
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Order.DeliveryAddress != null)
                        {
                            <address class="mb-0">
                                <strong>@Model.Order.DeliveryAddress.FullName</strong><br />
                                @Model.Order.DeliveryAddress.AddressLine1<br />
                                @if (!string.IsNullOrEmpty(Model.Order.DeliveryAddress.AddressLine2))
                                {
                                    @Model.Order.DeliveryAddress.AddressLine2<br />
                                }
                                @Model.Order.DeliveryAddress.City@(!string.IsNullOrEmpty(Model.Order.DeliveryAddress.StateProvince) ? $", {Model.Order.DeliveryAddress.StateProvince}" : "") @Model.Order.DeliveryAddress.PostalCode<br />
                                @Model.Order.DeliveryAddress.CountryCode<br />
                                <br />
                                <i class="bi bi-telephone"></i> @Model.Order.DeliveryAddress.PhoneNumber
                            </address>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No delivery address</p>
                        }
                    </div>
                </div>

                <!-- Payment Status Message -->
                @if (Model.Order.PaymentStatus == MercatoApp.Models.PaymentStatus.Failed)
                {
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="bi bi-x-circle-fill"></i> Payment Failed
                        </h6>
                        <p class="mb-0">
                            @MercatoApp.Services.PaymentStatusMapper.GetBuyerFriendlyMessage(Model.Order.PaymentStatus)
                            @if (Model.Order.PaymentTransactions.Any())
                            {
                                var latestTransaction = Model.Order.PaymentTransactions
                                    .OrderByDescending(t => t.UpdatedAt)
                                    .FirstOrDefault();
                                if (latestTransaction != null && !string.IsNullOrWhiteSpace(latestTransaction.ErrorMessage))
                                {
                                    <br/>
                                    <small>@latestTransaction.ErrorMessage</small>
                                }
                            }
                        </p>
                    </div>
                }
                else if (Model.Order.PaymentStatus == MercatoApp.Models.PaymentStatus.Pending)
                {
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-hourglass-split"></i> Payment Processing
                        </h6>
                        <p class="mb-0">
                            @MercatoApp.Services.PaymentStatusMapper.GetBuyerFriendlyMessage(Model.Order.PaymentStatus)
                        </p>
                    </div>
                }
                else if (Model.Order.PaymentStatus == MercatoApp.Models.PaymentStatus.Refunded)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-arrow-counterclockwise"></i> Payment Refunded
                        </h6>
                        <p class="mb-0">
                            @MercatoApp.Services.PaymentStatusMapper.GetBuyerFriendlyMessage(Model.Order.PaymentStatus)
                        </p>
                    </div>
                }

                <!-- Refunds/Cancellations Alert -->
                @if (Model.HasRefunds || Model.HasCancellations)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Refunds or Cancellations
                        </h6>
                        @if (Model.Order.RefundedAmount > 0)
                        {
                            <p class="mb-1">
                                <strong>Total Refunded Amount:</strong> @Model.Order.RefundedAmount.ToString("C")
                            </p>
                        }
                        @if (Model.HasCancellations)
                        {
                            <p class="mb-0">
                                One or more seller sub-orders have been cancelled or refunded. See details below.
                            </p>
                        }
                    </div>
                }

                <!-- Multi-Seller Notice -->
                @if (Model.Order.SubOrders.Count > 1)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Multi-Seller Order:</strong> Your order contains items from @Model.Order.SubOrders.Count different sellers. 
                        Each seller will fulfill their portion independently, so delivery dates and tracking may differ.
                    </div>
                }

                <!-- Seller Sub-Orders -->
                <h4 class="mb-3">
                    <i class="bi bi-box-seam"></i> Order Items
                    @if (Model.Order.SubOrders.Count > 1)
                    {
                        <small class="text-muted">(@Model.Order.SubOrders.Count seller shipments)</small>
                    }
                </h4>

                @foreach (var subOrder in Model.Order.SubOrders.OrderBy(so => so.CreatedAt))
                {
                    <div class="card mb-3">
                        <div class="card-header @(subOrder.Status == MercatoApp.Models.OrderStatus.Cancelled || subOrder.Status == MercatoApp.Models.OrderStatus.Refunded ? "bg-light" : "")">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h6 class="mb-1">
                                        <i class="bi bi-shop"></i> @subOrder.Store.StoreName
                                    </h6>
                                    <small class="text-muted">Sub-Order: @subOrder.SubOrderNumber</small>
                                </div>
                                <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                    <partial name="_OrderStatusBadge" model="subOrder.Status" />
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Items -->
                            <div class="table-responsive mb-3">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product</th>
                                            <th>Status</th>
                                            <th class="text-center">Qty</th>
                                            <th class="text-center">Shipped</th>
                                            <th class="text-center">Cancelled</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in subOrder.Items)
                                        {
                                            var hasPartialFulfillment = item.QuantityShipped > 0 || item.QuantityCancelled > 0;
                                            <tr>
                                                <td>
                                                    <strong>@item.ProductTitle</strong>
                                                    @if (!string.IsNullOrEmpty(item.VariantDescription))
                                                    {
                                                        <br/><small class="text-muted">@item.VariantDescription</small>
                                                    }
                                                    @if (item.RefundedAmount > 0)
                                                    {
                                                        <br/><small class="text-danger">Refunded: @item.RefundedAmount.ToString("C")</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.Status == MercatoApp.Models.OrderItemStatus.New)
                                                    {
                                                        <span class="badge bg-warning text-dark" title="Item is awaiting processing">New</span>
                                                    }
                                                    else if (item.Status == MercatoApp.Models.OrderItemStatus.Preparing)
                                                    {
                                                        <span class="badge bg-info" title="Item is being prepared for shipment">Preparing</span>
                                                    }
                                                    else if (item.Status == MercatoApp.Models.OrderItemStatus.Shipped)
                                                    {
                                                        <span class="badge bg-success" title="Item has been shipped">Shipped</span>
                                                    }
                                                    else if (item.Status == MercatoApp.Models.OrderItemStatus.Cancelled)
                                                    {
                                                        <span class="badge bg-secondary" title="Item has been cancelled">Cancelled</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <strong>@item.Quantity</strong>
                                                </td>
                                                <td class="text-center">
                                                    @if (item.QuantityShipped > 0)
                                                    {
                                                        <span class="badge bg-success" title="@item.QuantityShipped item(s) shipped">@item.QuantityShipped</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.QuantityCancelled > 0)
                                                    {
                                                        <span class="badge bg-secondary" title="@item.QuantityCancelled item(s) cancelled">@item.QuantityCancelled</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                                <td class="text-end">@item.Subtotal.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Review Section for Delivered Items -->
                            @if (subOrder.Status == MercatoApp.Models.OrderStatus.Delivered)
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-star"></i> Review Your Purchase
                                    </h6>
                                    @foreach (var item in subOrder.Items)
                                    {
                                        var hasReview = Model.ExistingReviews.ContainsKey(item.Id);
                                        <div class="card mb-2 @(hasReview ? "border-success" : "")">
                                            <div class="card-body p-2">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <strong class="small">@item.ProductTitle</strong>
                                                        @if (!string.IsNullOrEmpty(item.VariantDescription))
                                                        {
                                                            <br/><small class="text-muted">@item.VariantDescription</small>
                                                        }
                                                    </div>
                                                    <div class="ms-2">
                                                        @if (hasReview)
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="bi bi-check-circle"></i> Reviewed
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#reviewModal-@item.Id">
                                                                <i class="bi bi-star"></i> Write Review
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @if (!hasReview)
                                        {
                                            <!-- Review Modal -->
                                            <div class="modal fade" id="reviewModal-@item.Id" tabindex="-1" aria-labelledby="reviewModalLabel-@item.Id" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <form method="post" asp-page-handler="SubmitReview" id="reviewForm-@item.Id">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="orderItemId" value="@item.Id" />
                                                            <input type="hidden" name="orderId" value="@Model.Order.Id" />
                                                            
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="reviewModalLabel-@item.Id">
                                                                    <i class="bi bi-star"></i> Review Product
                                                                </h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p class="text-muted">
                                                                    <strong>@item.ProductTitle</strong>
                                                                    @if (!string.IsNullOrEmpty(item.VariantDescription))
                                                                    {
                                                                        <br/><small>@item.VariantDescription</small>
                                                                    }
                                                                </p>
                                                                
                                                                <div class="mb-3">
                                                                    <label for="rating-@item.Id" class="form-label">Rating <span class="text-danger">*</span></label>
                                                                    <div class="rating-input" id="rating-display-@item.Id">
                                                                        <input type="hidden" id="rating-@item.Id" name="rating" value="5" />
                                                                        <div class="btn-group" role="group" aria-label="Rating">
                                                                            @for (int i = 1; i <= 5; i++)
                                                                            {
                                                                                var starValue = i;
                                                                                <button type="button" class="btn btn-outline-warning rating-star @(i == 5 ? "active" : "")" 
                                                                                        data-rating="@starValue" 
                                                                                        data-target="rating-@item.Id"
                                                                                        onclick="setRating(@starValue, 'rating-@item.Id')">
                                                                                    <i class="bi bi-star-fill"></i>
                                                                                </button>
                                                                            }
                                                                        </div>
                                                                        <div class="mt-1">
                                                                            <small class="text-muted" id="rating-text-@item.Id">Excellent (5 stars)</small>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="reviewText-@item.Id" class="form-label">Your Review (optional)</label>
                                                                    <textarea class="form-control" id="reviewText-@item.Id" name="reviewText" rows="4" maxlength="2000" placeholder="Share your experience with this product..."></textarea>
                                                                    <small class="text-muted">Maximum 2000 characters</small>
                                                                </div>

                                                                <div class="alert alert-info">
                                                                    <small>
                                                                        <i class="bi bi-info-circle"></i> 
                                                                        Your review will be visible to other buyers and will help them make informed decisions.
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-primary">
                                                                    <i class="bi bi-send"></i> Submit Review
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            }

                            @if (subOrder.Items.Any(i => i.QuantityShipped > 0 || i.QuantityCancelled > 0))
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle"></i> 
                                    <strong>Partial Fulfillment:</strong> This seller has shipped or cancelled some items individually. 
                                    Check the status of each item above for details.
                                </div>
                            }

                            <!-- Shipping & Tracking Info -->
                            <div class="row">
                                <div class="col-md-6">
                                    @if (subOrder.ShippingMethod != null)
                                    {
                                        <h6 class="text-muted mb-1">Shipping Method</h6>
                                        <p class="mb-2">
                                            <i class="bi bi-truck"></i> <strong>@subOrder.ShippingMethod.Name</strong><br/>
                                            @if (!string.IsNullOrEmpty(subOrder.ShippingMethod.EstimatedDelivery))
                                            {
                                                <small class="text-muted">Estimated Delivery: @subOrder.ShippingMethod.EstimatedDelivery</small>
                                            }
                                        </p>
                                    }

                                    @if (!string.IsNullOrEmpty(subOrder.TrackingNumber))
                                    {
                                        <h6 class="text-muted mb-1 mt-3">Tracking Information</h6>
                                        <div class="card bg-light">
                                            <div class="card-body p-3">
                                                <p class="mb-1">
                                                    <strong>Tracking Number:</strong> 
                                                    @if (!string.IsNullOrEmpty(subOrder.TrackingUrl))
                                                    {
                                                        <a href="@subOrder.TrackingUrl" target="_blank" class="text-decoration-none">
                                                            @subOrder.TrackingNumber <i class="bi bi-box-arrow-up-right"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span>@subOrder.TrackingNumber</span>
                                                    }
                                                </p>
                                                @if (!string.IsNullOrEmpty(subOrder.CarrierName))
                                                {
                                                    <p class="mb-0">
                                                        <strong>Carrier:</strong> @subOrder.CarrierName
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <!-- Sub-order totals -->
                                    <div class="card">
                                        <div class="card-body">
                                            <dl class="row mb-0 small">
                                                <dt class="col-6">Items Subtotal:</dt>
                                                <dd class="col-6 text-end">@subOrder.Subtotal.ToString("C")</dd>
                                                
                                                <dt class="col-6">Shipping Cost:</dt>
                                                <dd class="col-6 text-end">@subOrder.ShippingCost.ToString("C")</dd>
                                                
                                                @if (subOrder.RefundedAmount > 0)
                                                {
                                                    <dt class="col-6 text-danger">Refunded:</dt>
                                                    <dd class="col-6 text-end text-danger">-@subOrder.RefundedAmount.ToString("C")</dd>
                                                }
                                                
                                                <dt class="col-6 border-top pt-2 mt-2"><strong>Sub-Order Total:</strong></dt>
                                                <dd class="col-6 text-end border-top pt-2 mt-2">
                                                    <strong>@subOrder.TotalAmount.ToString("C")</strong>
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Return Request Section -->
                            @{
                                var hasReturnRequest = Model.ReturnRequestsBySubOrder.ContainsKey(subOrder.Id);
                                var returnRequests = hasReturnRequest ? Model.ReturnRequestsBySubOrder[subOrder.Id] : new List<MercatoApp.Models.ReturnRequest>();
                                var canInitiateReturn = subOrder.Status == MercatoApp.Models.OrderStatus.Delivered && !hasReturnRequest;
                            }

                            @if (hasReturnRequest)
                            {
                                <!-- Display existing return requests -->
                                <div class="mt-3">
                                    <div class="alert alert-info">
                                        <h6 class="alert-heading">
                                            <i class="bi bi-arrow-return-left"></i> Request Status
                                        </h6>
                                        @foreach (var returnRequest in returnRequests)
                                        {
                                            var requestTypeLabel = returnRequest.RequestType == MercatoApp.Models.ReturnRequestType.Complaint ? "Complaint" : "Return";
                                            var requestIcon = returnRequest.RequestType == MercatoApp.Models.ReturnRequestType.Complaint ? "exclamation-triangle" : "arrow-return-left";
                                            <div class="mb-2">
                                                <strong>
                                                    <i class="bi bi-@requestIcon"></i>
                                                    @requestTypeLabel #@returnRequest.ReturnNumber
                                                </strong><br/>
                                                <partial name="_ReturnStatusBadge" model="returnRequest.Status" />
                                                <br/>
                                                <small class="text-muted">
                                                    Requested: @returnRequest.RequestedAt.ToString("MMM dd, yyyy")
                                                </small>
                                                <br/>
                                                <small><strong>Type:</strong> @requestTypeLabel</small><br/>
                                                <small><strong>Reason:</strong> @returnRequest.Reason</small>
                                                @if (!string.IsNullOrEmpty(returnRequest.Description))
                                                {
                                                    <br/>
                                                    <small><strong>Description:</strong> @returnRequest.Description</small>
                                                }
                                                @if (returnRequest.Status == MercatoApp.Models.ReturnStatus.Approved && !string.IsNullOrEmpty(returnRequest.SellerNotes))
                                                {
                                                    <br/>
                                                    <small><strong>Seller Notes:</strong> @returnRequest.SellerNotes</small>
                                                }
                                                @if (returnRequest.Status == MercatoApp.Models.ReturnStatus.Rejected && !string.IsNullOrEmpty(returnRequest.SellerNotes))
                                                {
                                                    <br/>
                                                    <small class="text-danger"><strong>Rejection Reason:</strong> @returnRequest.SellerNotes</small>
                                                }
                                                <br/>
                                                <small><strong>Refund Amount:</strong> @returnRequest.RefundAmount.ToString("C")</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else if (canInitiateReturn)
                            {
                                <!-- Show return/complaint button for eligible sub-orders -->
                                <div class="mt-3">
                                    <button type="button" class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#returnModal-@subOrder.Id">
                                        <i class="bi bi-arrow-return-left"></i> Request Return or Report Issue
                                    </button>
                                </div>

                                <!-- Return/Complaint Request Modal -->
                                <div class="modal fade" id="returnModal-@subOrder.Id" tabindex="-1" aria-labelledby="returnModalLabel-@subOrder.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form method="post" asp-page-handler="InitiateReturn" id="returnForm-@subOrder.Id">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="subOrderId" value="@subOrder.Id" />
                                                <input type="hidden" name="isFullReturn" value="true" />
                                                <input type="hidden" name="orderId" value="@Model.Order.Id" />
                                                
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="returnModalLabel-@subOrder.Id">
                                                        <i class="bi bi-arrow-return-left"></i> Request Return or Report Issue
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="text-muted">
                                                        Submit a request for sub-order <strong>@subOrder.SubOrderNumber</strong> from <strong>@subOrder.Store.StoreName</strong>.
                                                    </p>
                                                    
                                                    <div class="mb-3">
                                                        <label for="requestType-@subOrder.Id" class="form-label">Request Type <span class="text-danger">*</span></label>
                                                        <select class="form-select" id="requestType-@subOrder.Id" name="requestType" required>
                                                            <option value="">Select request type...</option>
                                                            <option value="@((int)MercatoApp.Models.ReturnRequestType.Return)">Return - I want to return item(s)</option>
                                                            <option value="@((int)MercatoApp.Models.ReturnRequestType.Complaint)">Complaint - Report product issue</option>
                                                        </select>
                                                        <div class="invalid-feedback">
                                                            Please select a request type.
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="mb-3">
                                                        <label for="reason-@subOrder.Id" class="form-label">Reason <span class="text-danger">*</span></label>
                                                        <select class="form-select" id="reason-@subOrder.Id" name="reason" required>
                                                            <option value="">Select a reason...</option>
                                                            <option value="@((int)MercatoApp.Models.ReturnReason.Damaged)">Item arrived damaged or defective</option>
