@page
@model MercatoApp.Pages.Admin.VatRules.IndexModel
@using MercatoApp.Models
@{
    ViewData["Title"] = "VAT & Tax Rules - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">VAT & Tax Rules</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-receipt"></i> VAT & Tax Rules Management
            </h1>
            <p class="text-muted">
                Configure VAT and tax rates with effective dates, country/region applicability, and category rules.
            </p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Future Rules Alert -->
    @if (Model.FutureRules.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-calendar-event"></i>
            <strong>Future-Dated Rules:</strong> 
            @Model.FutureRules.Count rule(s) scheduled to become effective in the future.
        </div>
    }

    <!-- Actions Bar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="/Admin/VatRules/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New VAT Rule
            </a>
            <a href="/Admin/VatRules/History" class="btn btn-outline-secondary">
                <i class="bi bi-clock-history"></i> View History
            </a>
        </div>
        <div class="col-md-6 text-end">
            <div class="btn-group" role="group">
                <a href="?filter=all" class="btn btn-outline-secondary @(Model.Filter == "all" ? "active" : "")">
                    All Rules
                </a>
                <a href="?filter=active" class="btn btn-outline-secondary @(Model.Filter == "active" ? "active" : "")">
                    Active Only
                </a>
            </div>
        </div>
    </div>

    <!-- VAT Rules Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> VAT & Tax Rules
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Rules.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Country/Region</th>
                                <th>Applicability</th>
                                <th>Tax Rate</th>
                                <th>Effective Dates</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rule in Model.Rules)
                            {
                                <tr class="@(!rule.IsActive ? "table-secondary" : "")">
                                    <td>
                                        <strong>@rule.Name</strong>
                                        @if (rule.Notes != null)
                                        {
                                            <br/>
                                            <small class="text-muted">@rule.Notes</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@rule.CountryCode</span>
                                        @if (!string.IsNullOrEmpty(rule.RegionCode))
                                        {
                                            <span class="badge bg-secondary">@rule.RegionCode</span>
                                        }
                                    </td>
                                    <td>
                                        @if (rule.ApplicabilityType == VatRuleApplicability.Global)
                                        {
                                            <span class="badge bg-primary">Global</span>
                                        }
                                        else if (rule.ApplicabilityType == VatRuleApplicability.Category)
                                        {
                                            <span class="badge bg-success">Category</span>
                                            @if (rule.Category != null)
                                            {
                                                <br/><small>@rule.Category.Name</small>
                                            }
                                        }
                                    </td>
                                    <td><strong>@rule.TaxPercentage.ToString("F2")%</strong></td>
                                    <td>
                                        <small>
                                            <strong>Start:</strong> @rule.EffectiveStartDate.ToString("yyyy-MM-dd")<br/>
                                            <strong>End:</strong> @(rule.EffectiveEndDate?.ToString("yyyy-MM-dd") ?? "No end date")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@rule.Priority</span>
                                    </td>
                                    <td>
                                        @if (rule.IsActive)
                                        {
                                            if (rule.EffectiveStartDate > DateTime.UtcNow.Date)
                                            {
                                                <span class="badge bg-info">Scheduled</span>
                                            }
                                            else if (rule.EffectiveEndDate.HasValue && rule.EffectiveEndDate < DateTime.UtcNow.Date)
                                            {
                                                <span class="badge bg-secondary">Expired</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/Admin/VatRules/Edit?id=@rule.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="confirmDelete(@rule.Id, '@rule.Name')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No VAT rules found.</p>
                    <a href="/Admin/VatRules/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Your First Rule
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<form method="post" id="deleteForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteRuleId" />
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the VAT rule <strong id="deleteRuleName"></strong>?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        This action cannot be undone. Existing transactions will continue to use historical rates.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete Rule</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete(ruleId, ruleName) {
            document.getElementById('deleteRuleId').value = ruleId;
            document.getElementById('deleteRuleName').textContent = ruleName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
