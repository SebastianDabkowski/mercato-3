@page
@model MercatoApp.Pages.Admin.VatRules.HistoryModel
@using MercatoApp.Models
@{
    ViewData["Title"] = "VAT Rule History - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/VatRules">VAT & Tax Rules</a></li>
                    <li class="breadcrumb-item active" aria-current="page">History</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-clock-history"></i> VAT Rule History & Audit Trail
            </h1>
            <p class="text-muted">
                View historical changes to VAT rules with timestamps and author information.
            </p>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filters
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="FromDate" class="form-label">From Date</label>
                    <input type="date" class="form-control" id="FromDate" name="FromDate" 
                        value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label for="ToDate" class="form-label">To Date</label>
                    <input type="date" class="form-control" id="ToDate" name="ToDate" 
                        value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label for="RuleId" class="form-label">Rule ID</label>
                    <input type="number" class="form-control" id="RuleId" name="RuleId" 
                        value="@Model.RuleId" placeholder="Optional" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                    <a href="/Admin/VatRules/History" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- History Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Audit History (@Model.Rules.Count record(s))
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Rules.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Country/Region</th>
                                <th>Tax Rate</th>
                                <th>Effective Period</th>
                                <th>Status</th>
                                <th>Created/Updated</th>
                                <th>By User</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rule in Model.Rules)
                            {
                                <tr class="@(!rule.IsActive ? "table-secondary" : "")">
                                    <td><strong>#@rule.Id</strong></td>
                                    <td>
                                        @rule.Name
                                        @if (rule.ApplicabilityType == VatRuleApplicability.Category && rule.Category != null)
                                        {
                                            <br/><small class="text-muted">Category: @rule.Category.Name</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@rule.CountryCode</span>
                                        @if (!string.IsNullOrEmpty(rule.RegionCode))
                                        {
                                            <span class="badge bg-secondary">@rule.RegionCode</span>
                                        }
                                    </td>
                                    <td><strong>@rule.TaxPercentage.ToString("F2")%</strong></td>
                                    <td>
                                        <small>
                                            @rule.EffectiveStartDate.ToString("yyyy-MM-dd") - 
                                            @(rule.EffectiveEndDate?.ToString("yyyy-MM-dd") ?? "No end")
                                        </small>
                                    </td>
                                    <td>
                                        @if (rule.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (rule.UpdatedAt.HasValue)
                                        {
                                            <small>
                                                <strong>Updated:</strong><br/>
                                                @rule.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                            </small>
                                        }
                                        else
                                        {
                                            <small>
                                                <strong>Created:</strong><br/>
                                                @rule.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (rule.UpdatedByUser != null)
                                        {
                                            <small>
                                                @rule.UpdatedByUser.FirstName @rule.UpdatedByUser.LastName<br/>
                                                <span class="text-muted">@rule.UpdatedByUser.Email</span>
                                            </small>
                                        }
                                        else if (rule.CreatedByUser != null)
                                        {
                                            <small>
                                                @rule.CreatedByUser.FirstName @rule.CreatedByUser.LastName<br/>
                                                <span class="text-muted">@rule.CreatedByUser.Email</span>
                                            </small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No history records found for the selected filters.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="/Admin/VatRules" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to VAT Rules
        </a>
    </div>
</div>
