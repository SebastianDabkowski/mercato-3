@page
@model MercatoApp.Pages.Admin.AuditLogs.DetailsModel
@{
    ViewData["Title"] = "Audit Log Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-shield-check"></i> Audit Log Details
                </h1>
                <a asp-page="/Admin/AuditLogs/Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            @if (Model.AuditLog != null)
            {
                <!-- Main Details Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Action Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Log ID:</strong>
                            </div>
                            <div class="col-md-9">
                                @Model.AuditLog.Id
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Timestamp:</strong>
                            </div>
                            <div class="col-md-9">
                                @Model.AuditLog.ActionTimestamp.ToString("MMMM dd, yyyy HH:mm:ss") UTC
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Admin User:</strong>
                            </div>
                            <div class="col-md-9">
                                @if (Model.AuditLog.AdminUser != null)
                                {
                                    <a asp-page="/Admin/Users/Details" asp-route-id="@Model.AuditLog.AdminUserId">
                                        @Model.AuditLog.AdminUser.Email (ID: @Model.AuditLog.AdminUserId)
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">User ID: @Model.AuditLog.AdminUserId</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Action:</strong>
                            </div>
                            <div class="col-md-9">
                                <span class="badge bg-primary">@Model.AuditLog.Action</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Entity Type:</strong>
                            </div>
                            <div class="col-md-9">
                                <span class="badge bg-secondary">@Model.AuditLog.EntityType</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Entity ID:</strong>
                            </div>
                            <div class="col-md-9">
                                @if (Model.AuditLog.EntityId.HasValue)
                                {
                                    <span>@Model.AuditLog.EntityId</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>Entity Display Name:</strong>
                            </div>
                            <div class="col-md-9">
                                @if (!string.IsNullOrEmpty(Model.AuditLog.EntityDisplayName))
                                {
                                    <span>@Model.AuditLog.EntityDisplayName</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </div>
                        </div>

                        @if (Model.AuditLog.TargetUserId.HasValue)
                        {
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Target User:</strong>
                                </div>
                                <div class="col-md-9">
                                    @if (Model.AuditLog.TargetUser != null)
                                    {
                                        <a asp-page="/Admin/Users/Details" asp-route-id="@Model.AuditLog.TargetUserId">
                                            @Model.AuditLog.TargetUser.Email (ID: @Model.AuditLog.TargetUserId)
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">User ID: @Model.AuditLog.TargetUserId</span>
                                    }
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AuditLog.Reason))
                        {
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Reason:</strong>
                                </div>
                                <div class="col-md-9">
                                    <div class="alert alert-info mb-0">
                                        @Model.AuditLog.Reason
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AuditLog.Metadata))
                        {
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <strong>Metadata:</strong>
                                </div>
                                <div class="col-md-9">
                                    <pre class="bg-light p-3 border rounded">@Model.AuditLog.Metadata</pre>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Navigation -->
                <div class="d-flex justify-content-between">
                    <a asp-page="/Admin/AuditLogs/Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>

                    @if (Model.AuditLog.EntityId.HasValue)
                    {
                        <a asp-page="/Admin/AuditLogs/Index" 
                           asp-route-Filter.EntityType="@Model.AuditLog.EntityType" 
                           asp-route-Filter.EntityId="@Model.AuditLog.EntityId" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-filter"></i> View All Logs for This Entity
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> 
                    Audit log entry not found.
                </div>
            }
        </div>
    </div>
</div>
