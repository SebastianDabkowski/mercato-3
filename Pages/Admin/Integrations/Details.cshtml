@page
@model MercatoApp.Pages.Admin.Integrations.DetailsModel
@{
    ViewData["Title"] = "Integration Details - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Integrations">Integration Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-diagram-3"></i> Integration Details
            </h1>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> @Model.Integration.Name
                    </h5>
                    @if (Model.Integration.IsEnabled)
                    {
                        <span class="badge bg-success">Enabled</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Disabled</span>
                    }
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Provider:</strong>
                            <p>@Model.Integration.Provider</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Type:</strong>
                            <p>@Model.Integration.Type</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Environment:</strong>
                            <p>
                                @switch (Model.Integration.Environment)
                                {
                                    case MercatoApp.Models.IntegrationEnvironment.Development:
                                        <span class="badge bg-info">Development</span>
                                        break;
                                    case MercatoApp.Models.IntegrationEnvironment.Sandbox:
                                        <span class="badge bg-warning text-dark">Sandbox</span>
                                        break;
                                    case MercatoApp.Models.IntegrationEnvironment.Production:
                                        <span class="badge bg-success">Production</span>
                                        break;
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <p>
                                @switch (Model.Integration.Status)
                                {
                                    case MercatoApp.Models.IntegrationStatus.Active:
                                        <span class="badge bg-success">Active</span>
                                        break;
                                    case MercatoApp.Models.IntegrationStatus.Inactive:
                                        <span class="badge bg-secondary">Inactive</span>
                                        break;
                                    case MercatoApp.Models.IntegrationStatus.Error:
                                        <span class="badge bg-danger">Error</span>
                                        break;
                                    case MercatoApp.Models.IntegrationStatus.Testing:
                                        <span class="badge bg-warning text-dark">Testing</span>
                                        break;
                                }
                            </p>
                        </div>
                    </div>

                    <hr />

                    <h6><i class="bi bi-key"></i> API Configuration</h6>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>API Endpoint:</strong>
                            <p>@(Model.Integration.ApiEndpoint ?? "Not configured")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>API Key:</strong>
                            <p><code>@Model.MaskedApiKey</code></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Merchant ID:</strong>
                            <p>@(Model.Integration.MerchantId ?? "Not configured")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>Callback URL:</strong>
                            <p>@(Model.Integration.CallbackUrl ?? "Not configured")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Integration.AdditionalConfig))
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Additional Configuration:</strong>
                                <pre class="bg-light p-2 rounded"><code>@Model.Integration.AdditionalConfig</code></pre>
                            </div>
                        </div>
                    }

                    <hr />

                    <h6><i class="bi bi-clock-history"></i> Timestamps</h6>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Created At:</strong>
                            <p>@Model.Integration.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Updated At:</strong>
                            <p>@(Model.Integration.UpdatedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Integrations" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a href="/Admin/Integrations/Edit?id=@Model.Integration.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Integration
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Health Check Panel -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-heart-pulse"></i> Health Check</h6>
                </div>
                <div class="card-body">
                    @if (Model.Integration.LastHealthCheckAt.HasValue)
                    {
                        <p class="mb-2">
                            <strong>Last Check:</strong><br />
                            <small>@Model.Integration.LastHealthCheckAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </p>
                        <p class="mb-2">
                            <strong>Status:</strong><br />
                            @if (Model.Integration.LastHealthCheckSuccess == true)
                            {
                                <span class="badge bg-success">Healthy</span>
                            }
                            else if (Model.Integration.LastHealthCheckSuccess == false)
                            {
                                <span class="badge bg-danger">Failed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unknown</span>
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Integration.LastHealthCheckStatus))
                        {
                            <p class="mb-2">
                                <strong>Message:</strong><br />
                                <small class="text-muted">@Model.Integration.LastHealthCheckStatus</small>
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No health checks performed yet.</p>
                    }

                    <form method="post" asp-page-handler="HealthCheck" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Integration.Id" />
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-arrow-clockwise"></i> Run Health Check
                        </button>
                    </form>

                    @if (Model.HealthCheckResult != null)
                    {
                        <div class="mt-3 p-3 @(Model.HealthCheckResult.Success ? "bg-success" : "bg-danger") text-white rounded">
                            <h6 class="mb-2">Recent Health Check Result</h6>
                            <p class="mb-1"><strong>Status:</strong> @(Model.HealthCheckResult.Success ? "Success" : "Failed")</p>
                            <p class="mb-1"><strong>Message:</strong> @Model.HealthCheckResult.Message</p>
                            <p class="mb-1"><small>Checked at: @Model.HealthCheckResult.CheckedAt.ToString("HH:mm:ss")</small></p>
                            @if (!string.IsNullOrEmpty(Model.HealthCheckResult.Details))
                            {
                                <p class="mb-0"><small>Details: @Model.HealthCheckResult.Details</small></p>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Integration.IsEnabled)
                        {
                            <form method="post" asp-page="/Admin/Integrations/Index" asp-page-handler="Disable">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Integration.Id" />
                                <button type="submit" class="btn btn-warning w-100" 
                                        onclick="return confirm('Disable this integration?');">
                                    <i class="bi bi-toggle-off"></i> Disable Integration
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page="/Admin/Integrations/Index" asp-page-handler="Enable">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Integration.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-toggle-on"></i> Enable Integration
                                </button>
                            </form>
                        }
                        <button type="button" class="btn btn-outline-danger w-100" 
                                onclick="confirmDelete(@Model.Integration.Id, '@Model.Integration.Name')">
                            <i class="bi bi-trash"></i> Delete Integration
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<form method="post" asp-page="/Admin/Integrations/Index" asp-page-handler="Delete" id="deleteForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteIntegrationId" />
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the integration <strong id="deleteIntegrationName"></strong>?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        This action cannot be undone. The integration will be permanently removed.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete Integration</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete(integrationId, integrationName) {
            document.getElementById('deleteIntegrationId').value = integrationId;
            document.getElementById('deleteIntegrationName').textContent = integrationName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
