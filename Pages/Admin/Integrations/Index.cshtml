@page
@model MercatoApp.Pages.Admin.Integrations.IndexModel
@using MercatoApp.Models
@{
    ViewData["Title"] = "Integration Management - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Integration Management</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-plug"></i> Integration Management
            </h1>
            <p class="text-muted">
                Configure and monitor external integrations for payment providers, logistics, and other systems.
            </p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Actions Bar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="/Admin/Integrations/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Integration
            </a>
        </div>
        <div class="col-md-6 text-end">
            <div class="btn-group" role="group" aria-label="Filter integrations">
                <a href="?filter=all" class="btn btn-outline-secondary @(Model.Filter == "all" ? "active" : "")">
                    All
                </a>
                <a href="?filter=enabled" class="btn btn-outline-secondary @(Model.Filter == "enabled" ? "active" : "")">
                    Enabled Only
                </a>
            </div>
            <div class="btn-group ms-2" role="group" aria-label="Filter by type">
                <a href="?" class="btn btn-outline-secondary @(!Model.TypeFilter.HasValue ? "active" : "")">
                    All Types
                </a>
                <a href="?typeFilter=@((int)IntegrationType.Payment)" class="btn btn-outline-secondary @(Model.TypeFilter == IntegrationType.Payment ? "active" : "")">
                    Payment
                </a>
                <a href="?typeFilter=@((int)IntegrationType.Shipping)" class="btn btn-outline-secondary @(Model.TypeFilter == IntegrationType.Shipping ? "active" : "")">
                    Shipping
                </a>
                <a href="?typeFilter=@((int)IntegrationType.ERP)" class="btn btn-outline-secondary @(Model.TypeFilter == IntegrationType.ERP ? "active" : "")">
                    ERP
                </a>
            </div>
        </div>
    </div>

    <!-- Integrations Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Configured Integrations
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Integrations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Provider</th>
                                <th>Environment</th>
                                <th>Status</th>
                                <th>Last Health Check</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var integration in Model.Integrations)
                            {
                                <tr class="@(!integration.IsEnabled ? "table-secondary" : "")">
                                    <td>
                                        <strong>@integration.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@integration.Type</span>
                                    </td>
                                    <td>@integration.Provider</td>
                                    <td>
                                        @if (integration.Environment == IntegrationEnvironment.Production)
                                        {
                                            <span class="badge bg-danger">Production</span>
                                        }
                                        else if (integration.Environment == IntegrationEnvironment.Sandbox)
                                        {
                                            <span class="badge bg-warning text-dark">Sandbox</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Development</span>
                                        }
                                    </td>
                                    <td>
                                        @if (integration.Status == IntegrationStatus.Active)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Active
                                            </span>
                                        }
                                        else if (integration.Status == IntegrationStatus.Error)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-triangle"></i> Error
                                            </span>
                                        }
                                        else if (integration.Status == IntegrationStatus.Testing)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-gear"></i> Testing
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle"></i> Inactive
                                            </span>
                                        }
                                        @if (!integration.IsEnabled)
                                        {
                                            <span class="badge bg-dark ms-1">Disabled</span>
                                        }
                                    </td>
                                    <td>
                                        @if (integration.LastHealthCheckAt.HasValue)
                                        {
                                            <small>
                                                @integration.LastHealthCheckAt.Value.ToString("yyyy-MM-dd HH:mm")
                                                @if (integration.LastHealthCheckSuccess == true)
                                                {
                                                    <i class="bi bi-check-circle text-success" title="@integration.LastHealthCheckStatus"></i>
                                                }
                                                else if (integration.LastHealthCheckSuccess == false)
                                                {
                                                    <i class="bi bi-x-circle text-danger" title="@integration.LastHealthCheckStatus"></i>
                                                }
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Never checked</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/Admin/Integrations/Details?id=@integration.Id" class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/Admin/Integrations/Edit?id=@integration.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (integration.IsEnabled)
                                            {
                                                <form method="post" class="d-inline" asp-page-handler="Disable">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@integration.Id" />
                                                    <button type="submit" class="btn btn-outline-warning" title="Disable"
                                                            onclick="return confirm('Disable @integration.Name? Calls to this integration will be blocked.');">
                                                        <i class="bi bi-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" class="d-inline" asp-page-handler="Enable">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@integration.Id" />
                                                    <button type="submit" class="btn btn-outline-success" title="Enable">
                                                        <i class="bi bi-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="confirmDelete(@integration.Id, '@integration.Name')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No integrations configured.</p>
                    <a href="/Admin/Integrations/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your First Integration
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Information Card -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Important Notes</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li><strong>Security:</strong> API keys and secrets are masked in the UI. Full values are never displayed once saved.</li>
                        <li><strong>Disabling:</strong> When an integration is disabled, all calls to it are gracefully blocked with appropriate error messages.</li>
                        <li><strong>Environments:</strong> Use Development/Sandbox for testing and Production for live transactions.</li>
                        <li><strong>Health Checks:</strong> Run health checks from the details page to verify configuration and connectivity.</li>
                        <li><strong>Multiple Environments:</strong> You can configure separate integrations for different environments (dev, test, prod).</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<form method="post" id="deleteForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteIntegrationId" />
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the integration <strong id="deleteIntegrationName"></strong>?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        This action cannot be undone. Make sure this integration is not actively used.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete Integration</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete(integrationId, integrationName) {
            document.getElementById('deleteIntegrationId').value = integrationId;
            document.getElementById('deleteIntegrationName').textContent = integrationName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
