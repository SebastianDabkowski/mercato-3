@page
@model MercatoApp.Pages.Admin.Products.Moderation.DetailsModel
@{
    ViewData["Title"] = "Product Moderation Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2>Product Moderation Details</h2>
                    <p class="text-muted">Review product details and moderation history.</p>
                </div>
                <div>
                    <a href="/Admin/Products/Moderation" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="row">
            <div class="col-md-8">
                <!-- Product Information Card -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Product Information</h5>
                        <div>
                            <span class="badge @(Model.Product.ModerationStatus == MercatoApp.Models.ProductModerationStatus.Approved ? "bg-success" : 
                                                  Model.Product.ModerationStatus == MercatoApp.Models.ProductModerationStatus.Rejected ? "bg-danger" : "bg-warning text-dark")">
                                @Model.Product.ModerationStatus
                            </span>
                            <span class="badge @(Model.Product.Status == MercatoApp.Models.ProductStatus.Active ? "bg-primary" : 
                                                  Model.Product.Status == MercatoApp.Models.ProductStatus.Draft ? "bg-secondary" : "bg-dark")">
                                @Model.Product.Status
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.Product.ImageUrls))
                                {
                                    var images = Model.Product.ImageUrls.Split(',').Select(i => i.Trim()).ToList();
                                    @if (images.Any())
                                    {
                                        <img src="@images.First()" class="img-fluid rounded mb-2" alt="@Model.Product.Title" />
                                        @if (images.Count > 1)
                                        {
                                            <div class="row g-2">
                                                @foreach (var img in images.Skip(1))
                                                {
                                                    <div class="col-4">
                                                        <img src="@img" class="img-fluid rounded" alt="Additional image" />
                                                    </div>
                                                }
                                            </div>
                                        }
                                    }
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 250px;">
                                        <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <h4>@Model.Product.Title</h4>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-4">Product ID</dt>
                                    <dd class="col-sm-8">@Model.Product.Id</dd>

                                    <dt class="col-sm-4">Seller</dt>
                                    <dd class="col-sm-8">
                                        <strong>@Model.Product.Store.StoreName</strong><br />
                                        <small class="text-muted">@Model.Product.Store.User.Email</small>
                                    </dd>

                                    <dt class="col-sm-4">Category</dt>
                                    <dd class="col-sm-8">@Model.Product.Category</dd>

                                    <dt class="col-sm-4">Price</dt>
                                    <dd class="col-sm-8">@Model.Product.Price.ToString("C")</dd>

                                    <dt class="col-sm-4">Stock</dt>
                                    <dd class="col-sm-8">@Model.Product.Stock</dd>

                                    <dt class="col-sm-4">Condition</dt>
                                    <dd class="col-sm-8">@Model.Product.Condition</dd>

                                    <dt class="col-sm-4">Created</dt>
                                    <dd class="col-sm-8">@Model.Product.CreatedAt.ToString("MMM d, yyyy h:mm tt")</dd>

                                    <dt class="col-sm-4">Last Updated</dt>
                                    <dd class="col-sm-8">@Model.Product.UpdatedAt.ToString("MMM d, yyyy h:mm tt")</dd>
                                </dl>

                                <h6 class="mt-3">Description</h6>
                                <div class="bg-light p-3 rounded">
                                    @(Model.Product.Description ?? "(No description provided)")
                                </div>

                                @if (Model.Product.Weight.HasValue || Model.Product.Length.HasValue)
                                {
                                    <h6 class="mt-3">Shipping Information</h6>
                                    <dl class="row">
                                        @if (Model.Product.Weight.HasValue)
                                        {
                                            <dt class="col-sm-4">Weight</dt>
                                            <dd class="col-sm-8">@Model.Product.Weight.Value kg</dd>
                                        }
                                        @if (Model.Product.Length.HasValue || Model.Product.Width.HasValue || Model.Product.Height.HasValue)
                                        {
                                            <dt class="col-sm-4">Dimensions</dt>
                                            <dd class="col-sm-8">
                                                @(Model.Product.Length ?? 0) x @(Model.Product.Width ?? 0) x @(Model.Product.Height ?? 0) cm
                                            </dd>
                                        }
                                    </dl>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Moderation History Card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Moderation History</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.ModerationHistory.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Action</th>
                                            <th>Moderator</th>
                                            <th>Status Change</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var log in Model.ModerationHistory)
                                        {
                                            <tr>
                                                <td>@log.CreatedAt.ToString("MMM d, yyyy h:mm tt")</td>
                                                <td>
                                                    <span class="badge @(log.Action == MercatoApp.Models.ProductModerationAction.Approved ? "bg-success" : 
                                                                         log.Action == MercatoApp.Models.ProductModerationAction.Rejected ? "bg-danger" : "bg-secondary")">
                                                        @log.Action
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (log.ModeratedByUser != null)
                                                    {
                                                        <text>@log.ModeratedByUser.FirstName @log.ModeratedByUser.LastName</text>
                                                    }
                                                    else
                                                    {
                                                        <em class="text-muted">System</em>
                                                    }
                                                </td>
                                                <td>
                                                    @if (log.PreviousStatus.HasValue && log.NewStatus.HasValue)
                                                    {
                                                        <small>@log.PreviousStatus â†’ @log.NewStatus</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(log.Reason))
                                                    {
                                                        <small>@log.Reason</small>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No moderation history available.</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Moderation Actions Card -->
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header">
                        <h5 class="mb-0">Moderation Actions</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Product.ModerationStatus != MercatoApp.Models.ProductModerationStatus.Approved)
                        {
                            <div class="mb-3">
                                <h6>Approve Product</h6>
                                <form method="post" asp-page-handler="Approve">
                                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                                    <div class="mb-2">
                                        <label class="form-label">Optional Note:</label>
                                        <textarea name="reason" class="form-control" rows="2" placeholder="Optional approval note to seller..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle"></i> Approve Product
                                    </button>
                                </form>
                            </div>
                            <hr />
                        }

                        @if (Model.Product.ModerationStatus != MercatoApp.Models.ProductModerationStatus.Rejected)
                        {
                            <div class="mb-3">
                                <h6>Reject Product</h6>
                                <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="bi bi-x-circle"></i> Reject Product
                                </button>
                            </div>
                        }

                        <hr />
                        <div class="text-muted small">
                            <p class="mb-1"><strong>Current Moderation Status:</strong> @Model.Product.ModerationStatus</p>
                            <p class="mb-0"><strong>Current Product Status:</strong> @Model.Product.Status</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reject Modal -->
        <div class="modal fade" id="rejectModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="Reject">
                        <div class="modal-header">
                            <h5 class="modal-title">Reject Product</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="productId" value="@Model.Product.Id" />
                            <div class="mb-3">
                                <label class="form-label">Reason for rejection (required):</label>
                                <textarea name="reason" class="form-control" rows="4" required placeholder="Provide a detailed reason for rejection..."></textarea>
                                <div class="form-text">This reason will be sent to the seller via email.</div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Reject Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Product not found.
        </div>
    }
</div>
