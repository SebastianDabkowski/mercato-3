@page
@model MercatoApp.Pages.Admin.Reviews.DetailsModel
@{
    ViewData["Title"] = "Review Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <a href="/Admin/Reviews" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Back to Review Moderation
            </a>
            <h2>Review Details</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <!-- Review Content -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Review Content</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Product:</h6>
                        <p class="mb-0">@Model.Review.Product.Title</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Rating:</h6>
                        <p class="mb-0">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="@(i <= Model.Review.Rating ? "text-warning" : "text-muted")" style="font-size: 1.5rem;">â˜…</span>
                            }
                            (@Model.Review.Rating/5)
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Review Text:</h6>
                        <div class="bg-light p-3 rounded">
                            @if (string.IsNullOrEmpty(Model.Review.ReviewText))
                            {
                                <em class="text-muted">(No review text provided)</em>
                            }
                            else
                            {
                                @Model.Review.ReviewText
                            }
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Reviewer:</h6>
                            <p class="mb-0">@Model.Review.User.FirstName @Model.Review.User.LastName</p>
                            <p class="text-muted small">User ID: @Model.Review.UserId</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Submitted:</h6>
                            <p class="mb-0">@Model.Review.CreatedAt.ToString("MMMM d, yyyy h:mm tt")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Flags -->
            @if (Model.Flags.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Flags</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var flag in Model.Flags)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@flag.Reason.ToString().Replace("_", " ")</strong>
                                        @if (flag.IsAutomated)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Automated</span>
                                        }
                                        @if (!flag.IsActive)
                                        {
                                            <span class="badge bg-secondary ms-2">Resolved</span>
                                        }
                                        <br/>
                                        <small class="text-muted">
                                            Flagged @flag.CreatedAt.ToString("MMM d, yyyy h:mm tt")
                                            @if (flag.FlaggedByUser != null)
                                            {
                                                <text> by @flag.FlaggedByUser.FirstName @flag.FlaggedByUser.LastName</text>
                                            }
                                        </small>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(flag.Details))
                                {
                                    <p class="mt-2 mb-0"><small><strong>Details:</strong> @flag.Details</small></p>
                                }
                                @if (!flag.IsActive && flag.ResolvedByUser != null)
                                {
                                    <p class="mt-2 mb-0">
                                        <small class="text-muted">
                                            Resolved by @flag.ResolvedByUser.FirstName @flag.ResolvedByUser.LastName on @flag.ResolvedAt?.ToString("MMM d, yyyy h:mm tt")
                                        </small>
                                    </p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Moderation History -->
            @if (Model.ModerationHistory.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Moderation History</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var log in Model.ModerationHistory)
                            {
                                <div class="border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>@log.Action.ToString().Replace("_", " ")</strong>
                                            @if (log.IsAutomated)
                                            {
                                                <span class="badge bg-secondary ms-2">Automated</span>
                                            }
                                            <br/>
                                            <small class="text-muted">
                                                @log.CreatedAt.ToString("MMMM d, yyyy h:mm tt")
                                                @if (log.ModeratedByUser != null)
                                                {
                                                    <text> by @log.ModeratedByUser.FirstName @log.ModeratedByUser.LastName</text>
                                                }
                                            </small>
                                        </div>
                                        <div>
                                            @if (log.PreviousStatus.HasValue && log.NewStatus.HasValue)
                                            {
                                                <span class="badge bg-secondary">@log.PreviousStatus</span>
                                                <i class="bi bi-arrow-right"></i>
                                                <span class="badge bg-primary">@log.NewStatus</span>
                                            }
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(log.Reason))
                                    {
                                        <p class="mt-2 mb-0"><small><strong>Reason:</strong> @log.Reason</small></p>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <!-- Status & Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Status & Actions</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Current Status:</h6>
                        <span class="badge @(Model.Review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Approved ? "bg-success" : 
                                             Model.Review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Rejected ? "bg-danger" : 
                                             Model.Review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Flagged ? "bg-warning" : "bg-secondary")" 
                              style="font-size: 1rem;">
                            @Model.Review.ModerationStatus
                        </span>
                    </div>

                    <div class="mb-3">
                        <h6>Visibility:</h6>
                        <span class="badge @(Model.Review.IsApproved ? "bg-success" : "bg-danger")" style="font-size: 1rem;">
                            @(Model.Review.IsApproved ? "Visible" : "Hidden")
                        </span>
                    </div>

                    @if (Model.Review.ModeratedByUser != null)
                    {
                        <div class="mb-3">
                            <h6>Last Moderated By:</h6>
                            <p class="mb-0">@Model.Review.ModeratedByUser.FirstName @Model.Review.ModeratedByUser.LastName</p>
                            <small class="text-muted">@Model.Review.ModeratedAt?.ToString("MMM d, yyyy h:mm tt")</small>
                        </div>
                    }

                    <hr />

                    <div class="d-grid gap-2">
                        @if (Model.Review.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Approved)
                        {
                            <form method="post" asp-page-handler="Approve">
                                <input type="hidden" name="reviewId" value="@Model.Review.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Approve Review
                                </button>
                            </form>
                        }

                        @if (Model.Review.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Rejected)
                        {
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="bi bi-x-circle"></i> Reject Review
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Product Information -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.Review.Product.Title</h6>
                    <p class="text-muted small">Product ID: @Model.Review.ProductId</p>
                    <a href="/Product?id=@Model.Review.ProductId" class="btn btn-outline-primary btn-sm" target="_blank">
                        View Product <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Reject">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Review</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="reviewId" value="@Model.Review.Id" />
                    <div class="mb-3">
                        <label class="form-label">Reason for rejection:</label>
                        <textarea name="reason" class="form-control" rows="3" required 
                                  placeholder="Please provide a clear reason for rejecting this review..."></textarea>
                        <div class="form-text">This reason will be logged in the moderation history.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Review</button>
                </div>
            </form>
        </div>
    </div>
</div>
