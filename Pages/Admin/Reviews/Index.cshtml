@page
@model MercatoApp.Pages.Admin.Reviews.IndexModel
@{
    ViewData["Title"] = "Review Moderation";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Review Moderation</h2>
            <p class="text-muted">Manage and moderate product reviews and seller ratings for content policy compliance.</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter by Review Type -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="?tab=@Model.CurrentTab&type=all" class="btn btn-sm btn-outline-primary @(Model.ReviewType == "all" ? "active" : "")">
                    All Reviews
                </a>
                <a href="?tab=@Model.CurrentTab&type=product" class="btn btn-sm btn-outline-primary @(Model.ReviewType == "product" ? "active" : "")">
                    Product Reviews
                </a>
                <a href="?tab=@Model.CurrentTab&type=seller" class="btn btn-sm btn-outline-primary @(Model.ReviewType == "seller" ? "active" : "")">
                    Seller Ratings
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h5>Product Reviews</h5>
            <div class="row">
                <div class="col-md-6 mb-2">
                    <div class="card bg-warning text-white">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Active Flags</h6>
                            <h4 class="mb-0">@Model.ProductStats.GetValueOrDefault("ActiveFlags", 0)</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-2">
                    <div class="card bg-info text-white">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Pending</h6>
                            <h4 class="mb-0">@Model.ProductStats.GetValueOrDefault("PendingReview", 0)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h5>Seller Ratings</h5>
            <div class="row">
                <div class="col-md-6 mb-2">
                    <div class="card bg-warning text-white">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Active Flags</h6>
                            <h4 class="mb-0">@Model.SellerStats.GetValueOrDefault("ActiveFlags", 0)</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-2">
                    <div class="card bg-info text-white">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Pending</h6>
                            <h4 class="mb-0">@Model.SellerStats.GetValueOrDefault("PendingReview", 0)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="reviewTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.CurrentTab == "flagged" ? "active" : "")" 
               href="?tab=flagged&type=@Model.ReviewType" role="tab">
                Flagged Reviews
                @{
                    var totalFlags = Model.ProductStats.GetValueOrDefault("ActiveFlags", 0) + Model.SellerStats.GetValueOrDefault("ActiveFlags", 0);
                }
                @if (totalFlags > 0)
                {
                    <span class="badge bg-warning">@totalFlags</span>
                }
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.CurrentTab == "pending" ? "active" : "")" 
               href="?tab=pending&type=@Model.ReviewType" role="tab">
                Pending Reviews
                @{
                    var totalPending = Model.ProductStats.GetValueOrDefault("PendingReview", 0) + Model.SellerStats.GetValueOrDefault("PendingReview", 0);
                }
                @if (totalPending > 0)
                {
                    <span class="badge bg-info">@totalPending</span>
                }
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.CurrentTab == "approved" ? "active" : "")" 
               href="?tab=approved&type=@Model.ReviewType" role="tab">
                Approved Reviews
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.CurrentTab == "rejected" ? "active" : "")" 
               href="?tab=rejected&type=@Model.ReviewType" role="tab">
                Rejected Reviews
            </a>
        </li>
    </ul>

    <div class="tab-content mt-4" id="reviewTabsContent">
        <!-- Flagged Reviews Tab -->
        @if (Model.CurrentTab == "flagged")
        {
            <div class="tab-pane fade show active">
                <!-- Product Review Flags -->
                @if (Model.ReviewType == "all" || Model.ReviewType == "product")
                {
                    @if (Model.FlaggedProductReviews.Any())
                    {
                        <h4 class="mb-3">Product Reviews</h4>
                        foreach (var flag in Model.FlaggedProductReviews)
                        {
                            <div class="card mb-3 @(flag.IsAutomated ? "border-warning" : "border-danger")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-primary">Product Review</span>
                                        @if (flag.IsAutomated)
                                        {
                                            <span class="badge bg-warning text-dark">Auto-Flagged</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">User Reported</span>
                                        }
                                        <strong>@flag.Reason.ToString().Replace("_", " ")</strong>
                                        <small class="text-muted ms-2">Flagged @flag.CreatedAt.ToString("MMM d, yyyy h:mm tt")</small>
                                    </div>
                                    <div>
                                        <span class="badge @(flag.ProductReview.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Approved ? "bg-success" : 
                                                             flag.ProductReview.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Rejected ? "bg-danger" : 
                                                             flag.ProductReview.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Flagged ? "bg-warning" : "bg-secondary")">
                                            @flag.ProductReview.ModerationStatus
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6>Product: @flag.ProductReview.Product.Title</h6>
                                            <p class="mb-2">
                                                <strong>Rating:</strong>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="@(i <= flag.ProductReview.Rating ? "text-warning" : "text-muted")">★</span>
                                                }
                                            </p>
                                            <p class="mb-2"><strong>Review:</strong></p>
                                            <div class="bg-light p-3 rounded">
                                                @(flag.ProductReview.ReviewText ?? "(No text)")
                                            </div>
                                            @if (!string.IsNullOrEmpty(flag.Details))
                                            {
                                                <p class="mt-2 mb-0"><small><strong>Flag Details:</strong> @flag.Details</small></p>
                                            }
                                            <p class="mt-2 mb-0">
                                                <small class="text-muted">
                                                    Submitted by @flag.ProductReview.User.FirstName @flag.ProductReview.User.LastName on @flag.ProductReview.CreatedAt.ToString("MMM d, yyyy")
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid gap-2">
                                                <form method="post" asp-page-handler="ApproveProductReview" class="d-inline">
                                                    <input type="hidden" name="reviewId" value="@flag.ProductReview.Id" />
                                                    <input type="hidden" name="returnTab" value="flagged" />
                                                    <button type="submit" class="btn btn-success w-100">
                                                        <i class="bi bi-check-circle"></i> Approve Review
                                                    </button>
                                                </form>
                                                
                                                <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectProductModal-@flag.Id">
                                                    <i class="bi bi-x-circle"></i> Reject Review
                                                </button>
                                                
                                                <form method="post" asp-page-handler="ResolveProductFlag" class="d-inline">
                                                    <input type="hidden" name="flagId" value="@flag.Id" />
                                                    <input type="hidden" name="returnTab" value="flagged" />
                                                    <button type="submit" class="btn btn-outline-primary w-100">
                                                        <i class="bi bi-flag"></i> Resolve Flag Only
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Reject Modal for Product Review -->
                            <div class="modal fade" id="rejectProductModal-@flag.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Product Review</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" asp-page-handler="RejectProductReview">
                                            <div class="modal-body">
                                                <input type="hidden" name="reviewId" value="@flag.ProductReview.Id" />
                                                <input type="hidden" name="returnTab" value="flagged" />
                                                <div class="mb-3">
                                                    <label for="reason-@flag.Id" class="form-label">Reason for Rejection *</label>
                                                    <select class="form-select" id="reason-@flag.Id" name="reason" required>
                                                        <option value="">Select a reason...</option>
                                                        <option value="Hate speech or harassment">Hate speech or harassment</option>
                                                        <option value="Spam or fake review">Spam or fake review</option>
                                                        <option value="Off-topic or irrelevant">Off-topic or irrelevant</option>
                                                        <option value="Contains personal information">Contains personal information</option>
                                                        <option value="Inappropriate language">Inappropriate language</option>
                                                        <option value="Fraudulent content">Fraudulent content</option>
                                                        <option value="Other policy violation">Other policy violation</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Review</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                
                <!-- Seller Rating Flags -->
                @if (Model.ReviewType == "all" || Model.ReviewType == "seller")
                {
                    @if (Model.FlaggedSellerRatings.Any())
                    {
                        <h4 class="mb-3 @(Model.ReviewType == "all" ? "mt-4" : "")">Seller Ratings</h4>
                        foreach (var flag in Model.FlaggedSellerRatings)
                        {
                            <div class="card mb-3 @(flag.IsAutomated ? "border-warning" : "border-danger")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-success">Seller Rating</span>
                                        @if (flag.IsAutomated)
                                        {
                                            <span class="badge bg-warning text-dark">Auto-Flagged</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">User Reported</span>
                                        }
                                        <strong>@flag.Reason.ToString().Replace("_", " ")</strong>
                                        <small class="text-muted ms-2">Flagged @flag.CreatedAt.ToString("MMM d, yyyy h:mm tt")</small>
                                    </div>
                                    <div>
                                        <span class="badge @(flag.SellerRating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Approved ? "bg-success" : 
                                                             flag.SellerRating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Rejected ? "bg-danger" : 
                                                             flag.SellerRating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Flagged ? "bg-warning" : "bg-secondary")">
                                            @flag.SellerRating.ModerationStatus
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6>Store: @flag.SellerRating.Store.StoreName</h6>
                                            <p class="mb-2">
                                                <strong>Rating:</strong>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="@(i <= flag.SellerRating.Rating ? "text-warning" : "text-muted")">★</span>
                                                }
                                            </p>
                                            @if (!string.IsNullOrWhiteSpace(flag.SellerRating.ReviewText))
                                            {
                                                <p class="mb-2"><strong>Review:</strong></p>
                                                <div class="bg-light p-3 rounded">
                                                    @flag.SellerRating.ReviewText
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(flag.Details))
                                            {
                                                <p class="mt-2 mb-0"><small><strong>Flag Details:</strong> @flag.Details</small></p>
                                            }
                                            <p class="mt-2 mb-0">
                                                <small class="text-muted">
                                                    Submitted by @flag.SellerRating.User.FirstName @flag.SellerRating.User.LastName on @flag.SellerRating.CreatedAt.ToString("MMM d, yyyy")
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid gap-2">
                                                <form method="post" asp-page-handler="ApproveSellerRating" class="d-inline">
                                                    <input type="hidden" name="ratingId" value="@flag.SellerRating.Id" />
                                                    <input type="hidden" name="returnTab" value="flagged" />
                                                    <button type="submit" class="btn btn-success w-100">
                                                        <i class="bi bi-check-circle"></i> Approve Rating
                                                    </button>
                                                </form>
                                                
                                                <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectSellerModal-@flag.Id">
                                                    <i class="bi bi-x-circle"></i> Reject Rating
                                                </button>
                                                
                                                <form method="post" asp-page-handler="ResolveSellerFlag" class="d-inline">
                                                    <input type="hidden" name="flagId" value="@flag.Id" />
                                                    <input type="hidden" name="returnTab" value="flagged" />
                                                    <button type="submit" class="btn btn-outline-primary w-100">
                                                        <i class="bi bi-flag"></i> Resolve Flag Only
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Reject Modal for Seller Rating -->
                            <div class="modal fade" id="rejectSellerModal-@flag.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Seller Rating</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" asp-page-handler="RejectSellerRating">
                                            <div class="modal-body">
                                                <input type="hidden" name="ratingId" value="@flag.SellerRating.Id" />
                                                <input type="hidden" name="returnTab" value="flagged" />
                                                <div class="mb-3">
                                                    <label for="reason-seller-@flag.Id" class="form-label">Reason for Rejection *</label>
                                                    <select class="form-select" id="reason-seller-@flag.Id" name="reason" required>
                                                        <option value="">Select a reason...</option>
                                                        <option value="Hate speech or harassment">Hate speech or harassment</option>
                                                        <option value="Spam or fake rating">Spam or fake rating</option>
                                                        <option value="Off-topic or irrelevant">Off-topic or irrelevant</option>
                                                        <option value="Contains personal information">Contains personal information</option>
                                                        <option value="Inappropriate language">Inappropriate language</option>
                                                        <option value="Fraudulent content">Fraudulent content</option>
                                                        <option value="Other policy violation">Other policy violation</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Rating</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                
                @if (!Model.FlaggedProductReviews.Any() && !Model.FlaggedSellerRatings.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No flagged reviews to display.
                    </div>
                }
            </div>
        }

        <!-- Other Status Tabs (Pending, Approved, Rejected) -->
        @if (Model.CurrentTab != "flagged")
        {
            <div class="tab-pane fade show active">
                <!-- Product Reviews -->
                @if (Model.ReviewType == "all" || Model.ReviewType == "product")
                {
                    @if (Model.ProductReviews.Any())
                    {
                        <h4 class="mb-3">Product Reviews</h4>
                        foreach (var review in Model.ProductReviews)
                        {
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-primary">Product Review</span>
                                        <strong>@review.Product.Title</strong>
                                        <small class="text-muted ms-2">@review.CreatedAt.ToString("MMM d, yyyy h:mm tt")</small>
                                    </div>
                                    <span class="badge @(review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Approved ? "bg-success" : 
                                                         review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Rejected ? "bg-danger" : 
                                                         review.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Flagged ? "bg-warning" : "bg-secondary")">
                                        @review.ModerationStatus
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p class="mb-2">
                                                <strong>Rating:</strong>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="@(i <= review.Rating ? "text-warning" : "text-muted")">★</span>
                                                }
                                            </p>
                                            @if (!string.IsNullOrWhiteSpace(review.ReviewText))
                                            {
                                                <p class="mb-2"><strong>Review:</strong></p>
                                                <div class="bg-light p-3 rounded">
                                                    @review.ReviewText
                                                </div>
                                            }
                                            <p class="mt-2 mb-0">
                                                <small class="text-muted">
                                                    Submitted by @review.User.FirstName @review.User.LastName
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid gap-2">
                                                @if (review.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Approved)
                                                {
                                                    <form method="post" asp-page-handler="ApproveProductReview" class="d-inline">
                                                        <input type="hidden" name="reviewId" value="@review.Id" />
                                                        <input type="hidden" name="returnTab" value="@Model.CurrentTab" />
                                                        <button type="submit" class="btn btn-success w-100">
                                                            <i class="bi bi-check-circle"></i> Approve
                                                        </button>
                                                    </form>
                                                }
                                                
                                                @if (review.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Rejected)
                                                {
                                                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectProductModal-other-@review.Id">
                                                        <i class="bi bi-x-circle"></i> Reject
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Reject Modal for Product -->
                            <div class="modal fade" id="rejectProductModal-other-@review.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Product Review</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" asp-page-handler="RejectProductReview">
                                            <div class="modal-body">
                                                <input type="hidden" name="reviewId" value="@review.Id" />
                                                <input type="hidden" name="returnTab" value="@Model.CurrentTab" />
                                                <div class="mb-3">
                                                    <label class="form-label">Reason for Rejection *</label>
                                                    <select class="form-select" name="reason" required>
                                                        <option value="">Select a reason...</option>
                                                        <option value="Hate speech or harassment">Hate speech or harassment</option>
                                                        <option value="Spam or fake review">Spam or fake review</option>
                                                        <option value="Off-topic or irrelevant">Off-topic or irrelevant</option>
                                                        <option value="Contains personal information">Contains personal information</option>
                                                        <option value="Inappropriate language">Inappropriate language</option>
                                                        <option value="Fraudulent content">Fraudulent content</option>
                                                        <option value="Other policy violation">Other policy violation</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Review</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                
                <!-- Seller Ratings -->
                @if (Model.ReviewType == "all" || Model.ReviewType == "seller")
                {
                    @if (Model.SellerRatings.Any())
                    {
                        <h4 class="mb-3 @(Model.ReviewType == "all" ? "mt-4" : "")">Seller Ratings</h4>
                        foreach (var rating in Model.SellerRatings)
                        {
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-success">Seller Rating</span>
                                        <strong>@rating.Store.StoreName</strong>
                                        <small class="text-muted ms-2">@rating.CreatedAt.ToString("MMM d, yyyy h:mm tt")</small>
                                    </div>
                                    <span class="badge @(rating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Approved ? "bg-success" : 
                                                         rating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Rejected ? "bg-danger" : 
                                                         rating.ModerationStatus == MercatoApp.Models.ReviewModerationStatus.Flagged ? "bg-warning" : "bg-secondary")">
                                        @rating.ModerationStatus
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p class="mb-2">
                                                <strong>Rating:</strong>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="@(i <= rating.Rating ? "text-warning" : "text-muted")">★</span>
                                                }
                                            </p>
                                            @if (!string.IsNullOrWhiteSpace(rating.ReviewText))
                                            {
                                                <p class="mb-2"><strong>Review:</strong></p>
                                                <div class="bg-light p-3 rounded">
                                                    @rating.ReviewText
                                                </div>
                                            }
                                            <p class="mt-2 mb-0">
                                                <small class="text-muted">
                                                    Submitted by @rating.User.FirstName @rating.User.LastName
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid gap-2">
                                                @if (rating.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Approved)
                                                {
                                                    <form method="post" asp-page-handler="ApproveSellerRating" class="d-inline">
                                                        <input type="hidden" name="ratingId" value="@rating.Id" />
                                                        <input type="hidden" name="returnTab" value="@Model.CurrentTab" />
                                                        <button type="submit" class="btn btn-success w-100">
                                                            <i class="bi bi-check-circle"></i> Approve
                                                        </button>
                                                    </form>
                                                }
                                                
                                                @if (rating.ModerationStatus != MercatoApp.Models.ReviewModerationStatus.Rejected)
                                                {
                                                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectSellerModal-other-@rating.Id">
                                                        <i class="bi bi-x-circle"></i> Reject
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Reject Modal for Seller Rating -->
                            <div class="modal fade" id="rejectSellerModal-other-@rating.Id" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Reject Seller Rating</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form method="post" asp-page-handler="RejectSellerRating">
                                            <div class="modal-body">
                                                <input type="hidden" name="ratingId" value="@rating.Id" />
                                                <input type="hidden" name="returnTab" value="@Model.CurrentTab" />
                                                <div class="mb-3">
                                                    <label class="form-label">Reason for Rejection *</label>
                                                    <select class="form-select" name="reason" required>
                                                        <option value="">Select a reason...</option>
                                                        <option value="Hate speech or harassment">Hate speech or harassment</option>
                                                        <option value="Spam or fake rating">Spam or fake rating</option>
                                                        <option value="Off-topic or irrelevant">Off-topic or irrelevant</option>
                                                        <option value="Contains personal information">Contains personal information</option>
                                                        <option value="Inappropriate language">Inappropriate language</option>
                                                        <option value="Fraudulent content">Fraudulent content</option>
                                                        <option value="Other policy violation">Other policy violation</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject Rating</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                
                @if (!Model.ProductReviews.Any() && !Model.SellerRatings.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No @Model.CurrentTab reviews found.
                    </div>
                }
            </div>
        }
    </div>
</div>
