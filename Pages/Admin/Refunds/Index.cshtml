@page
@model MercatoApp.Pages.Admin.Refunds.IndexModel
@{
    ViewData["Title"] = "Refund Transactions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Refund Transactions</h2>
        <a asp-page="/Admin/Refunds/ProcessRefund" class="btn btn-primary">
            <i class="bi bi-arrow-return-left"></i> Process New Refund
        </a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Refunds</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="status" id="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="Requested" selected="@(Model.FilterStatus == "Requested")">Requested</option>
                        <option value="Processing" selected="@(Model.FilterStatus == "Processing")">Processing</option>
                        <option value="Completed" selected="@(Model.FilterStatus == "Completed")">Completed</option>
                        <option value="Failed" selected="@(Model.FilterStatus == "Failed")">Failed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="orderNumber" class="form-label">Order Number</label>
                    <input type="text" name="orderNumber" id="orderNumber" class="form-control" 
                           value="@Model.FilterOrderNumber" placeholder="Search order...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a asp-page="/Admin/Refunds/Index" class="btn btn-outline-secondary w-100">Clear</a>
                </div>
            </form>

            @if (Model.Refunds.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Refund Number</th>
                                <th>Order Number</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Requested At</th>
                                <th>Initiated By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var refund in Model.Refunds)
                            {
                                <tr>
                                    <td>@refund.RefundNumber</td>
                                    <td>
                                        <a asp-page="/Buyer/OrderDetails" asp-route-id="@refund.OrderId">
                                            @refund.Order.OrderNumber
                                        </a>
                                    </td>
                                    <td>
                                        @if (refund.RefundType == MercatoApp.Models.RefundType.Full)
                                        {
                                            <span class="badge bg-danger">Full</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Partial</span>
                                        }
                                    </td>
                                    <td>@refund.RefundAmount.ToString("C")</td>
                                    <td>
                                        @switch (refund.Status)
                                        {
                                            case MercatoApp.Models.RefundStatus.Requested:
                                                <span class="badge bg-info">Requested</span>
                                                break;
                                            case MercatoApp.Models.RefundStatus.Processing:
                                                <span class="badge bg-primary">Processing</span>
                                                break;
                                            case MercatoApp.Models.RefundStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case MercatoApp.Models.RefundStatus.Failed:
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                        }
                                    </td>
                                    <td>@refund.RequestedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@refund.InitiatedBy.Email</td>
                                    <td>
                                        <a asp-page="/Admin/Refunds/Details" asp-route-id="@refund.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (refund.Status == MercatoApp.Models.RefundStatus.Failed)
                                        {
                                            <form method="post" asp-page-handler="Retry" asp-route-id="@refund.Id" 
                                                  class="d-inline" onsubmit="return confirm('Retry this refund?');">
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-arrow-clockwise"></i> Retry
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No refund transactions found.
                </div>
            }
        </div>
    </div>
</div>
