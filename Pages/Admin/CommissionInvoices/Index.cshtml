@page
@model MercatoApp.Pages.Admin.CommissionInvoices.IndexModel
@{
    ViewData["Title"] = "Commission Invoices - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">
                <i class="bi bi-receipt-cutoff"></i> Commission Invoices
            </h1>
            <p class="text-muted">
                Manage commission invoices for all sellers
            </p>
        </div>
        <div class="col-auto">
            <a href="/Admin/CommissionInvoices/Generate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Generate Invoices
            </a>
            <a href="/Admin/CommissionInvoices/Settings" class="btn btn-outline-secondary">
                <i class="bi bi-gear"></i> Settings
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filter Invoices
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <!-- Year/Month Filter -->
                <div class="col-md-2">
                    <label for="FilterYear" class="form-label">Year</label>
                    <input type="number" class="form-control" id="FilterYear" name="FilterYear" 
                        value="@Model.FilterYear" min="2020" max="2100" />
                </div>

                <div class="col-md-2">
                    <label for="FilterMonth" class="form-label">Month</label>
                    <select name="FilterMonth" id="FilterMonth" class="form-select">
                        <option value="">All</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(Model.FilterMonth == i)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                        }
                    </select>
                </div>

                <!-- Status Filter -->
                <div class="col-md-3">
                    <label for="SelectedStatus" class="form-label">Status</label>
                    <select name="SelectedStatus" id="SelectedStatus" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="@((int)MercatoApp.Models.CommissionInvoiceStatus.Draft)" selected="@(Model.SelectedStatus == MercatoApp.Models.CommissionInvoiceStatus.Draft)">Draft</option>
                        <option value="@((int)MercatoApp.Models.CommissionInvoiceStatus.Issued)" selected="@(Model.SelectedStatus == MercatoApp.Models.CommissionInvoiceStatus.Issued)">Issued</option>
                        <option value="@((int)MercatoApp.Models.CommissionInvoiceStatus.Paid)" selected="@(Model.SelectedStatus == MercatoApp.Models.CommissionInvoiceStatus.Paid)">Paid</option>
                        <option value="@((int)MercatoApp.Models.CommissionInvoiceStatus.Cancelled)" selected="@(Model.SelectedStatus == MercatoApp.Models.CommissionInvoiceStatus.Cancelled)">Cancelled</option>
                    </select>
                </div>

                <!-- Store Filter -->
                <div class="col-md-3">
                    <label for="StoreId" class="form-label">Store</label>
                    <input type="number" class="form-control" id="StoreId" name="StoreId" 
                        value="@Model.StoreId" placeholder="Store ID" />
                </div>

                <!-- Filter Button -->
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Invoices List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-file-earmark-text"></i> Invoice List
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Invoices.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No invoices found for the selected criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Invoice Number</th>
                                <th>Store</th>
                                <th>Period</th>
                                <th>Issue Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Invoices)
                            {
                                <tr>
                                    <td>
                                        <strong>@invoice.InvoiceNumber</strong>
                                        @if (invoice.IsCreditNote)
                                        {
                                            <span class="badge bg-danger ms-1">Credit Note</span>
                                        }
                                    </td>
                                    <td>@invoice.Store.StoreName</td>
                                    <td>@invoice.PeriodStartDate.ToString("MMM yyyy")</td>
                                    <td>@invoice.IssueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @switch (invoice.Status)
                                        {
                                            case MercatoApp.Models.CommissionInvoiceStatus.Draft:
                                                <span class="badge bg-secondary">Draft</span>
                                                break;
                                            case MercatoApp.Models.CommissionInvoiceStatus.Issued:
                                                <span class="badge bg-primary">Issued</span>
                                                break;
                                            case MercatoApp.Models.CommissionInvoiceStatus.Paid:
                                                <span class="badge bg-success">Paid</span>
                                                break;
                                            case MercatoApp.Models.CommissionInvoiceStatus.Cancelled:
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                            case MercatoApp.Models.CommissionInvoiceStatus.Superseded:
                                                <span class="badge bg-warning text-dark">Superseded</span>
                                                break;
                                        }
                                    </td>
                                    <td><strong>@invoice.TotalAmount.ToString("C")</strong></td>
                                    <td>
                                        <a href="/Admin/CommissionInvoices/Details?id=@invoice.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@Model.Invoices.Sum(i => i.TotalAmount).ToString("C")</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
