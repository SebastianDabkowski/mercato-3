@page
@model MercatoApp.Pages.Admin.Reports.OrderRevenueModel
@{
    ViewData["Title"] = "Order & Revenue Report - Admin";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-graph-up"></i> Order & Revenue Report
                </h1>
            </div>

            <!-- Success/Error Messages -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Filter Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <!-- Date Range Filter -->
                        <div class="col-md-3">
                            <label for="FromDate" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="FromDate" name="FromDate" 
                                value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label for="ToDate" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="ToDate" name="ToDate" 
                                value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                        </div>

                        <!-- Seller Filter -->
                        <div class="col-md-3">
                            <label for="StoreId" class="form-label">Seller/Store</label>
                            <select name="StoreId" id="StoreId" class="form-select">
                                <option value="">All Sellers</option>
                                @foreach (var store in Model.Stores)
                                {
                                    <option value="@store.Id" selected="@(Model.StoreId == store.Id)">
                                        @store.StoreName
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Order Status Filter -->
                        <div class="col-md-3">
                            <label for="OrderStatus" class="form-label">Order Status</label>
                            <select name="OrderStatus" id="OrderStatus" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="New" selected="@(Model.OrderStatus == "New")">New</option>
                                <option value="Paid" selected="@(Model.OrderStatus == "Paid")">Paid</option>
                                <option value="Preparing" selected="@(Model.OrderStatus == "Preparing")">Preparing</option>
                                <option value="Shipped" selected="@(Model.OrderStatus == "Shipped")">Shipped</option>
                                <option value="Delivered" selected="@(Model.OrderStatus == "Delivered")">Delivered</option>
                                <option value="Cancelled" selected="@(Model.OrderStatus == "Cancelled")">Cancelled</option>
                                <option value="Refunded" selected="@(Model.OrderStatus == "Refunded")">Refunded</option>
                            </select>
                        </div>

                        <!-- Payment Status Filter -->
                        <div class="col-md-3">
                            <label for="PaymentStatus" class="form-label">Payment Status</label>
                            <select name="PaymentStatus" id="PaymentStatus" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="Pending" selected="@(Model.PaymentStatus == "Pending")">Pending</option>
                                <option value="Authorized" selected="@(Model.PaymentStatus == "Authorized")">Authorized</option>
                                <option value="Completed" selected="@(Model.PaymentStatus == "Completed")">Completed</option>
                                <option value="Failed" selected="@(Model.PaymentStatus == "Failed")">Failed</option>
                                <option value="Cancelled" selected="@(Model.PaymentStatus == "Cancelled")">Cancelled</option>
                                <option value="Refunded" selected="@(Model.PaymentStatus == "Refunded")">Refunded</option>
                            </select>
                        </div>

                        <!-- Filter Actions -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Apply Filters
                            </button>
                            <a asp-page="/Admin/Reports/OrderRevenue" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Summary Cards -->
            @if (Model.ReportRows.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Order Value (Page)</h6>
                                <h3 class="mb-0">@Model.TotalOrderValue.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Commission (Page)</h6>
                                <h3 class="mb-0">@Model.TotalCommission.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Payout Amount (Page)</h6>
                                <h3 class="mb-0">@Model.TotalPayoutAmount.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Results Info and Export -->
            @if (Model.TotalCount > 0)
            {
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="alert alert-info mb-0">
                        Showing @Model.ReportRows.Count of @Model.TotalCount order(s)
                        @if (Model.PageNumber > 1)
                        {
                            <span> - Page @Model.PageNumber of @Model.TotalPages</span>
                        }
                    </div>
                    <form method="post" asp-page-handler="Export" class="ms-3">
                        <input type="hidden" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="StoreId" value="@Model.StoreId" />
                        <input type="hidden" name="OrderStatus" value="@Model.OrderStatus" />
                        <input type="hidden" name="PaymentStatus" value="@Model.PaymentStatus" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-download"></i> Export CSV
                        </button>
                    </form>
                </div>
            }

            <!-- Report Table -->
            @if (!Model.ReportRows.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    No orders found matching your filters. Try adjusting the filter criteria.
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Order Number</th>
                                        <th>Date</th>
                                        <th>Buyer</th>
                                        <th>Seller</th>
                                        <th>Sub-Order</th>
                                        <th>Order Status</th>
                                        <th>Payment Status</th>
                                        <th class="text-end">Order Value</th>
                                        <th class="text-end">Commission</th>
                                        <th class="text-end">Payout Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var row in Model.ReportRows)
                                    {
                                        <tr>
                                            <td>@row.OrderId</td>
                                            <td>
                                                <a asp-page="/Admin/Orders/Details" asp-route-id="@row.OrderId">
                                                    @row.OrderNumber
                                                </a>
                                            </td>
                                            <td>
                                                @row.OrderDate.ToString("MMM dd, yyyy")<br/>
                                                <small class="text-muted">@row.OrderDate.ToString("h:mm tt")</small>
                                            </td>
                                            <td>
                                                <strong>@row.BuyerName</strong><br/>
                                                <small class="text-muted">@row.BuyerEmail</small>
                                            </td>
                                            <td>@row.SellerStoreName</td>
                                            <td>
                                                <small>@row.SubOrderNumber</small>
                                            </td>
                                            <td>
                                                <partial name="_OrderStatusBadge" model="row.OrderStatus" />
                                            </td>
                                            <td>
                                                <partial name="_PaymentStatusBadge" model="row.PaymentStatus" />
                                            </td>
                                            <td class="text-end">
                                                <strong>@row.OrderValue.ToString("C")</strong>
                                            </td>
                                            <td class="text-end">
                                                @row.Commission.ToString("C")
                                            </td>
                                            <td class="text-end">
                                                @row.PayoutAmount.ToString("C")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Report pagination" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Page -->
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="/Admin/Reports/OrderRevenue" 
                                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                   asp-route-storeId="@Model.StoreId"
                                   asp-route-orderStatus="@Model.OrderStatus"
                                   asp-route-paymentStatus="@Model.PaymentStatus">
                                    Previous
                                </a>
                            </li>

                            <!-- Page Numbers -->
                            @{
                                var startPage = Math.Max(1, Model.PageNumber - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                            }

                            @for (var i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" 
                                       asp-page="/Admin/Reports/OrderRevenue" 
                                       asp-route-pageNumber="@i"
                                       asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                       asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                       asp-route-storeId="@Model.StoreId"
                                       asp-route-orderStatus="@Model.OrderStatus"
                                       asp-route-paymentStatus="@Model.PaymentStatus">
                                        @i
                                    </a>
                                </li>
                            }

                            <!-- Next Page -->
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="/Admin/Reports/OrderRevenue" 
                                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                   asp-route-storeId="@Model.StoreId"
                                   asp-route-orderStatus="@Model.OrderStatus"
                                   asp-route-paymentStatus="@Model.PaymentStatus">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
