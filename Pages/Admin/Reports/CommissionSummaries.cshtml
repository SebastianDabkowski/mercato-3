@page
@model MercatoApp.Pages.Admin.Reports.CommissionSummariesModel
@{
    ViewData["Title"] = "Commission Summaries - Admin";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-cash-coin"></i> Commission Summaries
                </h1>
            </div>

            <!-- Success/Error Messages -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Filter Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> Date Range
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <!-- Date Range Filter -->
                        <div class="col-md-4">
                            <label for="FromDate" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="FromDate" name="FromDate" 
                                value="@Model.FromDate.ToString("yyyy-MM-dd")" required>
                        </div>
                        <div class="col-md-4">
                            <label for="ToDate" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="ToDate" name="ToDate" 
                                value="@Model.ToDate.ToString("yyyy-MM-dd")" required>
                        </div>

                        <!-- Filter Actions -->
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Apply
                            </button>
                            <a asp-page="/Admin/Reports/CommissionSummaries" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Summary Cards -->
            @if (Model.Summaries.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total GMV</h6>
                                <h3 class="mb-0">@Model.TotalGMV.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Commission</h6>
                                <h3 class="mb-0">@Model.TotalCommission.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Net Payout</h6>
                                <h3 class="mb-0">@Model.TotalNetPayout.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-muted">Total Orders</h6>
                                <h3 class="mb-0">@Model.TotalOrderCount</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Export Button -->
                <div class="d-flex justify-content-end mb-3">
                    <form method="post" asp-page-handler="Export">
                        <input type="hidden" name="FromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="ToDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-download"></i> Export CSV
                        </button>
                    </form>
                </div>
            }

            <!-- Commission Summary Table -->
            @if (!Model.Summaries.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    No commission data found for the selected date range.
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Commission Summary by Seller</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Seller</th>
                                        <th class="text-end">Total GMV</th>
                                        <th class="text-end">Total Commission</th>
                                        <th class="text-end">Total Net Payout</th>
                                        <th class="text-center">Order Count</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var summary in Model.Summaries)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@summary.StoreName</strong><br/>
                                                <small class="text-muted">Store ID: @summary.StoreId</small>
                                            </td>
                                            <td class="text-end">
                                                <strong>@summary.TotalGMV.ToString("C")</strong>
                                            </td>
                                            <td class="text-end">
                                                @summary.TotalCommission.ToString("C")
                                            </td>
                                            <td class="text-end">
                                                @summary.TotalNetPayout.ToString("C")
                                            </td>
                                            <td class="text-center">
                                                @summary.OrderCount
                                            </td>
                                            <td class="text-center">
                                                <a asp-page="/Admin/Reports/CommissionSummaries" 
                                                   asp-route-fromDate="@Model.FromDate.ToString("yyyy-MM-dd")"
                                                   asp-route-toDate="@Model.ToDate.ToString("yyyy-MM-dd")"
                                                   asp-route-selectedStoreId="@summary.StoreId"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-list-ul"></i> View Orders
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th>TOTAL</th>
                                        <th class="text-end">@Model.TotalGMV.ToString("C")</th>
                                        <th class="text-end">@Model.TotalCommission.ToString("C")</th>
                                        <th class="text-end">@Model.TotalNetPayout.ToString("C")</th>
                                        <th class="text-center">@Model.TotalOrderCount</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Order Details Drill-Down -->
                @if (Model.SelectedStoreId.HasValue && Model.OrderDetails.Any())
                {
                    var selectedSummary = Model.Summaries.FirstOrDefault(s => s.StoreId == Model.SelectedStoreId.Value);
                    if (selectedSummary != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="bi bi-list-ul"></i> Order Details for @selectedSummary.StoreName
                                    </h5>
                                    <a asp-page="/Admin/Reports/CommissionSummaries" 
                                       asp-route-fromDate="@Model.FromDate.ToString("yyyy-MM-dd")"
                                       asp-route-toDate="@Model.ToDate.ToString("yyyy-MM-dd")"
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-x-circle"></i> Close
                                    </a>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover table-sm mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Sub-Order</th>
                                                <th>Date</th>
                                                <th>Buyer</th>
                                                <th class="text-end">Order Value</th>
                                                <th class="text-end">Commission</th>
                                                <th class="text-end">Net Payout</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in Model.OrderDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-page="/Admin/Orders/Details" asp-route-id="@detail.OrderId">
                                                            @detail.OrderNumber
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <small>@detail.SubOrderNumber</small>
                                                    </td>
                                                    <td>
                                                        @detail.OrderDate.ToString("MMM dd, yyyy")<br/>
                                                        <small class="text-muted">@detail.OrderDate.ToString("h:mm tt")</small>
                                                    </td>
                                                    <td>@detail.BuyerName</td>
                                                    <td class="text-end">
                                                        <strong>@detail.OrderValue.ToString("C")</strong>
                                                    </td>
                                                    <td class="text-end">
                                                        @detail.Commission.ToString("C")
                                                    </td>
                                                    <td class="text-end">
                                                        @detail.NetPayout.ToString("C")
                                                    </td>
                                                    <td>
                                                        <partial name="_OrderStatusBadge" model="Enum.Parse<MercatoApp.Models.OrderStatus>(detail.OrderStatus)" />
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <th colspan="4">Seller Total</th>
                                                <th class="text-end">@Model.OrderDetails.Sum(d => d.OrderValue).ToString("C")</th>
                                                <th class="text-end">@Model.OrderDetails.Sum(d => d.Commission).ToString("C")</th>
                                                <th class="text-end">@Model.OrderDetails.Sum(d => d.NetPayout).ToString("C")</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>
