@page
@model MercatoApp.Pages.Admin.Currencies.SettingsModel
@{
    ViewData["Title"] = "Currency Settings - Admin";
    var isChangingBaseCurrency = Model.Input?.BaseCurrencyCode != Model.CurrentBaseCurrency;
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Currencies">Currency Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Settings</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-gear"></i> Currency Configuration Settings
            </h1>
            <p class="text-muted">
                Manage platform-wide currency settings including the base currency.
            </p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-warning mb-4" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Warning:</strong> Changing the base currency is a significant operation. 
        All other currency exchange rates are relative to the base currency. 
        Ensure all exchange rates are updated after changing the base currency.
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-currency-exchange"></i> Configuration
            </h5>
        </div>
        <div class="card-body">
            <form method="post" id="settingsForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.BaseCurrencyCode" class="form-label">
                                <strong>Base Currency</strong>
                            </label>
                            <select asp-for="Input.BaseCurrencyCode" class="form-select" id="baseCurrencySelect">
                                @foreach (var currency in Model.AvailableCurrencies)
                                {
                                    <option value="@currency.Code" selected="@(currency.Code == Model.Config.BaseCurrencyCode)">
                                        @currency.Code - @currency.Name (@currency.Symbol)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="Input.BaseCurrencyCode" class="text-danger"></span>
                            <small class="text-muted">
                                Current: <strong>@Model.CurrentBaseCurrency</strong>
                            </small>
                        </div>

                        <div class="mb-3" id="confirmChangeContainer" style="display: none;">
                            <div class="form-check">
                                <input asp-for="Input.ConfirmChange" class="form-check-input" type="checkbox" id="confirmChangeCheckbox" />
                                <label class="form-check-label text-danger" for="confirmChangeCheckbox">
                                    <strong>I understand that changing the base currency is a major operation and I have reviewed all implications.</strong>
                                </label>
                            </div>
                            <span asp-validation-for="Input.ConfirmChange" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <h6 class="mb-3"><i class="bi bi-arrow-repeat"></i> Exchange Rate Update Settings</h6>
                <p class="text-muted">
                    <small>These settings are placeholders for future integration with automatic exchange rate providers.</small>
                </p>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Input.AutoUpdateExchangeRates" class="form-check-input" type="checkbox" id="autoUpdateSwitch" />
                                <label class="form-check-label" for="autoUpdateSwitch">
                                    Auto Update Exchange Rates
                                </label>
                            </div>
                            <small class="text-muted">Enable automatic updates from external providers (feature in development)</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.UpdateFrequencyHours" class="form-label"></label>
                            <input asp-for="Input.UpdateFrequencyHours" class="form-control" type="number" min="1" max="168" />
                            <span asp-validation-for="Input.UpdateFrequencyHours" class="text-danger"></span>
                            <small class="text-muted">How often to update rates (1-168 hours)</small>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="mb-3">
                    <label asp-for="Input.Notes" class="form-label"></label>
                    <textarea asp-for="Input.Notes" class="form-control" rows="3" placeholder="Optional notes about this configuration change..."></textarea>
                    <span asp-validation-for="Input.Notes" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/Currencies" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" id="saveButton">
                        <i class="bi bi-check-circle"></i> Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Impact of Base Currency Change</h6>
                </div>
                <div class="card-body">
                    <p><strong>Changing the base currency will:</strong></p>
                    <ul class="mb-0">
                        <li>Change the reference point for all exchange rate calculations</li>
                        <li>Require updating all other currency exchange rates</li>
                        <li>Not affect existing transactions or historical data</li>
                        <li>Require careful review of all currency configurations</li>
                        <li>Be logged for audit purposes</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Important Information</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Only enabled currencies can be set as the base currency.</li>
                        <li>The base currency always has an exchange rate of 1.0.</li>
                        <li>The base currency cannot be disabled or deleted.</li>
                        <li>Exchange rate loading is handled by external modules or integrations.</li>
                        <li>Configuration changes are tracked with user ID and timestamp.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const baseCurrencySelect = document.getElementById('baseCurrencySelect');
            const confirmContainer = document.getElementById('confirmChangeContainer');
            const confirmCheckbox = document.getElementById('confirmChangeCheckbox');
            const saveButton = document.getElementById('saveButton');
            const originalBaseCurrency = '@Model.CurrentBaseCurrency';

            function checkBaseCurrencyChange() {
                const isChanging = baseCurrencySelect.value !== originalBaseCurrency;
                confirmContainer.style.display = isChanging ? 'block' : 'none';
                
                if (!isChanging) {
                    confirmCheckbox.checked = false;
                }
            }

            baseCurrencySelect.addEventListener('change', checkBaseCurrencyChange);
            
            // Check on page load
            checkBaseCurrencyChange();

            // Add submit validation
            document.getElementById('settingsForm').addEventListener('submit', function(e) {
                const isChanging = baseCurrencySelect.value !== originalBaseCurrency;
                if (isChanging && !confirmCheckbox.checked) {
                    e.preventDefault();
                    alert('Please confirm that you understand the implications of changing the base currency.');
                    confirmCheckbox.focus();
                    return false;
                }
            });
        });
    </script>
}
