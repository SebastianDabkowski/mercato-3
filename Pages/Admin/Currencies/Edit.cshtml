@page
@model MercatoApp.Pages.Admin.Currencies.EditModel
@{
    ViewData["Title"] = "Edit Currency - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Currencies">Currency Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Currency</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-pencil"></i> Edit Currency - @Model.Currency.Code
            </h1>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.IsBaseCurrency)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Base Currency:</strong> This is the base currency for the platform. Some options are restricted.
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-cash-coin"></i> Currency Details
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Input.Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.Symbol" class="form-label"></label>
                            <input asp-for="Input.Symbol" class="form-control" />
                            <span asp-validation-for="Input.Symbol" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.DecimalPlaces" class="form-label"></label>
                            <input asp-for="Input.DecimalPlaces" class="form-control" type="number" min="0" max="4" />
                            <span asp-validation-for="Input.DecimalPlaces" class="text-danger"></span>
                            <small class="text-muted">Number of decimal places for this currency (e.g., 2 for USD, 0 for JPY)</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.DisplayOrder" class="form-label"></label>
                            <input asp-for="Input.DisplayOrder" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.DisplayOrder" class="text-danger"></span>
                            <small class="text-muted">Lower values appear first in lists</small>
                        </div>
                    </div>
                </div>

                <hr />

                <h6 class="mb-3"><i class="bi bi-currency-exchange"></i> Exchange Rate Information</h6>

                @if (Model.IsBaseCurrency)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Exchange rate for the base currency is always 1.0 and cannot be changed.
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.ExchangeRate" class="form-label"></label>
                                <input asp-for="Input.ExchangeRate" class="form-control" type="number" step="0.00000001" />
                                <span asp-validation-for="Input.ExchangeRate" class="text-danger"></span>
                                <small class="text-muted">Exchange rate relative to base currency</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.ExchangeRateSource" class="form-label"></label>
                                <input asp-for="Input.ExchangeRateSource" class="form-control" />
                                <span asp-validation-for="Input.ExchangeRateSource" class="text-danger"></span>
                                <small class="text-muted">Source of the exchange rate (e.g., "Manual", "ECB", "XE.com")</small>
                            </div>
                        </div>
                    </div>

                    @if (Model.Currency.ExchangeRateLastUpdated.HasValue)
                    {
                        <p class="text-muted">
                            <small>
                                <i class="bi bi-clock"></i> 
                                Last updated: @Model.Currency.ExchangeRateLastUpdated.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC
                            </small>
                        </p>
                    }
                }

                <hr />

                <div class="mb-3">
                    <div class="form-check form-switch">
                        @if (Model.IsBaseCurrency)
                        {
                            <input asp-for="Input.IsEnabled" class="form-check-input" type="checkbox" id="isEnabledSwitch" disabled />
                        }
                        else
                        {
                            <input asp-for="Input.IsEnabled" class="form-check-input" type="checkbox" id="isEnabledSwitch" />
                        }
                        <label class="form-check-label" for="isEnabledSwitch">
                            <strong>Enabled</strong>
                        </label>
                    </div>
                    @if (!Model.IsBaseCurrency)
                    {
                        <small class="text-muted">Disabled currencies cannot be used for new listings or transactions</small>
                    }
                    else
                    {
                        <small class="text-warning">Base currency cannot be disabled</small>
                    }
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/Currencies" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Important Notes</h6>
        </div>
        <div class="card-body">
            <ul class="mb-0">
                <li>Exchange rate updates here are for display and tracking purposes only.</li>
                <li>Actual currency conversion for transactions is handled by external payment modules.</li>
                <li>Changing the exchange rate does not affect existing transactions or historical data.</li>
                @if (!Model.IsBaseCurrency)
                {
                    <li>Disabling this currency will prevent it from being used in new listings, but existing listings and transactions will not be affected.</li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
