@page
@model MercatoApp.Pages.Admin.Currencies.CreateModel
@{
    ViewData["Title"] = "Add Currency - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Currencies">Currency Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Currency</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-plus-circle"></i> Add New Currency
            </h1>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-cash-coin"></i> Currency Details
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Input.Code" class="form-label"></label>
                            <input asp-for="Input.Code" class="form-control text-uppercase" maxlength="3" 
                                   placeholder="USD" style="text-transform: uppercase;" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                            <small class="text-muted">ISO 4217 code (3 uppercase letters)</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="US Dollar" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Input.Symbol" class="form-label"></label>
                            <input asp-for="Input.Symbol" class="form-control" placeholder="$" />
                            <span asp-validation-for="Input.Symbol" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.DecimalPlaces" class="form-label"></label>
                            <input asp-for="Input.DecimalPlaces" class="form-control" type="number" min="0" max="4" />
                            <span asp-validation-for="Input.DecimalPlaces" class="text-danger"></span>
                            <small class="text-muted">Number of decimal places (e.g., 2 for USD, 0 for JPY)</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.DisplayOrder" class="form-label"></label>
                            <input asp-for="Input.DisplayOrder" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.DisplayOrder" class="text-danger"></span>
                            <small class="text-muted">Lower values appear first in lists</small>
                        </div>
                    </div>
                </div>

                <hr />

                <h6 class="mb-3"><i class="bi bi-currency-exchange"></i> Exchange Rate Information</h6>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.ExchangeRate" class="form-label"></label>
                            <input asp-for="Input.ExchangeRate" class="form-control" type="number" step="0.00000001" />
                            <span asp-validation-for="Input.ExchangeRate" class="text-danger"></span>
                            <small class="text-muted">Exchange rate relative to base currency</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Input.ExchangeRateSource" class="form-label"></label>
                            <input asp-for="Input.ExchangeRateSource" class="form-control" placeholder="Manual" />
                            <span asp-validation-for="Input.ExchangeRateSource" class="text-danger"></span>
                            <small class="text-muted">Source of the exchange rate</small>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Input.IsEnabled" class="form-check-input" type="checkbox" id="isEnabledSwitch" checked />
                        <label class="form-check-label" for="isEnabledSwitch">
                            <strong>Enabled</strong>
                        </label>
                    </div>
                    <small class="text-muted">Enable this currency for use on the platform</small>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/Currencies" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Currency
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Common Currency Codes</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>USD</strong> - US Dollar ($)
                </div>
                <div class="col-md-3">
                    <strong>EUR</strong> - Euro (€)
                </div>
                <div class="col-md-3">
                    <strong>GBP</strong> - British Pound (£)
                </div>
                <div class="col-md-3">
                    <strong>JPY</strong> - Japanese Yen (¥)
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <strong>CAD</strong> - Canadian Dollar (CA$)
                </div>
                <div class="col-md-3">
                    <strong>AUD</strong> - Australian Dollar (A$)
                </div>
                <div class="col-md-3">
                    <strong>CHF</strong> - Swiss Franc (CHF)
                </div>
                <div class="col-md-3">
                    <strong>CNY</strong> - Chinese Yuan (¥)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase the currency code input
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.querySelector('input[name="Input.Code"]');
            if (codeInput) {
                codeInput.addEventListener('input', function(e) {
                    e.target.value = e.target.value.toUpperCase();
                });
            }
        });
    </script>
}
