@page
@model MercatoApp.Pages.Admin.FeatureFlags.IndexModel
@{
    ViewData["Title"] = "Feature Flag Management - Admin";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Feature Flags</li>
                </ol>
            </nav>
            <h1 class="mb-3">
                <i class="bi bi-toggles"></i> Feature Flag Management
            </h1>
            <p class="text-muted">
                Control platform features dynamically without code deployments.
            </p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Actions Bar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="/Admin/FeatureFlags/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Feature Flag
            </a>
        </div>
        <div class="col-md-6 text-end">
            <div class="btn-group" role="group">
                <a href="?filter=all" class="btn btn-outline-secondary @(Model.Filter == "all" ? "active" : "")">
                    All Flags
                </a>
                <a href="?filter=active" class="btn btn-outline-secondary @(Model.Filter == "active" ? "active" : "")">
                    Active Only
                </a>
                <a href="?filter=inactive" class="btn btn-outline-secondary @(Model.Filter == "inactive" ? "active" : "")">
                    Inactive Only
                </a>
            </div>
        </div>
    </div>

    <!-- Feature Flags Table -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Feature Flags
            </h5>
        </div>
        <div class="card-body">
            @if (Model.FeatureFlags.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Default State</th>
                                <th>Rules</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flag in Model.FeatureFlags)
                            {
                                <tr class="@(!flag.IsActive ? "table-secondary" : "")">
                                    <td>
                                        <code>@flag.Key</code>
                                    </td>
                                    <td>
                                        <strong>@flag.Name</strong>
                                        @if (!string.IsNullOrEmpty(flag.Environments))
                                        {
                                            <br/>
                                            <small class="text-muted">
                                                <i class="bi bi-server"></i> @flag.Environments
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(flag.Description))
                                        {
                                            <small>@flag.Description</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                    <td>
                                        @if (flag.IsEnabledByDefault)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-toggle-on"></i> Enabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-toggle-off"></i> Disabled
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (flag.Rules.Any())
                                        {
                                            <span class="badge bg-info">@flag.Rules.Count rule(s)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No rules</span>
                                        }
                                    </td>
                                    <td>
                                        @if (flag.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/Admin/FeatureFlags/Edit?id=@flag.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (flag.IsEnabledByDefault)
                                            {
                                                <form method="post" class="d-inline" asp-page-handler="Toggle">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@flag.Id" />
                                                    <input type="hidden" name="isEnabled" value="false" />
                                                    <button type="submit" class="btn btn-outline-warning" title="Disable">
                                                        <i class="bi bi-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" class="d-inline" asp-page-handler="Toggle">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@flag.Id" />
                                                    <input type="hidden" name="isEnabled" value="true" />
                                                    <button type="submit" class="btn btn-outline-success" title="Enable">
                                                        <i class="bi bi-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }
                                            <a href="/Admin/FeatureFlags/History?id=@flag.Id" class="btn btn-outline-info" title="View History">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="confirmDelete(@flag.Id, '@flag.Name')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-toggles" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No feature flags found.</p>
                    <a href="/Admin/FeatureFlags/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Your First Feature Flag
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Information Cards -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Feature Flag Basics</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Feature flags allow you to enable or disable features without redeploying code.</li>
                        <li>Set a default state (enabled/disabled) that applies when no rules match.</li>
                        <li>Add targeting rules to enable features for specific users, roles, stores, or environments.</li>
                        <li>Inactive flags are not evaluated and always return false.</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-diagram-3"></i> Targeting Rules</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">Configure targeting rules to control feature rollout:</p>
                    <ul class="mb-0">
                        <li><strong>User Role:</strong> Target by Admin, Seller, or Buyer role</li>
                        <li><strong>User ID:</strong> Target specific users by ID</li>
                        <li><strong>Store ID:</strong> Target specific stores</li>
                        <li><strong>Percentage Rollout:</strong> Gradually roll out to a percentage of users</li>
                        <li><strong>Environment:</strong> Target by environment (dev, test, prod)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<form method="post" id="deleteForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteFlagId" />
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the feature flag <strong id="deleteFlagName"></strong>?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        This action cannot be undone. All associated targeting rules will also be deleted.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete Feature Flag</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete(flagId, flagName) {
            document.getElementById('deleteFlagId').value = flagId;
            document.getElementById('deleteFlagName').textContent = flagName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
