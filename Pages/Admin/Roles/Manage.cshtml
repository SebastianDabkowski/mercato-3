@page
@model MercatoApp.Pages.Admin.Roles.ManageModel
@{
    ViewData["Title"] = $"Manage Permissions - {Model.Role?.Name}";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="./Index">Roles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Manage Permissions</li>
                </ol>
            </nav>
            <h1 class="h3 mb-3">Manage Permissions: @Model.Role?.Name</h1>
            @if (!string.IsNullOrEmpty(Model.Role?.Description))
            {
                <p class="text-muted">@Model.Role.Description</p>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-key"></i> Available Permissions
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.AllPermissionsByModule.Any())
                    {
                        <p class="text-muted">No permissions available.</p>
                    }
                    else
                    {
                        @foreach (var module in Model.AllPermissionsByModule.OrderBy(m => m.Key))
                        {
                            <div class="mb-4">
                                <h6 class="text-primary mb-3">
                                    <i class="bi bi-folder"></i> @module.Key
                                </h6>
                                <div class="row">
                                    @foreach (var permission in module.Value.OrderBy(p => p.Name))
                                    {
                                        var hasPermission = Model.RolePermissions.Any(p => p.Id == permission.Id);
                                        <div class="col-md-6 col-lg-4 mb-2">
                                            <div class="card @(hasPermission ? "border-success" : "")">
                                                <div class="card-body p-3">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" 
                                                                       id="permission-@permission.Id" 
                                                                       @(hasPermission ? "checked" : "")
                                                                       disabled>
                                                                <label class="form-check-label" for="permission-@permission.Id">
                                                                    <strong>@permission.Name</strong>
                                                                </label>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(permission.Description))
                                                            {
                                                                <small class="text-muted d-block mt-1">@permission.Description</small>
                                                            }
                                                        </div>
                                                        <div class="ms-2">
                                                            @if (hasPermission)
                                                            {
                                                                <form method="post" asp-page-handler="Revoke" class="d-inline">
                                                                    <input type="hidden" name="permissionId" value="@permission.Id" />
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                            title="Revoke this permission"
                                                                            onclick="return confirm('Are you sure you want to revoke this permission?');">
                                                                        <i class="bi bi-x-circle"></i>
                                                                    </button>
                                                                </form>
                                                            }
                                                            else
                                                            {
                                                                <form method="post" asp-page-handler="Assign" class="d-inline">
                                                                    <input type="hidden" name="permissionId" value="@permission.Id" />
                                                                    <button type="submit" class="btn btn-sm btn-outline-success" 
                                                                            title="Assign this permission">
                                                                        <i class="bi bi-plus-circle"></i>
                                                                    </button>
                                                                </form>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Roles
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
