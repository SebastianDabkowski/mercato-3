@page
@model MercatoApp.Pages.Admin.LegalDocuments.HistoryModel
@{
    ViewData["Title"] = Model.DocumentTypeName + " History - Admin";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-clock-history"></i> @Model.DocumentTypeName - Version History
                </h1>
                <a asp-page="./Edit" asp-route-type="@((int)Model.DocumentType)" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Version
                </a>
            </div>

            <!-- Success Message -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Future-Dated Versions -->
            @if (Model.FutureDocuments.Any())
            {
                <div class="mb-4">
                    <h4 class="mb-3">
                        <i class="bi bi-calendar-event"></i> Future-Dated Versions
                    </h4>
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i>
                        These versions will become active on their effective dates. Users will see the current active version until then.
                    </div>
                    @foreach (var doc in Model.FutureDocuments)
                    {
                        <div class="card mb-3 border-warning">
                            <div class="card-header bg-warning">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        Version @doc.Version
                                        <span class="badge bg-secondary">Future</span>
                                    </h5>
                                    <small>Effective: @doc.EffectiveDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Title:</strong> @doc.Title</p>
                                <p class="mb-2"><strong>Created:</strong> @doc.CreatedAt.ToString("MMM dd, yyyy") by @(doc.CreatedByUser?.Email ?? "System")</p>
                                @if (doc.UpdatedAt.HasValue)
                                {
                                    <p class="mb-2"><strong>Last Updated:</strong> @doc.UpdatedAt.Value.ToString("MMM dd, yyyy") by @(doc.UpdatedByUser?.Email ?? "System")</p>
                                }
                                @if (!string.IsNullOrEmpty(doc.ChangeNotes))
                                {
                                    <p class="mb-2 text-muted"><strong>Notes:</strong> @doc.ChangeNotes</p>
                                }
                                <div class="mt-3">
                                    <a asp-page="./Edit" asp-route-id="@doc.Id" asp-route-type="@((int)Model.DocumentType)" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@doc.Id" asp-route-type="@((int)Model.DocumentType)" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this version?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Current and Past Versions -->
            <h4 class="mb-3">
                <i class="bi bi-file-text"></i> Current and Past Versions
            </h4>

            @if (!Model.Documents.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    No versions available yet. Create the first version using the button above.
                </div>
            }
            else
            {
                @foreach (var doc in Model.Documents)
                {
                    <div class="card mb-3 @(doc.IsActive ? "border-success" : "border-secondary")">
                        <div class="card-header @(doc.IsActive ? "bg-success text-white" : "bg-light")">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    Version @doc.Version
                                    @if (doc.IsActive)
                                    {
                                        <span class="badge bg-light text-success">Active</span>
                                    }
                                </h5>
                                <small>Effective: @doc.EffectiveDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-2"><strong>Title:</strong> @doc.Title</p>
                            <p class="mb-2"><strong>Language:</strong> @doc.LanguageCode</p>
                            <p class="mb-2"><strong>Created:</strong> @doc.CreatedAt.ToString("MMM dd, yyyy") by @(doc.CreatedByUser?.Email ?? "System")</p>
                            @if (doc.UpdatedAt.HasValue)
                            {
                                <p class="mb-2"><strong>Last Updated:</strong> @doc.UpdatedAt.Value.ToString("MMM dd, yyyy") by @(doc.UpdatedByUser?.Email ?? "System")</p>
                            }
                            @if (!string.IsNullOrEmpty(doc.ChangeNotes))
                            {
                                <p class="mb-2 text-muted"><strong>Notes:</strong> @doc.ChangeNotes</p>
                            }
                            <div class="mt-3">
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#content-@doc.Id">
                                    <i class="bi bi-eye"></i> View Content
                                </button>
                                <a asp-page="./Edit" asp-route-id="@doc.Id" asp-route-type="@((int)Model.DocumentType)" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                @if (!doc.IsActive)
                                {
                                    <form method="post" asp-page-handler="Activate" asp-route-id="@doc.Id" asp-route-type="@((int)Model.DocumentType)" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-check-circle"></i> Activate
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@doc.Id" asp-route-type="@((int)Model.DocumentType)" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this version?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                            </div>
                            <div class="collapse mt-3" id="content-@doc.Id">
                                <div class="card card-body">
                                    <h6>Document Content:</h6>
                                    <div class="border p-3 bg-light" style="max-height: 400px; overflow-y: auto;">
                                        @Html.Raw(doc.Content)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            <!-- Back Button -->
            <div class="mt-4">
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Legal Documents
                </a>
            </div>
        </div>
    </div>
</div>
