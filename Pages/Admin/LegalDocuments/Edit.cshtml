@page
@model MercatoApp.Pages.Admin.LegalDocuments.EditModel
@{
    ViewData["Title"] = (Model.IsEdit ? "Edit" : "Create") + " " + Model.DocumentTypeName + " - Admin";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-file-text"></i> 
                    @(Model.IsEdit ? "Edit" : "Create New Version") - @Model.DocumentTypeName
                </h1>
            </div>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Form -->
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="DocumentId" />

                        <div class="mb-3">
                            <label asp-for="Input.Version" class="form-label"></label>
                            <input asp-for="Input.Version" class="form-control" />
                            <span asp-validation-for="Input.Version" class="text-danger"></span>
                            <div class="form-text">
                                Version number (e.g., 1.0, 1.1, 2.0).
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Title" class="form-label"></label>
                            <input asp-for="Input.Title" class="form-control" />
                            <span asp-validation-for="Input.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Content" class="form-label"></label>
                            <textarea asp-for="Input.Content" class="form-control" rows="15"></textarea>
                            <span asp-validation-for="Input.Content" class="text-danger"></span>
                            <div class="form-text">
                                Enter the HTML content of the legal document. HTML tags are allowed.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.EffectiveDate" class="form-label"></label>
                                <input asp-for="Input.EffectiveDate" type="date" class="form-control" />
                                <span asp-validation-for="Input.EffectiveDate" class="text-danger"></span>
                                <div class="form-text">
                                    Date when this version becomes effective.
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LanguageCode" class="form-label"></label>
                                <input asp-for="Input.LanguageCode" class="form-control" />
                                <span asp-validation-for="Input.LanguageCode" class="text-danger"></span>
                                <div class="form-text">
                                    Language code (e.g., "en" for English).
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Input.IsActive" class="form-check-input" />
                                <label asp-for="Input.IsActive" class="form-check-label"></label>
                                <span asp-validation-for="Input.IsActive" class="text-danger"></span>
                            </div>
                            <div class="form-text">
                                If checked and the effective date is in the past, this version will become the active version immediately.
                                Only one version per document type can be active at a time.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ChangeNotes" class="form-label"></label>
                            <textarea asp-for="Input.ChangeNotes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.ChangeNotes" class="text-danger"></span>
                            <div class="form-text">
                                Optional notes about what changed in this version.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./History" asp-route-type="@((int)Model.DocumentType)" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @(Model.IsEdit ? "Update" : "Create") Version
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
