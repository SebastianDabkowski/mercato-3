@page
@model MercatoApp.Pages.Admin.Settlements.IndexModel
@{
    ViewData["Title"] = "Settlements";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Monthly Settlements</h2>
        <div>
            <a asp-page="./Generate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Generate Settlement
            </a>
            <a asp-page="./Settings" class="btn btn-outline-secondary">
                <i class="bi bi-gear"></i> Settings
            </a>
        </div>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Settlements</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-4">
                    <label for="year" class="form-label">Year</label>
                    <select name="year" id="year" class="form-select" onchange="this.form.submit()">
                        @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                        {
                            <option value="@y" selected="@(Model.FilterYear == y)">@y</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="month" class="form-label">Month</label>
                    <select name="month" id="month" class="form-select" onchange="this.form.submit()">
                        <option value="">All Months</option>
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m" selected="@(Model.FilterMonth == m)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                        }
                    </select>
                </div>
            </form>

            @if (Model.Settlements.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Settlement #</th>
                                <th>Store</th>
                                <th>Period</th>
                                <th>Gross Sales</th>
                                <th>Commission</th>
                                <th>Net Amount</th>
                                <th>Status</th>
                                <th>Version</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var settlement in Model.Settlements)
                            {
                                <tr>
                                    <td><code>@settlement.SettlementNumber</code></td>
                                    <td>@settlement.Store.StoreName</td>
                                    <td>
                                        @settlement.PeriodStartDate.ToString("MMM yyyy")
                                        <small class="text-muted d-block">
                                            @settlement.PeriodStartDate.ToString("yyyy-MM-dd") to @settlement.PeriodEndDate.ToString("yyyy-MM-dd")
                                        </small>
                                    </td>
                                    <td>@settlement.GrossSales.ToString("C")</td>
                                    <td>@settlement.Commission.ToString("C")</td>
                                    <td><strong>@settlement.NetAmount.ToString("C")</strong></td>
                                    <td>
                                        @if (settlement.Status == MercatoApp.Models.SettlementStatus.Draft)
                                        {
                                            <span class="badge bg-warning">Draft</span>
                                        }
                                        else if (settlement.Status == MercatoApp.Models.SettlementStatus.Finalized)
                                        {
                                            <span class="badge bg-success">Finalized</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Superseded</span>
                                        }
                                    </td>
                                    <td>
                                        @if (settlement.Version > 1)
                                        {
                                            <span class="badge bg-info">v@settlement.Version</span>
                                        }
                                        else
                                        {
                                            <span>v@settlement.Version</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="./Details" asp-route-id="@settlement.Id" class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="./Export" asp-route-id="@settlement.Id" class="btn btn-outline-success" title="Export CSV">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No settlements found for the selected period.
                </div>
            }
        </div>
    </div>
</div>
