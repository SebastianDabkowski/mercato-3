@page
@model MercatoApp.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<div class="row justify-content-center">
    <div class="col-md-12 col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Category Management</h1>
                <p class="text-muted mb-0">Manage the global product category tree for the marketplace.</p>
            </div>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add Category
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Categories.Count == 0)
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <h4 class="text-muted mb-3">No Categories Yet</h4>
                    <p class="text-muted mb-4">Create your first category to help organize products in the marketplace.</p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Create First Category
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Category</th>
                                <th class="text-center">Order</th>
                                <th class="text-center">Products</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @await Html.PartialAsync("_CategoryTreeRows", Model.Categories)
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-3 text-muted">
                <small>Showing @CountAllCategories(Model.Categories) category/categories</small>
            </div>
        }
    </div>
</div>

@functions {
    int CountAllCategories(List<MercatoApp.Services.CategoryTreeItem> categories)
    {
        int count = 0;
        foreach (var category in categories)
        {
            count++;
            count += CountAllCategories(category.Children);
        }
        return count;
    }
}
