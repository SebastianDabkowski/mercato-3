@page "{id:int}"
@model MercatoApp.Pages.Admin.Categories.Attributes.DeleteModel
@{
    ViewData["Title"] = $"Delete Attribute - {Model.Attribute?.Name}";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a asp-page="/Admin/Categories/Index">Categories</a></li>
                <li class="breadcrumb-item"><a asp-page="Index" asp-route-categoryId="@Model.Attribute?.CategoryId">@Model.Attribute?.Category?.Name Attributes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete @Model.Attribute?.Name</li>
            </ol>
        </nav>

        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Delete Attribute
                </h4>
            </div>
            <div class="card-body">
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <p class="lead">Are you sure you want to delete this attribute?</p>

                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Attribute?.Name</dd>

                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.Attribute?.AttributeType</span></dd>

                    @if (!string.IsNullOrEmpty(Model.Attribute?.Description))
                    {
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Attribute.Description</dd>
                    }

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Attribute?.Category?.Name</dd>

                    <dt class="col-sm-4">Products Using</dt>
                    <dd class="col-sm-8">@Model.ProductCount</dd>
                </dl>

                @if (Model.ProductCount > 0)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Cannot delete:</strong> This attribute is used by @Model.ProductCount product(s). 
                        Consider deprecating it instead.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action cannot be undone. The attribute definition will be permanently deleted.
                    </div>
                }
            </div>
            <div class="card-footer">
                @if (Model.ProductCount == 0)
                {
                    <form method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Attribute
                        </button>
                        <a asp-page="Index" asp-route-categoryId="@Model.Attribute?.CategoryId" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </form>
                }
                else
                {
                    <a asp-page="Index" asp-route-categoryId="@Model.Attribute?.CategoryId" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Back to Attributes
                    </a>
                }
            </div>
        </div>
    </div>
</div>
