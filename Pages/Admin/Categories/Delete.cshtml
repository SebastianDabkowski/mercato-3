@page "{id:int}"
@model MercatoApp.Pages.Admin.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Category</li>
                </ol>
            </nav>
            <h1>Delete Category</h1>
            <p class="text-muted">Confirm deletion of this category.</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }

        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <p>Are you sure you want to delete this category?</p>
                
                <dl class="row mb-0">
                    <dt class="col-sm-4">Category Name</dt>
                    <dd class="col-sm-8"><strong>@Model.Category?.Name</strong></dd>
                    
                    @if (Model.Category?.ParentCategory != null)
                    {
                        <dt class="col-sm-4">Parent Category</dt>
                        <dd class="col-sm-8">@Model.Category.ParentCategory.Name</dd>
                    }
                    
                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Category?.IsActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Assigned Products</dt>
                    <dd class="col-sm-8">
                        @if (Model.ProductCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@Model.ProductCount product(s)</span>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Child Categories</dt>
                    <dd class="col-sm-8">
                        @if (Model.HasChildCategories)
                        {
                            <span class="badge bg-warning text-dark">Has children</span>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        @if (Model.HasChildCategories)
        {
            <div class="alert alert-warning" role="alert">
                <strong>Warning:</strong> This category has child categories. 
                You must move or delete all child categories before you can delete this category.
            </div>
        }

        @if (Model.ProductCount > 0)
        {
            <div class="alert alert-warning" role="alert">
                <strong>Warning:</strong> This category has @Model.ProductCount product(s) assigned. 
                You must reassign all products to another category before you can delete this category.
            </div>
        }

        @{
            var canDelete = !Model.HasChildCategories && Model.ProductCount == 0;
        }

        <form method="post">
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger" @(canDelete ? "" : "disabled")>
                    <i class="bi bi-trash"></i> Delete Category
                </button>
            </div>
        </form>
    </div>
</div>
