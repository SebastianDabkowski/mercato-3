@page "{id:int}"
@model MercatoApp.Pages.Admin.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Category</li>
                </ol>
            </nav>
            <h1>Edit Category</h1>
            <p class="text-muted">Update category information.</p>
        </div>

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <form method="post">
            <input type="hidden" asp-for="Input.Id" />
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Category Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="e.g., Electronics, Fashion, Home & Garden" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                        <div class="form-text">Enter a descriptive name for the category (max 100 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ParentCategoryId" class="form-label"></label>
                        <select asp-for="Input.ParentCategoryId" asp-items="Model.ParentCategories" class="form-select">
                        </select>
                        <span asp-validation-for="Input.ParentCategoryId" class="text-danger"></span>
                        <div class="form-text">Select a parent category to create a subcategory, or leave as root.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.DisplayOrder" class="form-label"></label>
                        <input asp-for="Input.DisplayOrder" class="form-control" type="number" min="0" placeholder="0" />
                        <span asp-validation-for="Input.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first when listing categories.</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" role="switch" />
                            <label asp-for="Input.IsActive" class="form-check-label"></label>
                        </div>
                        <div class="form-text">Inactive categories are hidden from sellers when assigning products.</div>
                    </div>
                </div>
            </div>

            @if (Model.ProductCount > 0)
            {
                <div class="alert alert-info" role="alert">
                    <strong>Note:</strong> This category has <strong>@Model.ProductCount</strong> product(s) assigned. 
                    Renaming this category will update the category name on all assigned products.
                </div>
            }

            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                <div>
                    <a asp-page="Delete" asp-route-id="@Model.Input.Id" class="btn btn-outline-danger me-2">Delete</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
