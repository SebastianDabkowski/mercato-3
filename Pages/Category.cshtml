@page "/category/{id:int}"
@model MercatoApp.Pages.CategoryModel
@{
    ViewData["Title"] = Model.Category?.Name ?? "Category";
}

@if (Model.Category != null)
{
    <div class="container py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Category.Name</li>
            </ol>
        </nav>

        <!-- Category Header -->
        <div class="mb-4">
            <h1 class="display-5 mb-3">@Model.Category.Name</h1>
            
            <!-- Subcategories -->
            @if (Model.Subcategories.Count > 0)
            {
                <div class="mb-4">
                    <h5 class="mb-3">Browse Subcategories</h5>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var subcategory in Model.Subcategories)
                        {
                            <a asp-page="/Category" asp-route-id="@subcategory.Id" class="btn btn-outline-primary">
                                @subcategory.Name
                                @if (subcategory.ProductCount > 0)
                                {
                                    <span class="badge bg-secondary ms-1">@subcategory.ProductCount</span>
                                }
                            </a>
                        }
                    </div>
                </div>
            }

            <!-- Product count and sort -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                @if (Model.TotalProducts > 0)
                {
                    <p class="text-muted mb-0">
                        Showing @Model.StartIndex - @Model.EndIndex of @Model.TotalProducts products
                    </p>
                    
                    <!-- Sort Dropdown -->
                    <div class="d-flex align-items-center">
                        <label for="sortBy" class="me-2 mb-0 text-muted">Sort by:</label>
                        <select id="sortBy" 
                                name="sortBy" 
                                class="form-select form-select-sm" 
                                style="width: auto;"
                                onchange="this.form.submit()">
                            <option value="@ProductSortOption.Newest" selected="@(Model.SortBy == ProductSortOption.Newest || Model.SortBy == null)">Newest</option>
                            <option value="@ProductSortOption.PriceAscending" selected="@(Model.SortBy == ProductSortOption.PriceAscending)">Price: Low to High</option>
                            <option value="@ProductSortOption.PriceDescending" selected="@(Model.SortBy == ProductSortOption.PriceDescending)">Price: High to Low</option>
                            <option value="@ProductSortOption.Relevance" selected="@(Model.SortBy == ProductSortOption.Relevance)">Relevance</option>
                        </select>
                    </div>
                }
            </div>
        </div>

        <!-- Hidden form for sort dropdown -->
        <form method="get" asp-page="/Category" asp-route-id="@Model.Category.Id" id="sortForm" style="display: none;">
            <input type="hidden" name="page" value="@Model.CurrentPage" />
            @if (Model.MinPrice.HasValue)
            {
                <input type="hidden" name="MinPrice" value="@Model.MinPrice" />
            }
            @if (Model.MaxPrice.HasValue)
            {
                <input type="hidden" name="MaxPrice" value="@Model.MaxPrice" />
            }
            @if (Model.Conditions != null)
            {
                @foreach (var condition in Model.Conditions)
                {
                    <input type="hidden" name="Conditions" value="@condition" />
                }
            }
            @if (Model.StoreIds != null)
            {
                @foreach (var storeId in Model.StoreIds)
                {
                    <input type="hidden" name="StoreIds" value="@storeId" />
                }
            }
        </form>

        <!-- Products Grid -->
        @if (Model.Products.Count > 0 || Model.TotalProducts == 0)
        {
            <div class="row">
                <!-- Filter Sidebar -->
                <div class="col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                                </svg>
                                Filters
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="get" asp-page="/Category" asp-route-id="@Model.Category.Id">
                                @if (Model.HasActiveFilters)
                                {
                                    <div class="mb-3">
                                        <a asp-page="/Category" asp-route-id="@Model.Category.Id" class="btn btn-sm btn-outline-danger w-100">
                                            Clear All Filters
                                        </a>
                                    </div>
                                }

                                <!-- Price Range Filter -->
                                <div class="mb-4">
                                    <h6 class="fw-bold">Price Range</h6>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="number" 
                                                   name="MinPrice" 
                                                   class="form-control form-control-sm" 
                                                   placeholder="Min" 
                                                   value="@Model.MinPrice"
                                                   min="0"
                                                   step="0.01">
                                        </div>
                                        <div class="col-6">
                                            <input type="number" 
                                                   name="MaxPrice" 
                                                   class="form-control form-control-sm" 
                                                   placeholder="Max" 
                                                   value="@Model.MaxPrice"
                                                   min="0"
                                                   step="0.01">
                                        </div>
                                    </div>
                                </div>

                                <!-- Condition Filter -->
                                <div class="mb-4">
                                    <h6 class="fw-bold">Condition</h6>
                                    @foreach (var condition in Enum.GetValues<ProductCondition>())
                                    {
                                        var isChecked = Model.Conditions?.Contains(condition) ?? false;
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   name="Conditions" 
                                                   value="@condition" 
                                                   id="condition_@condition"
                                                   @(isChecked ? "checked" : "")>
                                            <label class="form-check-label" for="condition_@condition">
                                                @condition
                                            </label>
                                        </div>
                                    }
                                </div>

                                <!-- Seller Filter -->
                                @if (Model.AvailableStores.Count > 0)
                                {
                                    <div class="mb-4">
                                        <h6 class="fw-bold">Seller</h6>
                                        <div style="max-height: 250px; overflow-y: auto;">
                                            @foreach (var store in Model.AvailableStores)
                                            {
                                                var isChecked = Model.StoreIds?.Contains(store.Id) ?? false;
                                                <div class="form-check">
                                                    <input class="form-check-input" 
                                                           type="checkbox" 
                                                           name="StoreIds" 
                                                           value="@store.Id" 
                                                           id="store_@store.Id"
                                                           @(isChecked ? "checked" : "")>
                                                    <label class="form-check-label" for="store_@store.Id">
                                                        @store.StoreName
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <button type="submit" class="btn btn-primary w-100">
                                    Apply Filters
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Results Column -->
                <div class="col-lg-9">
                    @if (Model.Products.Count > 0)
                    {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mb-4">
                @foreach (var product in Model.Products)
                {
                    var imageList = product.ImageUrls?.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).ToList() ?? new List<string>();
                    var imageUrl = imageList.Count > 0 ? imageList[0] : "/images/placeholder-product.png";
                    
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow transition">
                            <a asp-page="/Product" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                <img src="@imageUrl" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@product.Title">@product.Title</h6>
                                    <p class="card-text text-muted small mb-2">
                                        @if (product.Store != null)
                                        {
                                            <span>by @product.Store.StoreName</span>
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 mb-0 text-primary">@product.Price.ToString("C")</span>
                                        @if (product.Stock > 0)
                                        {
                                            <small class="text-success">In Stock</small>
                                        }
                                        else
                                        {
                                            <small class="text-danger">Out of Stock</small>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Product pagination">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Button -->
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" 
                               href="@Model.GetPageUrl(Model.CurrentPage - 1)"
                               aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <!-- Page Numbers -->
                        @{
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   href="@Model.GetPageUrl(1)">1</a>
                            </li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" 
                                   href="@Model.GetPageUrl(i)">@i</a>
                            </li>
                        }

                        @if (endPage < Model.TotalPages)
                        {
                            @if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" 
                                   href="@Model.GetPageUrl(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" 
                               href="@Model.GetPageUrl(Model.CurrentPage + 1)"
                               aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <!-- End of Results Indicator -->
                @if (Model.CurrentPage >= Model.TotalPages)
                {
                    <div class="text-center text-muted mt-3">
                        <small>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-1" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                            You've reached the end of the results
                        </small>
                    </div>
                }
            }
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-inbox text-muted" viewBox="0 0 16 16">
                                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438L14.933 9zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z"/>
                                </svg>
                            </div>
                            <h3>No Products Found</h3>
                            <p class="text-muted mb-4">
                                There are currently no products in this category@(Model.HasActiveFilters ? " matching your filters" : "").
                            </p>
                            
                            @if (Model.HasActiveFilters)
                            {
                                <div class="mb-4">
                                    <p class="mb-2"><strong>Active filters are limiting results.</strong></p>
                                    <a asp-page="/Category" asp-route-id="@Model.Category.Id" class="btn btn-outline-danger">
                                        Clear All Filters
                                    </a>
                                </div>
                            }
                            
                            @if (Model.Subcategories.Count > 0)
                            {
                                <p class="mb-3">Try browsing these subcategories:</p>
                                <div class="d-flex justify-content-center flex-wrap gap-2 mb-4">
                                    @foreach (var subcategory in Model.Subcategories.Take(5))
                                    {
                                        <a asp-page="/Category" asp-route-id="@subcategory.Id" class="btn btn-outline-primary">
                                            @subcategory.Name
                                        </a>
                                    }
                                </div>
                            }
                            
                            <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="container py-5">
        <div class="text-center">
            <h2>Category Not Found</h2>
            <p class="text-muted">The category you're looking for doesn't exist or is no longer available.</p>
            <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
        </div>
    </div>
}

