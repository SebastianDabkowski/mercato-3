@page
@model MercatoApp.Pages.Checkout.PaymentAuthorizeModel
@{
    ViewData["Title"] = "Payment Authorization";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Secure Payment Gateway
                    </h4>
                    <p class="small mb-0 mt-2">This is a simulated payment page for testing</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        <strong>Demo Mode:</strong> This is a simulation. No actual payment will be processed.
                    </div>

                    <h5 class="mb-3">Payment Details</h5>
                    
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Payment Method:</dt>
                        <dd class="col-sm-8">@Model.PaymentMethodName</dd>

                        <dt class="col-sm-4">Amount:</dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary h5">@Model.Amount.ToString("C")</strong>
                        </dd>

                        <dt class="col-sm-4">Transaction ID:</dt>
                        <dd class="col-sm-8">
                            <code>@Model.TransactionId</code>
                        </dd>
                    </dl>

                    <hr />

                    @if (Model.RequiresBlik || Model.PaymentMethodProviderId == "blik")
                    {
                        <!-- BLIK Code Entry -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-phone"></i> Enter BLIK Code
                            </h5>
                            <p class="text-muted small">
                                Open your banking app and generate a 6-digit BLIK code, then enter it below.
                            </p>
                            
                            @if (!string.IsNullOrEmpty(Model.BlikCode))
                            {
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> BLIK code received: <strong>@Model.BlikCode</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Please enter your BLIK code to continue
                                </div>
                                <form method="get" class="mb-3">
                                    <input type="hidden" name="transactionId" value="@Model.TransactionId" />
                                    <input type="hidden" name="requiresBlik" value="true" />
                                    
                                    <div class="input-group mb-3">
                                        <input type="text" 
                                               class="form-control form-control-lg text-center" 
                                               name="blikCode" 
                                               placeholder="000000" 
                                               maxlength="6" 
                                               pattern="[0-9]{6}" 
                                               required 
                                               style="letter-spacing: 0.5rem; font-size: 1.5rem;"
                                               autofocus />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-lg"></i> Submit Code
                                        </button>
                                    </div>
                                    <p class="text-muted small">
                                        <i class="bi bi-info-circle"></i> The code must be exactly 6 digits
                                    </p>
                                </form>
                            }
                        </div>
                    }

                    @if (Model.PaymentType == "bank")
                    {
                        <!-- Bank Transfer Details -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-bank"></i> Select Your Bank
                            </h5>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> You will be redirected to your bank to authorize the payment
                            </div>
                        </div>
                    }

                    <p class="text-muted small mb-4">
                        <i class="bi bi-lock"></i> Your payment information is protected with industry-standard encryption.
                    </p>

                    <form method="post">
                        <input type="hidden" name="transactionId" value="@Model.TransactionId" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="approve" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Authorize Payment
                            </button>
                            <button type="submit" name="action" value="cancel" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel Payment
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted small">
                    <i class="bi bi-shield-check"></i> Powered by MercatoApp Payment Gateway
                </div>
            </div>
        </div>
    </div>
</div>
