@page
@model MercatoApp.Pages.SearchModel
@{
    ViewData["Title"] = string.IsNullOrWhiteSpace(Model.Query) ? "Search" : $"Search results for '{Model.Query}'";
}

<div class="container py-4">
    <!-- Search Header -->
    <div class="mb-4">
        <h1 class="display-5 mb-3">
            @if (!string.IsNullOrWhiteSpace(Model.Query))
            {
                <span>Search Results for "@Model.Query"</span>
            }
            else
            {
                <span>Search Products</span>
            }
        </h1>

        <!-- Search Form -->
        <form method="get" asp-page="/Search" class="mb-4">
            <div class="input-group input-group-lg">
                <input type="text" 
                       name="query" 
                       class="form-control" 
                       placeholder="Search for products..." 
                       value="@Model.Query"
                       maxlength="200"
                       aria-label="Search query">
                <button class="btn btn-primary" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                    Search
                </button>
            </div>
        </form>

        <!-- Product count and pagination info -->
        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            @if (Model.TotalProducts > 0)
            {
                <p class="text-muted">
                    Showing @Model.StartIndex - @Model.EndIndex of @Model.TotalProducts product@(Model.TotalProducts != 1 ? "s" : "")
                </p>
            }
            else
            {
                <p class="text-muted">
                    No products found
                </p>
            }
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Query))
    {
        @if (Model.Products.Count > 0)
        {
            <!-- Products Grid -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-4">
                @foreach (var product in Model.Products)
                {
                    var imageList = product.ImageUrls?.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).ToList() ?? new List<string>();
                    var imageUrl = imageList.Count > 0 ? imageList[0] : "/images/placeholder-product.png";
                    
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow transition">
                            <a asp-page="/Product" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                <img src="@imageUrl" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@product.Title">@product.Title</h6>
                                    <p class="card-text text-muted small mb-2">
                                        @if (product.Store != null)
                                        {
                                            <span>by @product.Store.StoreName</span>
                                        }
                                    </p>
                                    @if (product.CategoryEntity != null)
                                    {
                                        <p class="card-text text-muted small mb-2">
                                            <span class="badge bg-secondary">@product.CategoryEntity.Name</span>
                                        </p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 mb-0 text-primary">@product.Price.ToString("C")</span>
                                        @if (product.Stock > 0)
                                        {
                                            <small class="text-success">In Stock</small>
                                        }
                                        else
                                        {
                                            <small class="text-danger">Out of Stock</small>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Search results pagination">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Button -->
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="/Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <!-- Page Numbers -->
                        @{
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Search" asp-route-query="@Model.Query" asp-route-page="1">1</a>
                            </li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="/Search" asp-route-query="@Model.Query" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (endPage < Model.TotalPages)
                        {
                            @if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" asp-page="/Search" asp-route-query="@Model.Query" asp-route-page="@Model.TotalPages">@Model.TotalPages</a>
                            </li>
                        }

                        <!-- Next Button -->
                        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="/Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-search text-muted" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                </div>
                <h3>No Products Found</h3>
                <p class="text-muted mb-4">
                    We couldn't find any products matching "@Model.Query".
                </p>
                
                <div class="mb-4">
                    <p class="mb-2"><strong>Try adjusting your search:</strong></p>
                    <ul class="list-unstyled text-muted">
                        <li>• Check your spelling</li>
                        <li>• Try more general keywords</li>
                        <li>• Try different keywords</li>
                    </ul>
                </div>
                
                <a asp-page="/Index" class="btn btn-primary">Browse Categories</a>
            </div>
        }
    }
    else
    {
        <!-- Initial state - no search performed yet -->
        <div class="text-center py-5">
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-search text-muted" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
            </div>
            <h3>Search for Products</h3>
            <p class="text-muted mb-4">
                Enter keywords in the search box above to find products.
            </p>
            <a asp-page="/Index" class="btn btn-outline-primary">Browse Categories</a>
        </div>
    }
</div>
